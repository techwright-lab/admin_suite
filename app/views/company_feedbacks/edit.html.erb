<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  
  <!-- Back Button -->
    <div class="mb-6">
      <%= link_to interview_application_path(@application), 
          class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white" do %>
        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Application
      <% end %>
    </div>

    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
        Edit Company Feedback
      </h1>
      <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
        For <%= @application.job_role.title %> at <%= @application.company.name %>
      </p>
    </div>

    <!-- Form Card -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <%= render "form", application: @application, feedback: @feedback %>
    </div>

    <!-- Delete Section -->
    <div class="mt-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-red-200 dark:border-red-800 p-6">
      <div class="flex items-start justify-between">
        <div>
          <h3 class="text-lg font-medium text-red-900 dark:text-red-400">Delete Feedback</h3>
          <p class="mt-1 text-sm text-red-700 dark:text-red-300">
            This action cannot be undone. This will permanently delete this feedback.
          </p>
        </div>
        <%= button_to "Delete Feedback", 
            interview_application_company_feedback_path(@application, @feedback),
            method: :delete,
            data: { turbo_confirm: "Are you sure you want to delete this feedback?" },
            class: "ml-4 px-4 py-2 text-sm font-medium text-white bg-red-600 hover:bg-red-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    </div>
</div>
