  <!-- Mobile: compact selector -->
  <div class="lg:hidden mb-6">
    <label for="settings_tab" class="block text-sm font-medium text-gray-700 dark:text-gray-300">
      Section
    </label>
    <div class="mt-2">
      <select
        id="settings_tab"
        name="tab"
        class="form-control"
        onchange="window.location = this.value"
        aria-label="Select settings section"
      >
        <% nav_items.each do |item| %>
          <option value="<%= settings_path(tab: item[:key]) %>" <%= "selected" if @active_tab == item[:key] %>>
            <%= item[:label] %>
          </option>
        <% end %>
      </select>
    </div>
  </div>

  <!-- Desktop: sidebar + content -->
  <div class="lg:grid lg:grid-cols-12 lg:gap-8">
    <aside class="hidden lg:block lg:col-span-3">
      <nav aria-label="Settings navigation" class="sticky top-6">
        <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl p-2">
          <ul class="space-y-1">
            <% nav_items.each do |item| %>
              <% active = (@active_tab == item[:key]) %>
              <li>
                <%= link_to settings_path(tab: item[:key]),
                  class: [
                    "flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition-colors",
                    (active ? "bg-primary-50 text-primary-700 dark:bg-primary-900/20 dark:text-primary-300" : "text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-800")
                  ].join(" "),
                  aria: { current: (active ? "page" : nil) } do %>
                  <svg class="w-5 h-5 flex-shrink-0 <%= active ? 'text-primary-500 dark:text-primary-400' : 'text-gray-400 dark:text-gray-500' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="<%= item[:icon] %>" />
                  </svg>
                  <span class="flex-1"><%= item[:label] %></span>
                  <% if active %>
                    <svg class="w-4 h-4 text-primary-500 dark:text-primary-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  <% end %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </aside>

    <main class="lg:col-span-9">
      <% case @active_tab %>
      <% when "profile" %>
        <%= render "settings/profile", user: @user, companies: @companies, job_roles: @job_roles %>
      <% when "work_experience" %>
        <%= render "settings/work_experience" %>
      <% when "targets" %>
        <%= render "settings/targets" %>
      <% when "general" %>
        <%= render "settings/general", preference: @preference %>
      <% when "notifications" %>
        <%= render "settings/notifications", preference: @preference %>
      <% when "ai_preferences" %>
        <%= render "settings/ai_preferences", preference: @preference %>
      <% when "integrations" %>
        <%= render "settings/integrations", user: @user %>
      <% when "security" %>
        <%= render "settings/security", user: @user, sessions: @sessions %>
      <% when "privacy" %>
        <%= render "settings/privacy", user: @user, preference: @preference %>
      <% when "subscription" %>
        <%= render "settings/subscription",
            user: @user,
            entitlements: @entitlements,
            plans: @plans %>
      <% when "billing" %>
        <%= render "settings/billing",
            user: @user,
            billing_customer: @billing_customer,
            billing_history: @billing_history || [] %>
      <% else %>
        <%= render "settings/profile", user: @user, companies: @companies, job_roles: @job_roles %>
      <% end %>
    </main>
  </div>
</div>
