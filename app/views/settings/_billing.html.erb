<%# locals: (user:, billing_customer:, billing_history:) %>

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl p-6">
  <div class="mb-6">
    <h2 class="text-xl font-bold text-gray-900 dark:text-white">Billing</h2>
    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
      View your payment method, invoices, and billing history.
    </p>
  </div>

  <div class="space-y-6">
    <%# Payment Method Card %>
    <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/50 p-5">
      <div class="flex flex-col sm:flex-row items-start justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-lg bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 flex items-center justify-center">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-base font-semibold text-gray-900 dark:text-white">Payment Method</h3>
            <% if billing_customer %>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                Managed through LemonSqueezy
              </p>
            <% else %>
              <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                No payment method on file
              </p>
            <% end %>
          </div>
        </div>

        <% if billing_customer %>
          <%= link_to billing_portal_path,
              class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors" do %>
            Update Payment Method
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          <% end %>
        <% end %>
      </div>
    </div>

    <%# Billing History %>
    <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 overflow-hidden">
      <div class="px-5 py-4 border-b border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
          <h3 class="text-base font-semibold text-gray-900 dark:text-white">Billing History</h3>
          <% if billing_customer %>
            <%= link_to billing_portal_path,
                class: "text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium" do %>
              View all invoices →
            <% end %>
          <% end %>
        </div>
      </div>

      <% if billing_history.blank? %>
        <div class="p-8 text-center">
          <div class="w-12 h-12 mx-auto rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
            </svg>
          </div>
          <p class="text-sm text-gray-500 dark:text-gray-400">
            No billing history yet. Your invoices and receipts will appear here once you subscribe.
          </p>
        </div>
      <% else %>
        <div class="divide-y divide-gray-200 dark:divide-gray-700">
          <% billing_history.each do |entry| %>
            <div class="px-5 py-4 flex items-center justify-between gap-4">
              <div class="flex items-center gap-4 min-w-0">
                <div class="w-10 h-10 rounded-lg flex items-center justify-center flex-shrink-0
                  <% if entry[:status] == 'active' %>
                    bg-green-100 dark:bg-green-900/30
                  <% elsif entry[:status] == 'cancelled' %>
                    bg-amber-100 dark:bg-amber-900/30
                  <% else %>
                    bg-gray-100 dark:bg-gray-800
                  <% end %>
                ">
                  <% if entry[:status] == 'active' %>
                    <svg class="w-5 h-5 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  <% elsif entry[:status] == 'cancelled' %>
                    <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  <% else %>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  <% end %>
                </div>
                <div class="min-w-0">
                  <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
                    <%= entry[:plan_name] %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    <%= entry[:date]&.strftime("%B %d, %Y") %>
                  </p>
                </div>
              </div>

              <div class="flex items-center gap-4">
                <div class="text-right">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    $<%= format("%.2f", entry[:amount]) %>
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400 uppercase">
                    <%= entry[:currency] %>
                  </p>
                </div>

                <% if billing_customer %>
                  <%= link_to billing_portal_path,
                      class: "inline-flex items-center gap-1 px-3 py-1.5 text-xs font-medium text-gray-600 dark:text-gray-300 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors",
                      title: "View receipt in billing portal" do %>
                    <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Receipt
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <%# Billing Support %>
    <div class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 p-5">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center flex-shrink-0">
          <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-base font-semibold text-gray-900 dark:text-white">Need Help?</h3>
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
            If you have questions about your billing or need assistance with your subscription, please contact us.
          </p>
          <div class="mt-3">
            <a href="mailto:support@gleania.com" class="text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium">
              Contact Support →
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
