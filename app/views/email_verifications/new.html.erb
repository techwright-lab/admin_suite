<% content_for :title, "Resend Verification Email - Gleania" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
      Resend verification email
    </h2>

    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
      Enter your email address and we'll send you a new verification link.
    </p>
  </div>

  <!-- Form -->
  <%= form_with url: resend_email_verification_path, method: :post, class: "space-y-5", data: { turbo: false } do |form| %>
    <!-- Email -->
    <div>
      <%= form.label :email_address, "Email address", class: "form-label" %>

      <%= form.email_field :email_address,
          required: true,
          autofocus: true,
          autocomplete: "email",
          placeholder: "you@example.com",
          value: @email_address,
          class: "form-input" %>
    </div>

    <!-- Submit button -->
    <div>
      <%= form.submit "Send verification email",
          class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors" %>
    </div>
  <% end %>

  <!-- Info message -->
  <div class="rounded-lg bg-blue-50 dark:bg-blue-900/20 p-4">
    <div class="flex">
      <div class="shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-sm text-blue-700 dark:text-blue-300">
          Verification links expire after 24 hours. If your link has expired, request a new one here.
        </p>
      </div>
    </div>
  </div>

  <!-- Back to login link -->
  <p class="text-center text-sm text-gray-600 dark:text-gray-400">
    Remember your password?
    <%= link_to "Sign in", new_session_path, class: "
      font-medium text-primary-600 hover:text-primary-500
      dark:text-primary-400
    " %>
  </p>
</div>
