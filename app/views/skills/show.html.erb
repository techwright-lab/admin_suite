<% content_for :title, "#{@skill_tag.name} - Skill" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Sticky Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <%= link_to skills_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors" do %>
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Skills Dashboard
      <% end %>
    </div>
  </div>

  <!-- Page Header -->
  <div class="mb-8 pb-6 border-b border-gray-200 dark:border-gray-700">
    <div class="flex items-center gap-4">
      <div class="flex-shrink-0 w-14 h-14 rounded-xl bg-gradient-to-br from-primary-100 to-blue-100 dark:from-primary-900/30 dark:to-blue-900/30 flex items-center justify-center">
        <svg class="w-7 h-7 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= @skill_tag.name %></h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          Proficiency is shown separately from evidence of use
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
    <!-- Sidebar -->
    <aside class="lg:col-span-4 space-y-5">
      <!-- Proficiency Card -->
      <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-5">
        <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-4">Proficiency</h3>

        <% if @user_skill.present? %>
          <div class="text-center mb-4">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br <%= @user_skill.strong? ? 'from-emerald-100 to-green-100 dark:from-emerald-900/30 dark:to-green-900/30' : @user_skill.developing? ? 'from-amber-100 to-orange-100 dark:from-amber-900/30 dark:to-orange-900/30' : 'from-blue-100 to-indigo-100 dark:from-blue-900/30 dark:to-indigo-900/30' %>">
              <span class="text-3xl font-bold <%= @user_skill.strong? ? 'text-emerald-600 dark:text-emerald-400' : @user_skill.developing? ? 'text-amber-600 dark:text-amber-400' : 'text-blue-600 dark:text-blue-400' %>">
                <%= @user_skill.aggregated_level.round(1) %>
              </span>
            </div>
            <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Aggregated from resumes</p>
          </div>

          <div class="w-full bg-gray-100 dark:bg-gray-800 rounded-full h-2.5 mb-4">
            <div
              class="<%= @user_skill.strong? ? 'bg-emerald-500' : @user_skill.developing? ? 'bg-amber-500' : 'bg-blue-500' %> h-2.5 rounded-full transition-all duration-300"
              style="width: <%= (@user_skill.aggregated_level / 5.0 * 100).round %>%"
            ></div>
          </div>

          <div class="space-y-3 pt-3 border-t border-gray-100 dark:border-gray-800">
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600 dark:text-gray-400">Category</span>
              <span class="text-sm font-medium text-gray-900 dark:text-white"><%= @user_skill.category || "Other" %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600 dark:text-gray-400">Resumes</span>
              <span class="text-sm font-medium text-gray-900 dark:text-white tabular-nums"><%= @user_skill.resume_count || 0 %></span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-600 dark:text-gray-400">Last demonstrated</span>
              <span class="text-sm font-medium text-gray-900 dark:text-white">
                <%= @user_skill.last_demonstrated_at&.strftime("%b %Y") || "—" %>
              </span>
            </div>
          </div>
        <% else %>
          <div class="text-center py-6">
            <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-100 dark:bg-dark-800 flex items-center justify-center">
              <svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400">
              No proficiency record yet.
            </p>
            <%= link_to new_user_resume_path, class: "inline-flex items-center mt-3 text-sm text-primary-600 dark:text-primary-400 hover:underline" do %>
              Upload a resume
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Resume Sources -->
      <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-5">
        <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-4">Resume Sources</h3>
        <% if @resume_sources.any? %>
          <div class="space-y-2">
            <% @resume_sources.each do |r| %>
              <%= link_to user_resume_path(r), class: "flex items-center gap-3 p-3 rounded-lg bg-gray-50 dark:bg-dark-800 hover:bg-gray-100 dark:hover:bg-dark-700 transition-colors group" do %>
                <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <div class="min-w-0 flex-1">
                  <p class="text-sm font-medium text-gray-900 dark:text-white truncate group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors"><%= r.name %></p>
                  <p class="text-xs text-gray-500 dark:text-gray-400"><%= r.created_at.strftime("%b %d, %Y") %></p>
                </div>
                <svg class="w-4 h-4 text-gray-400 dark:text-gray-500 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              <% end %>
            <% end %>
          </div>
        <% else %>
          <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">No resume sources found.</p>
        <% end %>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="lg:col-span-8">
      <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50/50 dark:bg-dark-800/50">
          <h2 class="text-base font-semibold text-gray-900 dark:text-white">Evidence of Use</h2>
          <p class="text-sm text-gray-500 dark:text-gray-400">Where this skill appears in your work history</p>
        </div>
        <div class="p-5">
          <% if @experience_skill_rows.any? %>
            <div class="space-y-4">
              <% @experience_skill_rows.each do |row| %>
                <% exp = row.user_work_experience %>
                <div class="rounded-xl border border-gray-200 dark:border-gray-700 p-5 hover:border-gray-300 dark:hover:border-gray-600 transition-colors">
                  <div class="flex items-start justify-between gap-4">
                    <div class="min-w-0 flex-1">
                      <div class="flex items-center gap-2 flex-wrap">
                        <h3 class="text-base font-semibold text-gray-900 dark:text-white">
                          <%= exp.display_role_title.presence || "Role" %>
                        </h3>
                        <% if exp.current %>
                          <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[11px] font-semibold bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400 border border-emerald-200 dark:border-emerald-800/40">
                            Current
                          </span>
                        <% end %>
                      </div>
                      <p class="text-sm text-gray-600 dark:text-gray-400 mt-0.5">
                        <%= exp.display_company_name.presence || "Company" %>
                      </p>
                      <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                        <% if exp.start_date.present? || exp.end_date.present? %>
                          <%= exp.start_date&.strftime("%b %Y") || "?" %> — <%= exp.current ? "Present" : (exp.end_date&.strftime("%b %Y") || "?") %>
                        <% else %>
                          Dates not provided
                        <% end %>
                      </p>
                    </div>

                    <div class="flex-shrink-0 text-right">
                      <span class="inline-flex items-center px-2.5 py-1 text-xs font-medium text-gray-600 dark:text-gray-400 bg-gray-100 dark:bg-dark-800 border border-gray-200 dark:border-gray-700 rounded-lg">
                        <%= pluralize(row.source_count, "source") %>
                      </span>
                      <% if row.last_used_on.present? %>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1.5">
                          last used <%= row.last_used_on.strftime("%b %Y") %>
                        </p>
                      <% end %>
                    </div>
                  </div>

                  <% if exp.highlights.present? %>
                    <% highlights = Array(exp.highlights).map(&:to_s).map(&:strip).reject(&:blank?).first(3) %>
                    <% if highlights.any? %>
                      <div class="mt-4 pt-4 border-t border-gray-100 dark:border-gray-800">
                        <h4 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">Highlights</h4>
                        <ul class="space-y-1.5">
                          <% highlights.each do |h| %>
                            <li class="flex items-start gap-2 text-sm text-gray-700 dark:text-gray-300">
                              <span class="flex-shrink-0 w-1.5 h-1.5 rounded-full bg-primary-400 dark:bg-primary-500 mt-2"></span>
                              <%= h %>
                            </li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-12">
              <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-gray-100 dark:bg-dark-800 flex items-center justify-center">
                <svg class="w-6 h-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <p class="text-sm text-gray-500 dark:text-gray-400">
                No work-history evidence recorded for this skill yet.
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </main>
  </div>
</div>
