<%# locals: (application:, prep_artifacts_by_kind: {}) %>
<%
  prepare_access = entitled?(:interview_prepare_access)
  remaining_refreshes = entitlement_remaining(:interview_prepare_refreshes)
  artifacts = prep_artifacts_by_kind || {}
  generated_at = artifacts.values.map(&:computed_at).compact.max
  has_artifacts = artifacts.values.any?(&:computed?)
%>

<div class="space-y-6">
  <%# Hero Header %>
  <div class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-slate-800 to-gray-900 rounded-2xl p-8">
    <%# Decorative elements %>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2230%22%20height%3D%2230%22%20viewBox%3D%220%200%2030%2030%22%20fill%3D%22none%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%3E%3Cpath%20d%3D%22M1.22676%200C1.91374%200%202.45351%200.539773%202.45351%201.22676C2.45351%201.91374%201.91374%202.45351%201.22676%202.45351C0.539773%202.45351%200%201.91374%200%201.22676C0%200.539773%200.539773%200%201.22676%200Z%22%20fill%3D%22rgba(255,255,255,0.05)%22%2F%3E%3C%2Fsvg%3E')] opacity-60"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-gradient-to-bl from-primary-500/20 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-tr from-primary-600/15 to-transparent rounded-full blur-3xl"></div>
    
    <div class="relative flex flex-col sm:flex-row sm:items-center sm:justify-between gap-6">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-14 h-14 rounded-2xl bg-white/10 backdrop-blur-sm flex items-center justify-center border border-white/20">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-white">Interview Preparation</h1>
          <p class="mt-1 text-primary-200/80">AI-powered insights tailored to your profile and this role</p>
          <% if generated_at.present? %>
            <p class="mt-2 text-xs text-primary-300/60">
              <span class="inline-flex items-center gap-1">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Last generated <%= time_ago_in_words(generated_at) %> ago
              </span>
            </p>
          <% end %>
        </div>
      </div>

      <div class="flex flex-col items-end gap-2">
        <% if prepare_access %>
          <%= button_to refresh_interview_application_prep_path(application),
              method: :post,
              class: "group inline-flex items-center gap-2.5 px-6 py-3 text-sm font-semibold rounded-xl transition-all duration-200 #{has_artifacts ? 'bg-white/10 hover:bg-white/20 text-white border border-white/20' : 'bg-white text-primary-900 hover:bg-primary-50 shadow-xl shadow-black/20'}",
              disabled: (remaining_refreshes.is_a?(Integer) && remaining_refreshes <= 0),
              form: { data: { turbo: true } } do %>
            <svg class="w-5 h-5 <%= has_artifacts ? '' : 'text-primary-600' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <%= has_artifacts ? "Regenerate Prep" : "Generate Prep Pack" %>
          <% end %>
          <% if remaining_refreshes.present? %>
            <span class="text-xs text-primary-300/60">
              <%= remaining_refreshes %> refresh<%= remaining_refreshes == 1 ? '' : 'es' %> remaining
            </span>
          <% end %>
        <% else %>
          <%= link_to settings_path(tab: :subscription),
              class: "group inline-flex items-center gap-2.5 px-6 py-3 text-sm font-semibold bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 text-white rounded-xl shadow-xl shadow-amber-500/25 transition-all duration-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
            Upgrade to Pro
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <%# Upgrade Banner (for non-Pro) %>
  <% unless prepare_access %>
    <div class="relative overflow-hidden rounded-xl bg-gradient-to-r from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 border border-amber-200/60 dark:border-amber-800/40 p-5">
      <div class="flex items-start gap-4">
        <div class="flex-shrink-0 w-10 h-10 rounded-xl bg-amber-100 dark:bg-amber-900/40 flex items-center justify-center">
          <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
          </svg>
        </div>
        <div class="flex-1">
          <h3 class="text-sm font-semibold text-amber-900 dark:text-amber-200">Unlock Full Preparation</h3>
          <p class="mt-1 text-sm text-amber-700 dark:text-amber-300/80">
            Save job details now, but generating match analysis, focus areas, and personalized question framing requires Pro or Sprint.
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <%# Artifacts - Vertical Layout %>
  <% if has_artifacts %>
    <div class="space-y-6">
      <%# Match Analysis %>
      <% match = artifacts["match_analysis"] %>
      <% if match&.computed? %>
        <% label = match.content["match_label"].to_s %>
        <%
          label_color = case label
            when 'strong_match' then 'emerald'
            when 'partial_match' then 'amber'
            when 'stretch_role' then 'rose'
            else 'gray'
          end
        %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200/80 dark:border-gray-700/80 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-<%= label_color %>-50 to-transparent dark:from-<%= label_color %>-900/20 border-b border-gray-100 dark:border-gray-700/50">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-<%= label_color %>-100 dark:bg-<%= label_color %>-900/40 flex items-center justify-center">
                  <svg class="w-5 h-5 text-<%= label_color %>-600 dark:text-<%= label_color %>-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-base font-semibold text-gray-900 dark:text-white">Match Analysis</h3>
                  <p class="text-xs text-gray-500 dark:text-gray-400">How well you fit this role</p>
                </div>
              </div>
              <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-bold uppercase tracking-wide
                bg-<%= label_color %>-100 text-<%= label_color %>-700 dark:bg-<%= label_color %>-900/40 dark:text-<%= label_color %>-300">
                <span class="w-2 h-2 rounded-full bg-<%= label_color %>-500 animate-pulse"></span>
                <%= label.to_s.humanize.presence || "Unknown" %>
              </span>
            </div>
          </div>

          <div class="p-6 space-y-4">
            <% if match.content["notes"].present? %>
              <div class="px-3 py-2 rounded-lg bg-gray-50 dark:bg-gray-900/50 border-l-2 border-gray-300 dark:border-gray-600">
                <p class="text-xs text-gray-500 dark:text-gray-400 leading-relaxed">
                  <%= match.content["notes"] %>
                </p>
              </div>
            <% end %>

            <%# Stacked vertically for better readability %>
            <div class="space-y-3">
              <% [
                { title: "Strong in", key: "strong_in", color: "emerald", icon: "M5 13l4 4L19 7" },
                { title: "Partial", key: "partial_in", color: "amber", icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" },
                { title: "Missing / Risky", key: "missing_or_risky", color: "rose", icon: "M6 18L18 6M6 6l12 12" }
              ].each do |section| %>
                <% items = Array(match.content[section[:key]]).map(&:to_s).map(&:strip).reject(&:blank?) %>
                <% next if items.empty? %>
                <div class="rounded-xl bg-<%= section[:color] %>-50 dark:bg-<%= section[:color] %>-900/20 border border-<%= section[:color] %>-200 dark:border-<%= section[:color] %>-800/40 p-4">
                  <div class="flex items-center gap-2 mb-3">
                    <div class="w-7 h-7 rounded-lg bg-<%= section[:color] %>-100 dark:bg-<%= section[:color] %>-900/40 flex items-center justify-center">
                      <svg class="w-4 h-4 text-<%= section[:color] %>-600 dark:text-<%= section[:color] %>-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= section[:icon] %>"/>
                      </svg>
                    </div>
                    <span class="text-sm font-semibold text-<%= section[:color] %>-800 dark:text-<%= section[:color] %>-300"><%= section[:title] %></span>
                  </div>
                  <div class="flex flex-wrap gap-2">
                    <% items.first(8).each do |item| %>
                      <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-white dark:bg-gray-800 text-gray-800 dark:text-gray-200 border border-<%= section[:color] %>-200 dark:border-<%= section[:color] %>-700/50 shadow-sm">
                        <%= item %>
                      </span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% elsif match&.failed? %>
        <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl border border-red-200 dark:border-red-800/50 p-6">
          <p class="text-sm text-red-700 dark:text-red-300">Match analysis failed: <%= match.error_message.presence || "Unknown error" %></p>
        </div>
      <% end %>

      <%# Strength Positioning %>
      <% sp = artifacts["strength_positioning"] %>
      <% if sp&.computed? %>
        <% strengths = Array(sp.content["strengths"]).select { |s| s.is_a?(Hash) } %>
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200/80 dark:border-gray-700/80 overflow-hidden">
          <div class="px-6 py-4 bg-gradient-to-r from-violet-50 to-transparent dark:from-violet-900/20 border-b border-gray-100 dark:border-gray-700/50">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-xl bg-violet-100 dark:bg-violet-900/40 flex items-center justify-center">
                <svg class="w-5 h-5 text-violet-600 dark:text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-base font-semibold text-gray-900 dark:text-white">Strength Positioning</h3>
                <p class="text-xs text-gray-500 dark:text-gray-400">Highlight these in your interview</p>
              </div>
            </div>
          </div>

          <div class="p-6">
            <% if strengths.any? %>
              <div class="space-y-4">
                <% strengths.first(6).each_with_index do |s, idx| %>
                  <div class="rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <%# Header with strength title %>
                    <div class="flex items-center gap-3 px-4 py-3 bg-violet-50 dark:bg-violet-900/20 border-b border-violet-100 dark:border-violet-800/30">
                      <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-violet-100 dark:bg-violet-900/40 flex items-center justify-center text-sm font-bold text-violet-600 dark:text-violet-400">
                        <%= idx + 1 %>
                      </div>
                      <h4 class="text-sm font-semibold text-gray-900 dark:text-white"><%= s["title"] %></h4>
                    </div>
                    <%# Content area %>
                    <div class="p-4 bg-white dark:bg-gray-800 space-y-3">
                      <% if s["positioning"].present? %>
                        <div>
                          <p class="text-[10px] font-bold text-violet-600 dark:text-violet-400 uppercase tracking-wider mb-1.5">How to position</p>
                          <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed"><%= s["positioning"] %></p>
                        </div>
                      <% end %>
                      <% ev = Array(s["evidence_types"]).map(&:to_s).map(&:strip).reject(&:blank?) %>
                      <% if ev.any? %>
                        <div>
                          <p class="text-[10px] font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-1.5">Evidence to use</p>
                          <div class="flex flex-wrap gap-2">
                            <% ev.first(5).each do |e| %>
                              <span class="inline-flex items-center px-2.5 py-1 rounded-lg text-xs font-medium bg-violet-50 text-violet-700 dark:bg-violet-900/30 dark:text-violet-300 border border-violet-200 dark:border-violet-700/50">
                                <%= e %>
                              </span>
                            <% end %>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500 dark:text-gray-400">No strengths identified</p>
            <% end %>
          </div>
        </div>
      <% elsif sp&.failed? %>
        <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl border border-red-200 dark:border-red-800/50 p-6">
          <p class="text-sm text-red-700 dark:text-red-300">Strength positioning failed: <%= sp.error_message.presence || "Unknown error" %></p>
        </div>
      <% end %>
    </div>

    <%# Focus Areas (Full Width) %>
    <% focus = artifacts["focus_areas"] %>
    <% if focus&.computed? %>
      <% focus_items = Array(focus.content["focus_areas"]).select { |i| i.is_a?(Hash) } %>
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200/80 dark:border-gray-700/80 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-blue-50 to-transparent dark:from-blue-900/20 border-b border-gray-100 dark:border-gray-700/50">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-base font-semibold text-gray-900 dark:text-white">What to Focus On</h3>
              <p class="text-xs text-gray-500 dark:text-gray-400">Prioritized areas to prepare before your interview</p>
            </div>
          </div>
        </div>

        <div class="p-6">
          <% if focus_items.any? %>
            <div class="space-y-4">
              <% focus_items.first(6).each_with_index do |item, idx| %>
                <details class="group rounded-xl border border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-900/50 overflow-hidden hover:border-blue-300 dark:hover:border-blue-700 transition-colors">
                  <summary class="flex items-center gap-3 px-4 py-3 cursor-pointer select-none">
                    <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center text-sm font-bold text-blue-600 dark:text-blue-400">
                      <%= idx + 1 %>
                    </div>
                    <span class="flex-1 text-sm font-medium text-gray-900 dark:text-white"><%= item["title"] %></span>
                    <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </summary>
                  <div class="px-4 pb-4 pt-2 space-y-3 border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800">
                    <% if item["why_it_matters"].present? %>
                      <div>
                        <p class="text-[10px] font-bold text-blue-600 dark:text-blue-400 uppercase tracking-wider mb-1">Why it matters</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400"><%= item["why_it_matters"] %></p>
                      </div>
                    <% end %>

                    <% how = Array(item["how_to_prepare"]).map(&:to_s).map(&:strip).reject(&:blank?) %>
                    <% if how.any? %>
                      <div>
                        <p class="text-[10px] font-bold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider mb-1">How to prepare</p>
                        <ul class="space-y-1">
                          <% how.first(4).each do |b| %>
                            <li class="flex items-start gap-2 text-sm text-gray-600 dark:text-gray-400">
                              <svg class="w-4 h-4 text-emerald-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                              </svg>
                              <%= b %>
                            </li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>

                    <% exps = Array(item["experiences_to_use"]).map(&:to_s).map(&:strip).reject(&:blank?) %>
                    <% if exps.any? %>
                      <div>
                        <p class="text-[10px] font-bold text-violet-600 dark:text-violet-400 uppercase tracking-wider mb-1">Experiences to reference</p>
                        <div class="flex flex-wrap gap-1.5">
                          <% exps.first(4).each do |b| %>
                            <span class="inline-flex items-center px-2 py-1 rounded-lg text-xs font-medium bg-violet-50 text-violet-700 dark:bg-violet-900/30 dark:text-violet-300 border border-violet-200 dark:border-violet-800/50">
                              <%= b %>
                            </span>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </details>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 dark:text-gray-400">No focus areas identified</p>
          <% end %>
        </div>
      </div>
    <% elsif focus&.failed? %>
      <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl border border-red-200 dark:border-red-800/50 p-6">
        <p class="text-sm text-red-700 dark:text-red-300">Focus areas failed: <%= focus.error_message.presence || "Unknown error" %></p>
      </div>
    <% end %>

    <%# Question Framing (Full Width) %>
    <% qf = artifacts["question_framing"] %>
    <% if qf&.computed? %>
      <% questions = Array(qf.content["questions"]).select { |q| q.is_a?(Hash) } %>
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200/80 dark:border-gray-700/80 overflow-hidden">
        <div class="px-6 py-4 bg-gradient-to-r from-teal-50 to-transparent dark:from-teal-900/20 border-b border-gray-100 dark:border-gray-700/50">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-teal-100 dark:bg-teal-900/40 flex items-center justify-center">
              <svg class="w-5 h-5 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-base font-semibold text-gray-900 dark:text-white">Common Questions</h3>
              <p class="text-xs text-gray-500 dark:text-gray-400">How to frame your answers based on your background</p>
            </div>
          </div>
        </div>

        <div class="p-6">
          <% if questions.any? %>
            <div class="space-y-4">
              <% questions.first(8).each_with_index do |q, idx| %>
                <details class="group rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden hover:border-teal-300 dark:hover:border-teal-700 transition-colors">
                  <summary class="flex items-start gap-3 px-4 py-4 cursor-pointer select-none bg-gray-50 dark:bg-gray-900/50 group-open:bg-teal-50 dark:group-open:bg-teal-900/20">
                    <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-teal-100 dark:bg-teal-900/40 flex items-center justify-center text-sm font-bold text-teal-600 dark:text-teal-400 mt-0.5">
                      Q<%= idx + 1 %>
                    </div>
                    <span class="flex-1 text-sm font-medium text-gray-900 dark:text-white leading-relaxed"><%= q["question"] %></span>
                    <svg class="w-5 h-5 text-gray-400 transition-transform group-open:rotate-180 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </summary>
                  <div class="px-4 pb-4 pt-4 bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                      <% [
                        { title: "How to Frame", key: "framing", color: "teal", icon: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" },
                        { title: "Answer Outline", key: "outline", color: "blue", icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" },
                        { title: "Pitfalls to Avoid", key: "pitfalls", color: "rose", icon: "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" }
                      ].each do |section| %>
                        <% items = Array(q[section[:key]]).map(&:to_s).map(&:strip).reject(&:blank?) %>
                        <div class="rounded-lg bg-gray-50 dark:bg-gray-900/50 p-3">
                          <div class="flex items-center gap-1.5 mb-2">
                            <svg class="w-4 h-4 text-<%= section[:color] %>-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="<%= section[:icon] %>"/>
                            </svg>
                            <span class="text-[10px] font-bold text-<%= section[:color] %>-600 dark:text-<%= section[:color] %>-400 uppercase tracking-wider"><%= section[:title] %></span>
                          </div>
                          <% if items.any? %>
                            <ul class="space-y-1.5">
                              <% items.first(4).each do |b| %>
                                <li class="text-xs text-gray-600 dark:text-gray-400 leading-relaxed pl-3 border-l-2 border-<%= section[:color] %>-200 dark:border-<%= section[:color] %>-800"><%= b %></li>
                              <% end %>
                            </ul>
                          <% else %>
                            <p class="text-xs text-gray-400 dark:text-gray-500 italic">—</p>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </details>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500 dark:text-gray-400">No questions identified</p>
          <% end %>
        </div>
      </div>
    <% elsif qf&.failed? %>
      <div class="bg-red-50 dark:bg-red-900/20 rounded-2xl border border-red-200 dark:border-red-800/50 p-6">
        <p class="text-sm text-red-700 dark:text-red-300">Question framing failed: <%= qf.error_message.presence || "Unknown error" %></p>
      </div>
    <% end %>

  <% else %>
    <%# Empty State %>
    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200/80 dark:border-gray-700/80 p-12">
      <div class="max-w-md mx-auto text-center">
        <div class="w-16 h-16 mx-auto rounded-2xl bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 flex items-center justify-center mb-6">
          <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No prep pack yet</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">
          Generate your personalized interview preparation to see match analysis, focus areas, common questions, and strength positioning.
        </p>
        <% if prepare_access %>
          <%= button_to refresh_interview_application_prep_path(application),
              method: :post,
              class: "inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-500 hover:to-primary-400 rounded-xl shadow-lg shadow-primary-500/25 transition-all duration-200",
              form: { data: { turbo: true } } do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Generate Prep Pack
          <% end %>
        <% else %>
          <%= link_to settings_path(tab: :subscription),
              class: "inline-flex items-center gap-2 px-6 py-3 text-sm font-semibold text-white bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-400 hover:to-orange-400 rounded-xl shadow-lg shadow-amber-500/25 transition-all duration-200" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
            Upgrade to Generate
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <%# Job Description Source %>
  <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-200/80 dark:border-gray-700/80 overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-gray-50 to-transparent dark:from-gray-900/50 border-b border-gray-100 dark:border-gray-700/50">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
          <svg class="w-5 h-5 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <div>
          <h3 class="text-base font-semibold text-gray-900 dark:text-white">Job Description Source</h3>
          <p class="text-xs text-gray-500 dark:text-gray-400">
            <% if application.job_listing.present? %>
              Using linked job posting (recommended)
            <% else %>
              Paste the job description to improve prep accuracy
            <% end %>
          </p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <% if application.job_listing.present? %>
        <div class="flex items-center gap-4 p-4 rounded-xl bg-blue-50 dark:bg-blue-900/20 border border-blue-200/60 dark:border-blue-800/40 mb-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-blue-100 dark:bg-blue-900/40 flex items-center justify-center">
            <svg class="w-5 h-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
            </svg>
          </div>
          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-gray-900 dark:text-white truncate">
              <%= application.job_listing.display_title %>
            </p>
            <div class="flex items-center gap-2 mt-1 text-xs text-gray-500 dark:text-gray-400">
              <% if application.job_listing.location.present? %>
                <span><%= application.job_listing.location_display %></span>
              <% end %>
              <% if application.job_listing.url.present? %>
                <span>•</span>
                <a href="<%= application.job_listing.url %>" target="_blank" rel="noopener" class="text-blue-600 dark:text-blue-400 hover:underline">
                  View posting →
                </a>
              <% end %>
            </div>
          </div>
        </div>

        <details class="group">
          <summary class="flex items-center gap-2 cursor-pointer text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
            <svg class="w-4 h-4 transition-transform group-open:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
            </svg>
            Add extra context (optional)
          </summary>
          <div class="mt-4">
            <%= form_with model: application,
                url: update_job_description_interview_application_path(application),
                method: :patch do |f| %>
              <div>
                <%= f.text_area :job_description_text,
                    class: "w-full px-4 py-3 text-sm text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:focus:ring-primary-400 dark:focus:border-primary-400 placeholder-gray-400 dark:placeholder-gray-500 resize-y",
                    rows: 6,
                    placeholder: "Paste any additional context (e.g., team info, specific requirements not in the posting)…",
                    aria: { label: "Additional job context" } %>
              </div>
              <div class="mt-3 flex items-center justify-between gap-3">
                <p class="text-xs text-gray-500 dark:text-gray-400">This supplements the linked posting</p>
                <%= f.button "Save context",
                    class: "inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors",
                    data: { disable_with: "Saving..." } %>
              </div>
            <% end %>
          </div>
        </details>
      <% else %>
        <%= form_with model: application,
            url: update_job_description_interview_application_path(application),
            method: :patch do |f| %>
          <div>
            <%= f.text_area :job_description_text,
                class: "w-full px-4 py-3 text-sm text-gray-900 dark:text-gray-100 bg-white dark:bg-gray-900 border border-gray-300 dark:border-gray-600 rounded-xl focus:ring-2 focus:ring-primary-500 focus:border-primary-500 dark:focus:ring-primary-400 dark:focus:border-primary-400 placeholder-gray-400 dark:placeholder-gray-500 resize-y",
                rows: 10,
                placeholder: "Paste the full job description here (responsibilities, requirements, about the company)…",
                aria: { label: "Job description" } %>
          </div>
          <div class="mt-4 flex items-center justify-between gap-3">
            <p class="text-xs text-gray-500 dark:text-gray-400">Tip: include responsibilities + requirements for best results</p>
            <%= f.button "Save job description",
                class: "inline-flex items-center gap-2 px-5 py-2.5 text-sm font-semibold text-white bg-primary-600 hover:bg-primary-700 rounded-xl shadow-lg shadow-primary-500/25 transition-all duration-200",
                data: { disable_with: "Saving..." } %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
