<%# Table View %>

<%= turbo_frame_tag "applications-list" do %>
<!-- Data Table -->

<div
  class="
    bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200
    dark:border-gray-700 overflow-hidden
  "
>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-900">
        <tr>
          <% filter_params = { status: params[:status], view: params[:view], q: params[:q], pipeline_stage: params[:pipeline_stage], date_from: params[:date_from], date_to: params[:date_to] }.compact %>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            <%= link_to "Company", interview_applications_path(filter_params.merge(sort: params[:sort] == "company" ? "company_desc" : "company")), data: { turbo_frame: "applications-list" }, class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            <% if params[:sort] == "company" || params[:sort] == "company_desc" %>
              <svg
                class="inline-block w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="<%= params[:sort] == "company" ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>"
                />
              </svg>
            <% end %>
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            <%= link_to "Job Role", interview_applications_path(filter_params.merge(sort: params[:sort] == "role" ? "role_desc" : "role")), data: { turbo_frame: "applications-list" }, class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            <% if params[:sort] == "role" || params[:sort] == "role_desc" %>
              <svg
                class="inline-block w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="<%= params[:sort] == "role" ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>"
                />
              </svg>
            <% end %>
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            Pipeline Stage
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            Status
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            <%= link_to "Applied Date", interview_applications_path(filter_params.merge(sort: params[:sort] == "date" ? "date_desc" : "date")), data: { turbo_frame: "applications-list" }, class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            <% if params[:sort] == "date" || params[:sort] == "date_desc" %>
              <svg
                class="inline-block w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="<%= params[:sort] == "date" ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>"
                />
              </svg>
            <% end %>
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-right text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            Actions
          </th>
        </tr>
      </thead>
      <tbody
        class="
          bg-white dark:bg-gray-800 divide-y divide-gray-200
          dark:divide-gray-700
        "
      >
        <% if @applications.any? %>
          <% @applications.each do |application| %>
            <% display_company = application.display_company %>
            <% display_job_role = application.display_job_role %>
            <tr
              class="
                hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors
                cursor-pointer
              "
              onclick="window.location='<%= interview_application_path(application) %>'"
            >
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <% if display_company.logo_url.present? %>
                      <%= image_tag display_company.logo_url, alt: display_company.name, class: "h-10 w-10 rounded-lg object-cover" %>
                    <% else %>
                      <div
                        class="
                          h-10 w-10 bg-gray-100 dark:bg-gray-700 rounded-lg
                          flex items-center justify-center
                        "
                      >
                        <span class="text-sm font-bold text-gray-600 dark:text-gray-400">
                          <%= display_company.name[0].upcase %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= display_company.name %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white">
                  <%= display_job_role.title %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= pipeline_stage_badge_classes(application.pipeline_stage) %>">
                  <%= application.pipeline_stage_display %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= application_status_badge_classes(application.status) %>">
                  <%= (application.status || 'active').to_s.titleize %>
                </span>
              </td>
              <td
                class="
                  px-6 py-4 whitespace-nowrap text-sm text-gray-500
                  dark:text-gray-400
                "
              >
                <%= application.applied_at ? application.applied_at.strftime("%b %d, %Y") : application.created_at.strftime("%b %d, %Y") %>
              </td>
              <td
                class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"
                onclick="event.stopPropagation()"
              >
                <div class="flex items-center justify-end gap-2">
                  <%= link_to edit_interview_application_path(application),
                      class: "p-1 text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded",
                      title: "Edit" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                  <% end %>
                  
                  <!-- Actions Dropdown -->
                  <div class="relative" data-controller="dropdown">
                    <button 
                      type="button"
                      data-action="click->dropdown#toggle"
                      class="p-1 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 rounded"
                      title="More actions"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                      </svg>
                    </button>
                    
                    <div 
                      data-dropdown-target="menu"
                      class="hidden absolute right-0 mt-1 w-44 rounded-lg bg-white dark:bg-gray-800 shadow-lg ring-1 ring-black ring-opacity-5 dark:ring-gray-700 z-50"
                    >
                      <div class="py-1" role="menu">
                        <% if application.deleted? %>
                          <%= button_to restore_interview_application_path(application),
                              method: :patch,
                              class: "w-full flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                              role: "menuitem" do %>
                            <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            Restore
                          <% end %>
                        <% elsif application.active? %>
                          <%= button_to accept_interview_application_path(application), 
                              method: :patch,
                              class: "w-full flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                              role: "menuitem" do %>
                            <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Accept
                          <% end %>
                          
                          <%= button_to reject_interview_application_path(application), 
                              method: :patch,
                              class: "w-full flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                              role: "menuitem" do %>
                            <svg class="w-4 h-4 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Reject
                          <% end %>
                          
                          <%= button_to archive_interview_application_path(application), 
                              method: :patch,
                              class: "w-full flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                              role: "menuitem" do %>
                            <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                            </svg>
                            Archive
                          <% end %>
                        <% else %>
                          <%= button_to reactivate_interview_application_path(application), 
                              method: :patch,
                              class: "w-full flex items-center px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                              role: "menuitem" do %>
                            <svg class="w-4 h-4 mr-2 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            Reactivate
                          <% end %>
                        <% end %>
                        
                        <div class="border-t border-gray-200 dark:border-gray-700 my-1"></div>
                        
                        <% unless application.deleted? %>
                          <%= button_to interview_application_path(application),
                              method: :delete,
                              data: { turbo_confirm: "Delete this application? You can restore it within 3 months." },
                              class: "w-full flex items-center px-3 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20",
                              role: "menuitem" do %>
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Delete
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td
              colspan="6"
              class="
                px-6 py-12 text-center text-sm text-gray-500
                dark:text-gray-400
              "
            >
              No applications found.
              <%= link_to "Create your first application", "#", onclick: "document.getElementById('new-application-modal').dispatchEvent(new CustomEvent('modal:show')); return false;", class: "text-primary-600 hover:text-primary-700 dark:text-primary-400" %>.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy && @pagy.pages > 1 %>
    <div class="px-4 py-3 border-t border-gray-200 dark:border-gray-700">
      <%= render "shared/pagination", pagy: @pagy, turbo_frame: "applications-list" %>
    </div>
  <% end %>
</div>
<% end %>
