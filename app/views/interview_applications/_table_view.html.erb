<%# Table View with Filters %>

<!-- Filters Section -->

<div
  class="
    bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200
    dark:border-gray-700 p-4 mb-6
  "
>
  <%= form_with url: interview_applications_path, method: :get, local: true, class: "space-y-4", data: { turbo: false } do |form| %>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <!-- Status Filter -->
      <div>
        <%= form.label :status, "Status", class: "form-label" %>
        <%= form.select :status,
            options_for_select([
              ["All", ""],
              ["Active", "active"],
              ["Accepted", "accepted"],
              ["Rejected", "rejected"],
              ["Archived", "archived"]
            ], params[:status]),
            {},
            class: "form-select" %>
      </div>

      <!-- Pipeline Stage Filter -->
      <div>
        <%= form.label :pipeline_stage, "Pipeline Stage", class: "form-label" %>
        <%= form.select :pipeline_stage,
            options_for_select([
              ["All", ""],
              ["Applied", "applied"],
              ["Screening", "screening"],
              ["Interviewing", "interviewing"],
              ["Offer", "offer"],
              ["Closed", "closed"]
            ], params[:pipeline_stage]),
            {},
            class: "form-select" %>
      </div>

      <!-- Date From -->
      <div>
        <%= form.label :date_from, "Date From", class: "form-label" %>
        <%= form.date_field :date_from,
            value: params[:date_from],
            class: "form-input" %>
      </div>

      <!-- Date To -->
      <div>
        <%= form.label :date_to, "Date To", class: "form-label" %>
        <%= form.date_field :date_to,
            value: params[:date_to],
            class: "form-input" %>
      </div>
    </div>

    <!-- Filter Actions -->
    <div
      class="
        flex items-center justify-between pt-2 border-t border-gray-200
        dark:border-gray-700
      "
    >
      <div class="text-sm text-gray-600 dark:text-gray-400">
        <%= pluralize(@applications.count, "application") %> found
      </div>
      <div class="flex items-center gap-2">
        <%= link_to "Clear Filters", interview_applications_path, class: "px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700" %>
        <%= form.submit "Apply Filters", class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Data Table -->

<div
  class="
    bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200
    dark:border-gray-700 overflow-hidden
  "
>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-900">
        <tr>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            <%= link_to "Company", interview_applications_path(sort: params[:sort] == "company" ? "company_desc" : "company", status: params[:status], pipeline_stage: params[:pipeline_stage], date_from: params[:date_from], date_to: params[:date_to]), class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            <% if params[:sort] == "company" || params[:sort] == "company_desc" %>
              <svg
                class="inline-block w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="<%= params[:sort] == "company" ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>"
                />
              </svg>
            <% end %>
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            <%= link_to "Job Role", interview_applications_path(sort: params[:sort] == "role" ? "role_desc" : "role", status: params[:status], pipeline_stage: params[:pipeline_stage], date_from: params[:date_from], date_to: params[:date_to]), class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            <% if params[:sort] == "role" || params[:sort] == "role_desc" %>
              <svg
                class="inline-block w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="<%= params[:sort] == "role" ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>"
                />
              </svg>
            <% end %>
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            Pipeline Stage
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            Status
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-left text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            <%= link_to "Applied Date", interview_applications_path(sort: params[:sort] == "date" ? "date_desc" : "date", status: params[:status], pipeline_stage: params[:pipeline_stage], date_from: params[:date_from], date_to: params[:date_to]), class: "hover:text-gray-700 dark:hover:text-gray-300" %>
            <% if params[:sort] == "date" || params[:sort] == "date_desc" %>
              <svg
                class="inline-block w-4 h-4 ml-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="<%= params[:sort] == "date" ? 'M5 15l7-7 7 7' : 'M19 9l-7 7-7-7' %>"
                />
              </svg>
            <% end %>
          </th>
          <th
            scope="col"
            class="
              px-6 py-3 text-right text-xs font-medium text-gray-500
              dark:text-gray-400 uppercase tracking-wider
            "
          >
            Actions
          </th>
        </tr>
      </thead>
      <tbody
        class="
          bg-white dark:bg-gray-800 divide-y divide-gray-200
          dark:divide-gray-700
        "
      >
        <% if @applications.any? %>
          <% @applications.each do |application| %>
            <tr
              class="
                hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors
                cursor-pointer
              "
              onclick="window.location='<%= interview_application_path(application) %>'"
            >
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="flex-shrink-0 h-10 w-10">
                    <% if application.company.logo_url.present? %>
                      <%= image_tag application.company.logo_url, alt: application.company.name, class: "h-10 w-10 rounded-lg object-cover" %>
                    <% else %>
                      <div
                        class="
                          h-10 w-10 bg-gray-100 dark:bg-gray-700 rounded-lg
                          flex items-center justify-center
                        "
                      >
                        <span class="text-sm font-bold text-gray-600 dark:text-gray-400">
                          <%= application.company.name[0].upcase %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                  <div class="ml-4">
                    <div class="text-sm font-medium text-gray-900 dark:text-white">
                      <%= application.company.name %>
                    </div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm text-gray-900 dark:text-white">
                  <%= application.job_role.title %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case application.pipeline_stage.to_sym
                    when :applied then 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                    when :screening then 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400'
                    when :interviewing then 'bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400'
                    when :offer then 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
                    when :closed then 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                    end %>
                  "
                >
                  <%= application.pipeline_stage_display %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span
                  class="
                    inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    <%= case application.status&.to_sym
                    when :active then 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400'
                    when :accepted then 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
                    when :rejected then 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400'
                    when :archived then 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                    else 'bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400'
                    end %>
                  "
                >
                  <%= (application.status || 'active').to_s.titleize %>
                </span>
              </td>
              <td
                class="
                  px-6 py-4 whitespace-nowrap text-sm text-gray-500
                  dark:text-gray-400
                "
              >
                <%= application.applied_at ? application.applied_at.strftime("%b %d, %Y") : application.created_at.strftime("%b %d, %Y") %>
              </td>
              <td
                class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"
                onclick="event.stopPropagation()"
              >
                <div class="flex items-center justify-end gap-2">
                  <%= link_to edit_interview_application_path(application),
                      class: "text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300",
                      title: "Edit" do %>
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                  <% end %>
                  <%= link_to interview_application_path(application),
                      method: :delete,
                      data: { confirm: "Are you sure?", turbo: false },
                      class: "text-red-600 hover:text-red-900 dark:text-red-400 dark:hover:text-red-300",
                      title: "Delete" do %>
                    <svg
                      class="w-5 h-5"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                      />
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td
              colspan="6"
              class="
                px-6 py-12 text-center text-sm text-gray-500
                dark:text-gray-400
              "
            >
              No applications found.
              <%= link_to "Create your first application", "#", onclick: "document.getElementById('new-application-modal').dispatchEvent(new CustomEvent('modal:show')); return false;", class: "text-primary-600 hover:text-primary-700 dark:text-primary-400" %>.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
