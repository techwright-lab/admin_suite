<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  
  <!-- Back Button -->
  <div class="mb-6">
    <%= link_to interview_applications_path, 
        class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors" do %>
      <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Applications
    <% end %>
  </div>

  <!-- Application Header -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <div class="flex items-start justify-between">
      <div class="flex items-start gap-4">
        <!-- Company Logo -->
        <% display_company = @application.display_company %>
        <div class="flex-shrink-0 w-16 h-16 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center">
          <% if display_company.logo_url.present? %>
            <%= image_tag display_company.logo_url, 
                alt: display_company.name,
                class: "w-16 h-16 rounded-lg object-cover" %>
          <% else %>
            <span class="text-2xl font-bold text-gray-600 dark:text-gray-400">
              <%= display_company.name[0].upcase %>
            </span>
          <% end %>
        </div>

        <div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
            <%= @application.display_job_role.title %>
          </h1>
          <p class="mt-1 text-lg text-gray-600 dark:text-gray-400">
            <%= display_company.name %>
          </p>
          
          <!-- Badges -->
          <div class="flex items-center flex-wrap gap-2 mt-3">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= pipeline_stage_badge_classes(@application.pipeline_stage) %>">
              <%= @application.pipeline_stage_display %>
            </span>
            
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= application_status_badge_classes(@application.status) %>">
              <%= (@application.status || 'active').to_s.titleize %>
            </span>

            <% if @application.fit_assessment&.computed? %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 dark:bg-indigo-900/20 dark:text-indigo-300">
                Fit <%= @application.fit_assessment.score %>/100
              </span>
            <% end %>

            <% if @application.job_listing&.safe_url.present? %>
              <a href="<%= @application.job_listing.safe_url %>" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center gap-1 text-xs font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                View Original
              </a>
            <% end %>

            <%# Show scheduling link if interview needs to be scheduled %>
            <% if (link = @application.actionable_scheduling_link) %>
              <a href="<%= link[:url] %>" 
                 target="_blank" 
                 rel="noopener noreferrer"
                 class="inline-flex items-center gap-1.5 px-2.5 py-1 text-xs font-semibold bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-300 rounded-full hover:bg-emerald-200 dark:hover:bg-emerald-900/50 transition-colors">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Schedule via <%= link[:platform] %>
              </a>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-2">
        <%= link_to edit_interview_application_path(@application),
            class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
        
        <!-- Actions Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button 
            type="button"
            data-action="click->dropdown#toggle click@window->dropdown#hide"
            class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors"
          >
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
            </svg>
            Actions
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          
          <div 
            data-dropdown-target="menu"
            class="hidden absolute right-0 mt-2 w-56 rounded-lg bg-white dark:bg-gray-800 shadow-lg ring-1 ring-black ring-opacity-5 dark:ring-gray-700 z-50"
          >
            <div class="py-1" role="menu">
              <% if @application.active? %>
                <!-- Status Actions for Active Applications -->
                <div class="px-3 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                  Update Status
                </div>
                
                <%= button_to accept_interview_application_path(@application), 
                    method: :patch,
                    class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                    role: "menuitem" do %>
                  <svg class="w-4 h-4 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Mark as Accepted
                <% end %>
                
                <%= button_to reject_interview_application_path(@application), 
                    method: :patch,
                    class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                    role: "menuitem" do %>
                  <svg class="w-4 h-4 mr-3 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Mark as Rejected
                <% end %>
                
                <%= button_to archive_interview_application_path(@application), 
                    method: :patch,
                    class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                    role: "menuitem" do %>
                  <svg class="w-4 h-4 mr-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                  </svg>
                  Archive
                <% end %>
              <% else %>
                <!-- Reactivate for non-active applications -->
                <div class="px-3 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                  Update Status
                </div>
                
                <%= button_to reactivate_interview_application_path(@application), 
                    method: :patch,
                    class: "w-full flex items-center px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700",
                    role: "menuitem" do %>
                  <svg class="w-4 h-4 mr-3 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                  </svg>
                  Reactivate
                <% end %>
              <% end %>
              
              <div class="border-t border-gray-200 dark:border-gray-700 my-1"></div>
              
              <!-- Danger Zone -->
              <div class="px-3 py-2 text-xs font-semibold text-red-500 dark:text-red-400 uppercase tracking-wider">
                Danger Zone
              </div>
              
              <%= button_to interview_application_path(@application), 
                  method: :delete,
                  data: { turbo_confirm: "Delete this application? You can restore it within 3 months." },
                  class: "w-full flex items-center px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20",
                  role: "menuitem" do %>
                <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div data-controller="tabs" data-tabs-default-tab-value="overview">
    <!-- Tab Navigation -->
    <div class="border-b border-gray-200 dark:border-gray-700 mb-6">
      <nav class="-mb-px flex space-x-8" aria-label="Tabs">
        <button
          data-tabs-target="tab"
          data-tab="overview"
          data-action="click->tabs#switch"
          class="border-primary-500 text-primary-600 dark:text-primary-400 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          aria-selected="true">
          Overview
        </button>
        
        <% if @application.job_listing.present? %>
          <button
            data-tabs-target="tab"
            data-tab="job-details"
            data-action="click->tabs#switch"
            class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
            aria-selected="false">
            Job Details
          </button>
        <% end %>
        
        <button
          data-tabs-target="tab"
          data-tab="rounds"
          data-action="click->tabs#switch"
          class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          aria-selected="false">
          Interview Rounds
          <% if @interview_rounds.any? %>
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
              <%= @interview_rounds.count %>
            </span>
          <% end %>
        </button>
        
        <button
          data-tabs-target="tab"
          data-tab="feedback"
          data-action="click->tabs#switch"
          class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          aria-selected="false">
          Feedback
        </button>

        <button
          data-tabs-target="tab"
          data-tab="prepare"
          data-action="click->tabs#switch"
          class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          aria-selected="false">
          Prepare
        </button>

        <button
          data-tabs-target="tab"
          data-tab="history"
          data-action="click->tabs#switch"
          class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
          aria-selected="false">
          History
        </button>

        <% if @synced_emails.present? && @synced_emails.any? %>
          <button
            data-tabs-target="tab"
            data-tab="emails"
            data-action="click->tabs#switch"
            class="border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
            aria-selected="false">
            Emails
            <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
              <%= @synced_emails.count %>
            </span>
          </button>
        <% end %>
      </nav>
    </div>

    <!-- Tab Panels -->
    
    <!-- Overview Panel -->
    <div data-tabs-target="panel" data-panel="overview">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Info -->
        <div class="lg:col-span-2 space-y-6">
          <%= render "prep_snapshot",
              application: @application,
              next_round: @next_upcoming_round,
              focus_areas: @prep_focus_areas_preview %>

          <!-- Application Details -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Application Details</h2>
            
            <dl class="grid grid-cols-2 gap-4">
              <div>
                <dt class="text-sm text-gray-500 dark:text-gray-400">Applied Date</dt>
                <dd class="mt-1 text-sm font-medium text-gray-900 dark:text-white">
                  <%= @application.applied_at ? @application.applied_at.strftime("%B %d, %Y") : "Not specified" %>
                </dd>
              </div>
              
              <div>
                <dt class="text-sm text-gray-500 dark:text-gray-400">Last Updated</dt>
                <dd class="mt-1 text-sm font-medium text-gray-900 dark:text-white">
                  <%= time_ago_in_words(@application.updated_at) %> ago
                </dd>
              </div>
            </dl>

            <% if @application.notes.present? %>
              <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
                <h3 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Notes</h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 whitespace-pre-wrap">
                  <%= @application.notes %>
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Quick Actions -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Quick Actions</h3>
            <div class="space-y-2">
              <% if @join_interview_link.present? %>
                <%= link_to @join_interview_link,
                    target: "_blank",
                    rel: "noopener noreferrer",
                    class: "flex items-center w-full px-3 py-2 text-sm text-emerald-700 dark:text-emerald-300 hover:bg-emerald-50 dark:hover:bg-emerald-900/20 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5 mr-2 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                  Join Interview
                <% end %>
              <% end %>

              <% if @reschedule_link.present? %>
                <%= link_to @reschedule_link,
                    target: "_blank",
                    rel: "noopener noreferrer",
                    class: "flex items-center w-full px-3 py-2 text-sm text-amber-700 dark:text-amber-300 hover:bg-amber-50 dark:hover:bg-amber-900/20 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                  Reschedule Interview
                <% end %>
              <% end %>

              <%= link_to new_interview_application_interview_round_path(@application),
                  class: "flex items-center w-full px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors" do %>
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Schedule Interview
              <% end %>
              
              <% unless @company_feedback.present? %>
                <%= link_to new_interview_application_company_feedback_path(@application),
                    class: "flex items-center w-full px-3 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-lg transition-colors" do %>
                  <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                  </svg>
                  Add Feedback
                <% end %>
              <% end %>
            </div>
          </div>

          <!-- Company Info -->
          <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
            <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Company Info</h3>
            <div class="space-y-3">
              <% if @application.job_listing&.safe_url.present? %>
                <a href="<%= @application.job_listing.safe_url %>" 
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex items-center text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                  View Job Posting
                </a>
              <% end %>

              <% if display_company.website.present? %>
                <a href="<%= display_company.website %>" 
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex items-center text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                  </svg>
                  Company Website
                </a>
              <% end %>

              <% if @extracted_company_careers_url.present? %>
                <a href="<%= @extracted_company_careers_url %>" 
                   target="_blank"
                   rel="noopener noreferrer"
                   class="flex items-center text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                  Careers Page
                </a>
              <% end %>
              
              <% if display_company.about.present? %>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  <%= display_company.about %>
                </p>
              <% end %>
            </div>
          </div>

          <% if @extracted_action_links.present? %>
            <% useful_links = @extracted_action_links.reject do |link|
              link["url"].to_s == @join_interview_link.to_s ||
                link["url"].to_s == @reschedule_link.to_s
            end %>
            <% if useful_links.any? %>
              <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
                <h3 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Useful Links</h3>
                <div class="space-y-2">
                  <% useful_links.each do |link| %>
                    <a href="<%= link["url"] %>"
                       target="_blank"
                       rel="noopener noreferrer"
                       class="flex items-center text-sm text-gray-700 dark:text-gray-300 hover:text-primary-600 dark:hover:text-primary-400">
                      <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 010 5.656l-3 3a4 4 0 01-5.656-5.656l1.5-1.5M10.172 13.828a4 4 0 010-5.656l3-3a4 4 0 015.656 5.656l-1.5 1.5"/>
                      </svg>
                      <%= link["action_label"] %>
                    </a>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Job Details Panel -->
    <% if @application.job_listing.present? %>
      <div data-tabs-target="panel" data-panel="job-details" class="hidden">
        <%= render "job_listings/details", job_listing: @application.job_listing %>
      </div>
    <% end %>

    <!-- Interview Rounds Panel -->
    <div data-tabs-target="panel" data-panel="rounds" class="hidden">
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
            Interview Rounds
          </h2>
          <%= link_to new_interview_application_interview_round_path(@application),
              class: "inline-flex items-center px-3 py-2 text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Add Round
          <% end %>
        </div>

        <% if @interview_rounds.any? %>
          <%= render "interview_rounds/timeline", rounds: @interview_rounds %>
        <% else %>
          <div class="text-center py-12 text-sm text-gray-500 dark:text-gray-400">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="mt-4">No interview rounds yet</p>
            <p class="mt-1">Add your first round to track your progress</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Feedback Panel -->
    <div data-tabs-target="panel" data-panel="feedback" class="hidden">
      <% if @company_feedback.present? %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            Company Feedback
          </h2>
          <%= render "company_feedbacks/display", feedback: @company_feedback %>
        </div>
      <% else %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
          </svg>
          <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">No company feedback yet</p>
          <div class="mt-6">
            <%= link_to new_interview_application_company_feedback_path(@application),
                class: "inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
              </svg>
              Add Feedback
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Prepare Panel -->
    <div data-tabs-target="panel" data-panel="prepare" class="hidden">
      <%= render "interview_applications/tabs/prepare",
          application: @application,
          prep_artifacts_by_kind: @prep_artifacts_by_kind %>
    </div>

    <!-- History Panel -->
    <div data-tabs-target="panel" data-panel="history" class="hidden">
      <%= render "interview_applications/tabs/history", application: @application %>
    </div>

    <!-- Emails Panel -->
    <% if @synced_emails.present? && @synced_emails.any? %>
      <div data-tabs-target="panel" data-panel="emails" class="hidden">
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700">
          <!-- Header -->
          <div class="px-5 py-4 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <h2 class="text-base font-semibold text-gray-900 dark:text-white">
                  Email Correspondence
                </h2>
              </div>
              <span class="text-xs font-medium text-gray-500 dark:text-gray-400 bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded-full">
                <%= @synced_emails.count %> emails
              </span>
            </div>
          </div>

          <!-- Email List -->
          <div class="divide-y divide-gray-100 dark:divide-gray-700/50">
            <% @synced_emails.each do |email| %>
              <div class="group" data-controller="expandable">
                <!-- Email Row Header -->
                <div class="flex items-center gap-3 px-5 py-3 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors" 
                     data-action="click->expandable#toggle">
                  <!-- Type Indicator -->
                  <div class="flex-shrink-0 w-1 h-10 rounded-full <%= email_type_color_class(email.email_type) %>"></div>
                  
                  <!-- Sender Avatar -->
                  <div class="flex-shrink-0 w-9 h-9 rounded-full flex items-center justify-center text-xs font-semibold
                              <%= email.email_type == 'offer' ? 'bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400' :
                                  email.email_type == 'rejection' ? 'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400' :
                                  email.email_type == 'interview_invite' ? 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400' :
                                  'bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400' %>">
                    <%= email.sender_display[0].upcase %>
                  </div>
                  
                  <!-- Email Info -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2">
                      <span class="text-sm font-medium text-gray-900 dark:text-white truncate">
                        <%= email.sender_display %>
                      </span>
                      <% if email.email_type.present? && email.email_type != 'unknown' %>
                        <span class="inline-flex items-center px-1.5 py-0.5 rounded text-[10px] font-semibold uppercase tracking-wide <%= email.type_badge_classes %>">
                          <%= email.email_type.gsub('_', ' ') %>
                        </span>
                      <% end %>
                    </div>
                    <p class="text-sm text-gray-700 dark:text-gray-300 truncate">
                      <%= email.clean_subject %>
                    </p>
                  </div>
                  
                  <!-- Date & Expand -->
                  <div class="flex items-center gap-3">
                    <time class="text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap">
                      <%= email.email_date ? email.email_date.strftime("%b %d") : "" %>
                    </time>
                    <svg data-expandable-target="icon" class="w-4 h-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                    </svg>
                  </div>
                </div>

                <!-- Expanded Email Content -->
                <div data-expandable-target="content" class="hidden">
                  <div class="mx-5 mb-4 ml-[60px] bg-gray-50 dark:bg-gray-800/50 rounded-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
                    <!-- Email Header Details -->
                    <div class="px-4 py-3 bg-gray-100/50 dark:bg-gray-700/30 border-b border-gray-200 dark:border-gray-600">
                      <div class="space-y-1 text-xs">
                        <div class="flex">
                          <span class="w-14 text-gray-500 dark:text-gray-400">From:</span>
                          <span class="text-gray-700 dark:text-gray-300"><%= email.sender_display %> &lt;<%= email.from_email %>&gt;</span>
                        </div>
                        <div class="flex">
                          <span class="w-14 text-gray-500 dark:text-gray-400">Date:</span>
                          <span class="text-gray-700 dark:text-gray-300"><%= email.email_date&.strftime("%B %d, %Y at %I:%M %p") || "Unknown" %></span>
                        </div>
                        <div class="flex">
                          <span class="w-14 text-gray-500 dark:text-gray-400">Subject:</span>
                          <span class="text-gray-700 dark:text-gray-300 font-medium"><%= email.subject %></span>
                        </div>
                      </div>
                    </div>
                    
                    <!-- Email Body -->
                    <div class="px-4 py-4">
                      <% content = email.body_preview.presence || email.snippet %>
                      <% if content.present? %>
                        <div class="prose prose-sm dark:prose-invert max-w-none 
                                    prose-p:text-gray-600 dark:prose-p:text-gray-300 
                                    prose-p:my-2 prose-p:leading-relaxed">
                          <%= simple_format(strip_tags(content), {}, wrapper_tag: "div", class: "text-sm text-gray-600 dark:text-gray-300 leading-relaxed") %>
                        </div>
                      <% else %>
                        <p class="text-sm text-gray-400 dark:text-gray-500 italic">
                          No email content available
                        </p>
                      <% end %>
                    </div>
                    
                    <!-- Email Footer Actions -->
                    <div class="px-4 py-2 bg-gray-100/50 dark:bg-gray-700/30 border-t border-gray-200 dark:border-gray-600 flex items-center justify-end gap-2">
                      <%= link_to inbox_path(email), class: "inline-flex items-center gap-1 text-xs text-primary-600 dark:text-primary-400 hover:underline" do %>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                        </svg>
                        View in Inbox
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
