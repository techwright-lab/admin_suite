<%# Turbo Stream response for status polling %>

<% if @artifact&.completed? && @artifact&.has_content? %>
  <%# Generation complete - replace the entire content area (removes Stimulus controller, stops polling) %>
  <%= turbo_stream.replace "round_prep_content" do %>
    <div id="round_prep_content" class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <%= render "interview_rounds/round_prep", prep: @artifact, round: @round, application: @application %>
    </div>
  <% end %>

  <%# Show success flash %>
  <%= turbo_stream.update "flash" do %>
    <div class="rounded-md bg-green-50 dark:bg-green-900/20 p-4 mb-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800 dark:text-green-200">
            Interview prep generated successfully!
          </p>
        </div>
      </div>
    </div>
  <% end %>

<% elsif @artifact&.failed? %>
  <%# Generation failed - show error state (removes Stimulus controller, stops polling) %>
  <%= turbo_stream.replace "round_prep_content" do %>
    <div id="round_prep_content" class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6">
      <div class="text-center py-8">
        <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-red-100 dark:bg-red-900/30 mb-4">
          <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Generation Failed</h3>
        <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
          <%= @artifact.content&.dig("error_message").presence || "Something went wrong. Please try again." %>
        </p>
        <%= button_to "Try Again",
            generate_interview_application_interview_round_prep_path(@application, @round),
            method: :post,
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700" %>
      </div>
    </div>
  <% end %>

<%# else: Still generating - do nothing, Stimulus controller will poll again %>
<% end %>
