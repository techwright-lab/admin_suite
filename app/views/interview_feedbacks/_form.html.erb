<%# Self-Reflection Form %>

<% url = @feedback.new_record? ? 
  interview_application_interview_round_interview_feedback_path(@round.interview_application, @round) :
  interview_application_interview_round_interview_feedback_path(@round.interview_application, @round) %>

<%= form_with(model: @feedback, 
    url: url,
    method: @feedback.new_record? ? :post : :patch,
    local: true, 
    class: "space-y-6") do |form| %>
  <%# Error Messages %>
  <% if @feedback.errors.any? %>
    <div
      class="
        rounded-lg bg-red-50 dark:bg-red-900/20 p-4 border border-red-200
        dark:border-red-800
      "
    >
      <div class="flex">
        <div class="flex-shrink-0">
          <svg
            class="h-5 w-5 text-red-400"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
              clip-rule="evenodd"
            />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= pluralize(@feedback.errors.count, "error") %> prohibited this
            reflection from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc list-inside space-y-1">
              <% @feedback.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-6">
    <%# What Went Well %>
    <div>
      <%= form.label :went_well, "What Went Well", class: "form-label" %>
      <%= form.text_area :went_well,
          rows: 4,
          placeholder: "What aspects of the interview went well? What did you do right?",
          class: "form-textarea" %>
      <p class="form-help-text">
        Reflect on the positive aspects of your performance
      </p>
    </div>

    <%# What to Improve %>
    <div>
      <%= form.label :to_improve, "What to Improve", class: "form-label" %>
      <%= form.text_area :to_improve,
          rows: 4,
          placeholder: "What could you have done better? What areas need improvement?",
          class: "form-textarea" %>
      <p class="form-help-text">
        Identify areas for growth and improvement
      </p>
    </div>

    <%# Interviewer Notes %>
    <div>
      <%= form.label :interviewer_notes, "Interviewer Notes", class: "form-label" %>
      <%= form.text_area :interviewer_notes,
          rows: 3,
          placeholder: "Any notes or observations about the interviewer or interview process...",
          class: "form-textarea" %>
    </div>

    <%# Self Reflection %>
    <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">
        Overall Reflection
      </h3>

      <%= form.label :self_reflection, "Personal Reflection", class: "form-label" %>
      <%= form.text_area :self_reflection,
          rows: 6,
          placeholder: "How do you feel about this interview overall? What did you learn? What would you do differently next time?",
          class: "form-textarea" %>
      <p class="form-help-text">
        ðŸ’¡ Tip: Reflect on what went well, what could be improved, and key
        learnings
      </p>
    </div>

    <%# Tags %>
    <div>
      <%= form.label :tag_list, "Skills/Topics (comma-separated)", class: "form-label" %>
      <%= form.text_field :tag_list,
          value: @feedback.tag_list.join(", "),
          placeholder: "e.g., System Design, Problem Solving, Communication",
          class: "form-input" %>
      <p class="form-help-text">
        Add relevant skills or topics discussed in this interview
      </p>
    </div>
  </div>

  <%# Form Actions %>
  <div
    class="
      flex items-center justify-end gap-3 pt-6 border-t border-gray-200
      dark:border-gray-700
    "
  >
    <%= link_to "Cancel", 
        interview_application_path(@round.interview_application),
        class: "px-5 py-2.5 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors" %>

    <%= form.submit @feedback.new_record? ? "Save Self-Reflection" : "Update Self-Reflection",
        data: { disable_with: "Saving..." },
        class: "px-5 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 shadow-sm hover:shadow transition-all" %>
  </div>
<% end %>
