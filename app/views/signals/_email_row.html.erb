<%# locals: (email:, selected: false, show_company: true) %>

<% is_opportunity = email.recruiter_outreach? %>
<%
  type_colors = {
    'recruiter_outreach' => { bg: 'bg-indigo-100 dark:bg-indigo-900/40', text: 'text-indigo-700 dark:text-indigo-300', border: 'border-indigo-400' },
    'offer' => { bg: 'bg-emerald-100 dark:bg-emerald-900/40', text: 'text-emerald-700 dark:text-emerald-300', border: 'border-emerald-400' },
    'rejection' => { bg: 'bg-rose-100 dark:bg-rose-900/40', text: 'text-rose-700 dark:text-rose-300', border: 'border-rose-400' },
    'interview_invite' => { bg: 'bg-blue-100 dark:bg-blue-900/40', text: 'text-blue-700 dark:text-blue-300', border: 'border-blue-400' },
    'scheduling' => { bg: 'bg-violet-100 dark:bg-violet-900/40', text: 'text-violet-700 dark:text-violet-300', border: 'border-violet-400' },
    'application_confirmation' => { bg: 'bg-cyan-100 dark:bg-cyan-900/40', text: 'text-cyan-700 dark:text-cyan-300', border: 'border-cyan-400' }
  }
  colors = type_colors[email.email_type] || { bg: 'bg-gray-100 dark:bg-gray-700', text: 'text-gray-600 dark:text-gray-400', border: 'border-gray-300' }
%>

<%= link_to signal_path(email),
    class: "group block relative px-4 py-3.5 transition-all duration-200 #{selected ? 'bg-primary-50 dark:bg-primary-900/20' : 'hover:bg-gray-50 dark:hover:bg-gray-700/30'} #{is_opportunity ? 'border-l-3 border-indigo-500' : ''}",
    data: { 
      turbo_frame: "email_detail",
      action: "click->inbox-mobile#openEmail"
    } do %>
  
  <%# Selection indicator %>
  <% if selected %>
    <div class="absolute left-0 top-0 bottom-0 w-1 bg-primary-500 rounded-r"></div>
  <% end %>

  <div class="flex items-start gap-3">
    <!-- Avatar with type indicator -->
    <div class="relative flex-shrink-0">
      <div class="w-10 h-10 rounded-xl <%= colors[:bg] %> flex items-center justify-center text-sm font-bold <%= colors[:text] %> shadow-sm group-hover:shadow transition-shadow">
        <%= email.sender_display[0].upcase %>
      </div>
      <% if email.has_thread? && email.thread_count > 1 %>
        <span class="absolute -bottom-1 -right-1 w-5 h-5 bg-gray-600 dark:bg-gray-500 text-white text-[10px] font-bold rounded-full flex items-center justify-center shadow-sm">
          <%= email.thread_count %>
        </span>
      <% end %>
    </div>

    <div class="flex-1 min-w-0">
      <!-- Sender & Date row -->
      <div class="flex items-center justify-between gap-2 mb-0.5">
        <span class="text-sm font-semibold text-gray-900 dark:text-white truncate group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
          <%= email.sender_display %>
        </span>
        <span class="text-[11px] text-gray-400 dark:text-gray-500 flex-shrink-0 tabular-nums">
          <%= email.email_date ? time_ago_in_words(email.email_date, include_seconds: false) : "" %>
        </span>
      </div>

      <!-- Subject -->
      <p class="text-sm text-gray-700 dark:text-gray-300 truncate leading-snug">
        <%= email.subject || "(No subject)" %>
      </p>

      <!-- Snippet preview -->
      <p class="text-xs text-gray-500 dark:text-gray-400 truncate mt-1 leading-relaxed">
        <%= email.snippet&.truncate(90) %>
      </p>

      <!-- Meta badges row -->
      <div class="flex items-center gap-2 mt-2 flex-wrap">
        <% if show_company && email.company.present? %>
          <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-md text-[11px] font-medium bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
            <svg class="w-3 h-3 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
            <%= email.company.name %>
          </span>
        <% end %>

        <% if email.email_type.present? && !%w[other unknown].include?(email.email_type) %>
          <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-md text-[11px] font-semibold <%= colors[:bg] %> <%= colors[:text] %>">
            <% if email.recruiter_outreach? %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
              Opportunity
            <% elsif email.email_type == 'interview_invite' %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Interview
            <% elsif email.email_type == 'offer' %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Offer
            <% elsif email.email_type == 'rejection' %>
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Rejection
            <% else %>
              <%= email.email_type.split("_").first.capitalize %>
            <% end %>
          </span>
        <% end %>
      </div>
    </div>

    <!-- Hover arrow indicator -->
    <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity">
      <svg class="w-5 h-5 text-gray-300 dark:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </div>
  </div>
<% end %>
