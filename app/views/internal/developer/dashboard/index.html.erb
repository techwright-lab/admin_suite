<% content_for :title, "Developer Portal - Dashboard" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-slate-900 dark:text-white">Developer Portal</h1>
    <p class="mt-2 text-slate-600 dark:text-slate-400">
      Admin framework for managing all application resources across three specialized portals.
    </p>
  </div>

  <!-- System Health Overview -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      System Health
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- App Health -->
      <%= health_card("Application", @health[:app][:status], metrics: @health[:app][:metrics]) %>
      
      <!-- Scraping Health -->
      <%= health_card("Scraping Pipeline", @health[:scraping][:status], metrics: @health[:scraping][:metrics]) %>
      
      <!-- LLM Health -->
      <%= health_card("LLM API", @health[:llm][:status], metrics: @health[:llm][:metrics]) %>
      
      <!-- Assistant Health -->
      <%= health_card("Assistant", @health[:assistant][:status], metrics: @health[:assistant][:metrics]) %>
    </div>
  </div>

  <!-- Portal Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <!-- Ops Portal -->
    <%= link_to internal_developer_ops_root_path, class: "group relative bg-gradient-to-br from-amber-50 to-orange-50 dark:from-amber-900/20 dark:to-orange-900/20 rounded-2xl border border-amber-200 dark:border-amber-800/50 p-6 hover:shadow-lg hover:shadow-amber-500/10 transition-all" do %>
      <div class="flex items-center gap-3 mb-4">
        <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-amber-100 dark:bg-amber-900/50">
          <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-bold text-amber-900 dark:text-amber-100 group-hover:text-amber-700 dark:group-hover:text-amber-300">Ops Portal</h2>
          <p class="text-sm text-amber-700 dark:text-amber-400">Content & Support</p>
        </div>
      </div>
      <p class="text-sm text-amber-800 dark:text-amber-300 mb-4">
        Manage companies, job roles, categories, skill tags, and support content.
      </p>
      <div class="flex items-center gap-2 text-sm font-medium text-amber-600 dark:text-amber-400">
        Enter Portal
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    <% end %>

    <!-- Email Portal -->
    <%= link_to internal_developer_email_root_path, class: "group relative bg-gradient-to-br from-emerald-50 to-green-50 dark:from-emerald-900/20 dark:to-green-900/20 rounded-2xl border border-emerald-200 dark:border-emerald-800/50 p-6 hover:shadow-lg hover:shadow-emerald-500/10 transition-all" do %>
      <div class="flex items-center gap-3 mb-4">
        <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-emerald-100 dark:bg-emerald-900/50">
          <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h6m-6 4h10M5 6a2 2 0 012-2h10a2 2 0 012 2v12a2 2 0 01-2 2H7a2 2 0 01-2-2V6z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-bold text-emerald-900 dark:text-emerald-100 group-hover:text-emerald-700 dark:group-hover:text-emerald-300">Email Portal</h2>
          <p class="text-sm text-emerald-700 dark:text-emerald-400">Inbox & Signals</p>
        </div>
      </div>
      <p class="text-sm text-emerald-800 dark:text-emerald-300 mb-4">
        Inspect synced emails and step-by-step pipeline runs/events.
      </p>
      <div class="flex items-center gap-2 text-sm font-medium text-emerald-600 dark:text-emerald-400">
        Enter Portal
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    <% end %>

    <!-- AI Portal -->
    <%= link_to internal_developer_ai_root_path, class: "group relative bg-gradient-to-br from-cyan-50 to-teal-50 dark:from-cyan-900/20 dark:to-teal-900/20 rounded-2xl border border-cyan-200 dark:border-cyan-800/50 p-6 hover:shadow-lg hover:shadow-cyan-500/10 transition-all" do %>
      <div class="flex items-center gap-3 mb-4">
        <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-cyan-100 dark:bg-cyan-900/50">
          <svg class="w-6 h-6 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-bold text-cyan-900 dark:text-cyan-100 group-hover:text-cyan-700 dark:group-hover:text-cyan-300">AI Portal</h2>
          <p class="text-sm text-cyan-700 dark:text-cyan-400">LLM & ML</p>
        </div>
      </div>
      <p class="text-sm text-cyan-800 dark:text-cyan-300 mb-4">
        Manage LLM prompts, model configurations, and AI pipelines.
      </p>
      <div class="flex items-center gap-2 text-sm font-medium text-cyan-600 dark:text-cyan-400">
        Enter Portal
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    <% end %>

    <!-- Assistant Portal -->
    <%= link_to internal_developer_assistant_root_path, class: "group relative bg-gradient-to-br from-violet-50 to-purple-50 dark:from-violet-900/20 dark:to-purple-900/20 rounded-2xl border border-violet-200 dark:border-violet-800/50 p-6 hover:shadow-lg hover:shadow-violet-500/10 transition-all" do %>
      <div class="flex items-center gap-3 mb-4">
        <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-violet-100 dark:bg-violet-900/50">
          <svg class="w-6 h-6 text-violet-600 dark:text-violet-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </div>
        <div>
          <h2 class="text-xl font-bold text-violet-900 dark:text-violet-100 group-hover:text-violet-700 dark:group-hover:text-violet-300">Assistant Portal</h2>
          <p class="text-sm text-violet-700 dark:text-violet-400">Chat & Tools</p>
        </div>
      </div>
      <p class="text-sm text-violet-800 dark:text-violet-300 mb-4">
        Monitor assistant conversations, tool executions, and approvals.
      </p>
      <div class="flex items-center gap-2 text-sm font-medium text-violet-600 dark:text-violet-400">
        Enter Portal
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
    <% end %>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4 mb-8">
    <%= stat_card("Total Resources", @stats[:total_resources]) %>
    <%= stat_card("Ops Resources", @stats[:ops_resources], color: :amber) %>
    <%= stat_card("Email Resources", @stats[:email_resources], color: :emerald) %>
    <%= stat_card("AI Resources", @stats[:ai_resources], color: :cyan) %>
    <%= stat_card("Assistant Resources", @stats[:assistant_resources], color: :violet) %>
  </div>

  <!-- Recent Activity Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      Recent Activity
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Recent Users -->
      <%= recent_items_card("Recent Signups", @recent_activity[:recent_users],
            title_field: :email_address,
            subtitle_field: :name,
            view_all_path: internal_developer_ops_users_path,
            empty_message: "No recent signups") %>

      <!-- Recent Applications -->
      <%= recent_items_card("Recent Applications", @recent_activity[:recent_applications],
            title_field: :company,
            subtitle_field: :job_role,
            path_helper: ->(item) { internal_developer_ops_interview_application_path(item) },
            view_all_path: internal_developer_ops_interview_applications_path,
            empty_message: "No recent applications") %>

      <!-- Recent Threads -->
      <%= recent_items_card("Recent Assistant Threads", @recent_activity[:recent_threads],
            title_field: :title,
            view_all_path: internal_developer_assistant_threads_path,
            empty_message: "No recent threads") %>

      <!-- Recent Scraping -->
      <%= recent_items_card("Recent Scraping", @recent_activity[:recent_scraping],
            title_field: :status,
            badge_field: :status,
            view_all_path: internal_developer_ops_scraping_attempts_path,
            empty_message: "No recent scraping") %>
    </div>
  </div>

  <!-- Framework Info -->
  <div class="bg-gradient-to-r from-indigo-50 to-purple-50 dark:from-indigo-900/20 dark:to-purple-900/20 rounded-xl border border-indigo-200 dark:border-indigo-800/50 p-6">
    <h3 class="font-semibold text-indigo-900 dark:text-indigo-100 mb-3">Admin Framework v2</h3>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
      <div class="flex items-center gap-2 text-indigo-700 dark:text-indigo-300">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Declarative DSL
      </div>
      <div class="flex items-center gap-2 text-indigo-700 dark:text-indigo-300">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Auto Filters & Search
      </div>
      <div class="flex items-center gap-2 text-indigo-700 dark:text-indigo-300">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Member & Bulk Actions
      </div>
      <div class="flex items-center gap-2 text-indigo-700 dark:text-indigo-300">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
        </svg>
        Separate Portals
      </div>
    </div>
  </div>
</div>
