<% content_for :title, "Documentation - Developer" %>

<style>
  /* Documentation-specific styles */
  .doc-content .code-block {
    position: relative;
    margin: 1.5rem 0;
  }
  .doc-content .code-block .code-lang {
    position: absolute;
    top: 0.5rem;
    right: 0.75rem;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #a0aec0;
    background: rgba(0,0,0,0.3);
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
  }
  .doc-content .highlight {
    background-color: #1e293b !important;
    border-radius: 0.5rem;
    padding: 1rem;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.6;
  }
  .doc-content .highlight pre {
    margin: 0;
    background: transparent !important;
  }
  .doc-content .highlight code {
    background: transparent !important;
    padding: 0;
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }
  .doc-content .doc-table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }
  .doc-content .doc-table th,
  .doc-content .doc-table td {
    border: 1px solid #e2e8f0;
    padding: 0.75rem 1rem;
    text-align: left;
  }
  .dark .doc-content .doc-table th,
  .dark .doc-content .doc-table td {
    border-color: #334155;
  }
  .doc-content .doc-table th {
    background-color: #f8fafc;
    font-weight: 600;
  }
  .dark .doc-content .doc-table th {
    background-color: #1e293b;
  }
  .doc-content blockquote {
    border-left: 4px solid #6366f1;
    padding-left: 1rem;
    margin: 1.5rem 0;
    background: rgba(99, 102, 241, 0.05);
    padding: 1rem;
    border-radius: 0 0.5rem 0.5rem 0;
  }
  .doc-content blockquote p {
    margin: 0;
  }
</style>

<div class="flex gap-6 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Sidebar - Docs List -->
  <div class="w-64 flex-shrink-0 hidden lg:block">
    <div class="sticky top-6 bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden max-h-[calc(100vh-8rem)]">
      <div class="p-4 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
        <h2 class="font-semibold text-slate-900 dark:text-white">Documentation</h2>
        <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Project docs and guides</p>
      </div>
      
      <nav class="p-3 space-y-3 overflow-y-auto max-h-[calc(100vh-14rem)]">
        <% @files.each do |group_name, files| %>
          <div>
            <h3 class="text-xs font-semibold text-slate-400 dark:text-slate-500 uppercase tracking-wider mb-2 px-2"><%= group_name %></h3>
            <ul class="space-y-0.5">
              <% files.each do |file_path| %>
                <% is_selected = file_path == @selected_path %>
                <li>
                  <%= link_to internal_developer_docs_path(path: file_path), 
                      class: "flex items-center gap-2 px-2 py-1.5 text-sm rounded-lg transition-colors #{is_selected ? 'bg-indigo-100 dark:bg-indigo-900/50 text-indigo-700 dark:text-indigo-300 font-medium' : 'text-slate-600 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-700/50 hover:text-slate-900 dark:hover:text-white'}" do %>
                    <svg class="w-4 h-4 flex-shrink-0 <%= is_selected ? 'text-indigo-500' : 'text-slate-400' %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <span class="truncate"><%= File.basename(file_path, '.md').tr('_', ' ').tr('-', ' ').titleize.truncate(22) %></span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 min-w-0">
    <!-- Mobile doc selector -->
    <div class="lg:hidden mb-4">
      <label for="mobile-doc-select" class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Select Document</label>
      <select id="mobile-doc-select" onchange="window.location.href=this.value" class="form-input w-full">
        <% @files.each do |group_name, files| %>
          <optgroup label="<%= group_name %>">
            <% files.each do |file_path| %>
              <option value="<%= internal_developer_docs_path(path: file_path) %>" <%= 'selected' if file_path == @selected_path %>>
                <%= File.basename(file_path, '.md').tr('_', ' ').tr('-', ' ').titleize %>
              </option>
            <% end %>
          </optgroup>
        <% end %>
      </select>
    </div>
    
    <% if @content_html.present? %>
      <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 overflow-hidden">
        <!-- Header -->
        <div class="px-6 py-5 border-b border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900/50">
          <h1 class="text-2xl font-bold text-slate-900 dark:text-white mb-2"><%= @title %></h1>
          <div class="flex items-center gap-4 text-sm text-slate-500 dark:text-slate-400">
            <% if @reading_time %>
              <span class="flex items-center gap-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <%= @reading_time %> min read
              </span>
            <% end %>
            <span class="flex items-center gap-1.5 font-mono text-xs">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
              <%= @selected_path %>
            </span>
          </div>
        </div>

        <div class="p-6">
          <!-- Table of Contents -->
          <% if @toc.present? && @toc.any? %>
            <div class="mb-8 p-4 bg-slate-50 dark:bg-slate-900/50 rounded-lg border border-slate-200 dark:border-slate-700">
              <h3 class="text-sm font-semibold text-slate-900 dark:text-slate-100 mb-3 flex items-center gap-2">
                <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
                </svg>
                Table of Contents
              </h3>
              <ul class="space-y-1 text-sm">
                <% @toc.each do |item| %>
                  <li style="padding-left: <%= (item[:level] - 2) * 0.75 %>rem">
                    <a href="#<%= item[:id] %>" class="text-indigo-600 dark:text-indigo-400 hover:text-indigo-800 dark:hover:text-indigo-300 hover:underline">
                      <%= item[:text] %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <!-- Content -->
          <article class="doc-content prose prose-slate dark:prose-invert max-w-none 
                          prose-headings:scroll-mt-20 prose-headings:font-semibold
                          prose-h2:text-xl prose-h2:mt-8 prose-h2:mb-3 prose-h2:pb-2 prose-h2:border-b prose-h2:border-slate-200 dark:prose-h2:border-slate-700
                          prose-h3:text-lg prose-h3:mt-6 prose-h3:mb-2
                          prose-h4:text-base prose-h4:mt-5 prose-h4:mb-2
                          prose-p:leading-7 prose-p:text-slate-600 dark:prose-p:text-slate-300
                          prose-a:text-indigo-600 dark:prose-a:text-indigo-400 prose-a:font-medium prose-a:no-underline hover:prose-a:underline
                          prose-code:text-pink-600 dark:prose-code:text-pink-400 prose-code:bg-slate-100 dark:prose-code:bg-slate-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-code:font-medium
                          prose-code:before:content-none prose-code:after:content-none
                          prose-pre:p-0 prose-pre:bg-transparent
                          prose-li:text-slate-600 dark:prose-li:text-slate-300
                          prose-strong:text-slate-900 dark:prose-strong:text-white
                          prose-img:rounded-lg prose-img:shadow-md">
            <%= @content_html.html_safe %>
          </article>
        </div>
      </div>
    <% else %>
      <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-12 text-center">
        <svg class="w-16 h-16 text-slate-200 dark:text-slate-700 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        <h3 class="text-lg font-medium text-slate-900 dark:text-white">No Document Selected</h3>
        <p class="text-sm text-slate-500 dark:text-slate-400 mt-1">Select a document from the sidebar to view its contents.</p>
      </div>
    <% end %>
  </div>
</div>

