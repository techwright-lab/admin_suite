<% content_for :title, "Ops Portal - Developer" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-8">
    <nav class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Developer Portal", internal_developer_root_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Ops Portal</span>
    </nav>
    <div class="flex items-center gap-3">
      <div class="flex items-center justify-center w-10 h-10 rounded-xl bg-amber-100 dark:bg-amber-900/30">
        <svg class="w-5 h-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Ops Portal</h1>
        <p class="text-sm text-slate-500 dark:text-slate-400">Content, Users, Email & Scraping Management</p>
      </div>
    </div>
  </div>

  <!-- Health & Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 mb-8">
    <!-- Scraping Health -->
    <%= health_card("Scraping Pipeline", @health[:scraping][:status], metrics: {
      "24h attempts" => @health[:scraping][:total],
      "success rate" => "#{@health[:scraping][:rate]}%",
      "failed" => @health[:scraping][:failed],
      "stuck" => @health[:scraping][:stuck]
    }) %>

    <!-- Scraping Chart -->
    <%= chart_card("Scraping (7 days)", @charts[:scraping], 
          color: :amber, 
          total: ScrapingAttempt.where("created_at > ?", 7.days.ago).count) %>

    <!-- Signups Chart -->
    <%= chart_card("User Signups (7 days)", @charts[:signups], 
          color: :green, 
          total: User.where("created_at > ?", 7.days.ago).count) %>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-8 gap-4 mb-8">
    <%= stat_card("Companies", @stats[:companies]) %>
    <%= stat_card("Job Roles", @stats[:job_roles]) %>
    <%= stat_card("Categories", @stats[:categories]) %>
    <%= stat_card("Skill Tags", @stats[:skill_tags]) %>
    <%= stat_card("Users", @stats[:users], color: :green) %>
    <%= stat_card("Applications", @stats[:applications], color: :cyan) %>
    <%= stat_card("Job Listings", @stats[:job_listings]) %>
    <%= stat_card("Resources", @stats[:total_resources], color: :amber) %>
  </div>

  <!-- Content Section -->
  <div class="mb-8">
    <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Content Management</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <%= link_to internal_developer_ops_companies_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Companies</h3>
          <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= @stats[:companies] %></span>
        </div>
        <p class="text-sm text-slate-500 dark:text-slate-400">Company profiles and associations</p>
      <% end %>

      <%= link_to internal_developer_ops_job_roles_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Job Roles</h3>
          <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= @stats[:job_roles] %></span>
        </div>
        <p class="text-sm text-slate-500 dark:text-slate-400">Job titles and definitions</p>
      <% end %>

      <%= link_to internal_developer_ops_categories_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Categories</h3>
          <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= @stats[:categories] %></span>
        </div>
        <p class="text-sm text-slate-500 dark:text-slate-400">Job role categories</p>
      <% end %>

      <%= link_to internal_developer_ops_skill_tags_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Skill Tags</h3>
          <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= @stats[:skill_tags] %></span>
        </div>
        <p class="text-sm text-slate-500 dark:text-slate-400">Skills and competencies</p>
      <% end %>

      <%= link_to internal_developer_ops_job_listings_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Job Listings</h3>
          <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= JobListing.count %></span>
        </div>
        <p class="text-sm text-slate-500 dark:text-slate-400">Job posting management</p>
      <% end %>

      <%= link_to internal_developer_ops_blog_posts_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
        <div class="flex items-center justify-between mb-2">
          <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Blog Posts</h3>
          <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= BlogPost.count %></span>
        </div>
        <p class="text-sm text-slate-500 dark:text-slate-400">Blog content management</p>
      <% end %>
    </div>
  </div>

  <!-- Recent Activity Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-8">
    <%= recent_items_card("Recent Users", @recent[:users],
          title_field: :email_address,
          subtitle_field: :name,
          view_all_path: internal_developer_ops_users_path) %>

    <%= recent_items_card("Recent Applications", @recent[:applications],
          title_field: :company,
          subtitle_field: :job_role,
          path_helper: ->(item) { internal_developer_ops_interview_application_path(item) },
          view_all_path: internal_developer_ops_interview_applications_path) %>
  </div>

  <!-- Users & Support Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <div>
      <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Users & Support</h2>
      <div class="grid grid-cols-1 gap-4">
        <%= link_to internal_developer_ops_users_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Users</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= User.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">User accounts</p>
        <% end %>

        <%= link_to internal_developer_ops_support_tickets_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Support Tickets</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= SupportTicket.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Customer support</p>
        <% end %>
      </div>
    </div>

    <div>
      <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Scraping</h2>
      <div class="grid grid-cols-1 gap-4">
        <%= link_to internal_developer_ops_scraping_attempts_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Scraping Attempts</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= ScrapingAttempt.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Job scraping pipeline</p>
        <% end %>

        <%= link_to internal_developer_ops_scraping_events_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Scraping Events</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= ScrapingEvent.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Pipeline step events</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Email & System Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div>
      <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Email Sync</h2>
      <div class="grid grid-cols-1 gap-4">
        <%= link_to internal_developer_ops_synced_emails_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Synced Emails</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= SyncedEmail.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Gmail synced emails</p>
        <% end %>

        <%= link_to internal_developer_ops_email_senders_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Email Senders</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= EmailSender.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Sender identification</p>
        <% end %>
      </div>
    </div>

    <div>
      <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">System</h2>
      <div class="grid grid-cols-1 gap-4">
        <%= link_to internal_developer_ops_settings_path, class: "group bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5 hover:border-amber-300 dark:hover:border-amber-700 transition-colors" do %>
          <div class="flex items-center justify-between mb-2">
            <h3 class="font-medium text-slate-900 dark:text-white group-hover:text-amber-600 dark:group-hover:text-amber-400">Settings</h3>
            <span class="text-lg font-bold text-slate-300 dark:text-slate-600"><%= Setting.count %></span>
          </div>
          <p class="text-sm text-slate-500 dark:text-slate-400">Feature flags and app configuration</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
