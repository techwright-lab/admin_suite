<% content_for :title, "Payments Portal - Developer" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Payments Portal</h1>
    <p class="mt-1 text-sm text-slate-600 dark:text-slate-400">
      Manage billing catalog, provider mappings, subscriptions, and webhook processing.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5">
      <div class="text-sm text-slate-500 dark:text-slate-400">Plans</div>
      <div class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:plans] %></div>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5">
      <div class="text-sm text-slate-500 dark:text-slate-400">Features</div>
      <div class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:features] %></div>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5">
      <div class="text-sm text-slate-500 dark:text-slate-400">Entitlements</div>
      <div class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:entitlements] %></div>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5">
      <div class="text-sm text-slate-500 dark:text-slate-400">Provider Mappings</div>
      <div class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:mappings] %></div>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5">
      <div class="text-sm text-slate-500 dark:text-slate-400">Subscriptions</div>
      <div class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:subscriptions] %></div>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-5">
      <div class="text-sm text-slate-500 dark:text-slate-400">Webhook Events (pending)</div>
      <div class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:webhook_events_pending] %></div>
    </div>
  </div>

  <div class="mt-6 flex flex-wrap gap-2">
    <%= link_to "Plans", internal_developer_payments_plans_path, class: "inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium" %>
    <%= link_to "Features", internal_developer_payments_features_path, class: "inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium" %>
    <%= link_to "Entitlements", internal_developer_payments_plan_entitlements_path, class: "inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium" %>
    <%= link_to "Provider Mappings", internal_developer_payments_provider_mappings_path, class: "inline-flex items-center px-4 py-2 rounded-lg bg-indigo-600 hover:bg-indigo-700 text-white text-sm font-medium" %>
    <%= link_to "Webhook Events", internal_developer_payments_webhook_events_path, class: "inline-flex items-center px-4 py-2 rounded-lg bg-slate-700 hover:bg-slate-800 text-white text-sm font-medium" %>
  </div>
</div>


