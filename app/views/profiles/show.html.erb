<% content_for :title, "Your Journey Insights" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
              Your Journey Insights
            </h1>
            <p class="text-gray-600 dark:text-gray-400">
              Track your progress and growth over time
            </p>
          </div>
          <%= link_to "Edit Profile", settings_path(tab: "profile"), class: "px-4 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-lg transition-colors" %>
        </div>
      </div>

      <!-- User Info Card -->
      <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6 mb-8">
        <div class="flex items-center gap-4">
          <div class="w-16 h-16 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center flex-shrink-0">
            <span class="text-2xl font-bold text-primary-600 dark:text-primary-400">
              <%= Current.user.display_name[0].upcase %>
            </span>
          </div>
          <div class="flex-1">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
              <%= Current.user.display_name %>
            </h2>
            <div class="flex items-center gap-2 mt-1">
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <p class="text-sm text-gray-600 dark:text-gray-400">
                <%= Current.user.email_address %>
              </p>
              <% if Current.user.email_verified? %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300">
                  <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  Verified
                </span>
              <% end %>
            </div>
            <% if Current.user.current_role_name || Current.user.current_company_name %>
              <p class="text-sm text-gray-500 dark:text-gray-500 mt-1">
                <%= [Current.user.current_role_name, Current.user.current_company_name].compact.join(" at ") %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Total Interviews -->
        <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
          </div>
          <p class="text-3xl font-bold text-gray-900 dark:text-white mb-1">
            <%= @insights[:stats][:total] %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Total Interviews
          </p>
        </div>

        <!-- Offers -->
        <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
          </div>
          <p class="text-3xl font-bold text-gray-900 dark:text-white mb-1">
            <%= @insights[:stats][:by_stage][:offer] || 0 %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            Offers Received
          </p>
        </div>

        <!-- With Feedback -->
        <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
          </div>
          <p class="text-3xl font-bold text-gray-900 dark:text-white mb-1">
            <%= @insights[:stats][:with_feedback] %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            With Reflections
          </p>
        </div>

        <!-- This Month -->
        <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-900/30 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
          </div>
          <p class="text-3xl font-bold text-gray-900 dark:text-white mb-1">
            <%= @insights[:stats][:this_month] %>
          </p>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            This Month
          </p>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
        <!-- Top Strengths -->
        <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
            ðŸ’ª Top Strengths
          </h2>
          <% if @insights[:strengths].any? %>
            <div class="space-y-3">
              <% @insights[:strengths].each do |strength| %>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300"><%= strength[:name] %></span>
                  <div class="flex items-center">
                    <div class="w-32 bg-gray-200 dark:bg-dark-800 rounded-full h-2 mr-3">
                      <div class="bg-green-500 h-2 rounded-full" style="width: <%= [strength[:count] * 20, 100].min %>%"></div>
                    </div>
                    <span class="text-sm text-gray-500 dark:text-gray-500"><%= strength[:count] %></span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 dark:text-gray-400 text-sm">
              Add feedback to interviews to see your top strengths
            </p>
          <% end %>
        </div>

        <!-- Areas to Improve -->
        <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
          <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
            ðŸ“ˆ Focus Areas
          </h2>
          <% if @insights[:improvements].any? %>
            <div class="space-y-3">
              <% @insights[:improvements].each do |improvement| %>
                <div class="flex items-center justify-between">
                  <span class="text-gray-700 dark:text-gray-300"><%= improvement[:name] %></span>
                  <div class="flex items-center">
                    <div class="w-32 bg-gray-200 dark:bg-dark-800 rounded-full h-2 mr-3">
                      <div class="bg-blue-500 h-2 rounded-full" style="width: <%= [improvement[:count] * 20, 100].min %>%"></div>
                    </div>
                    <span class="text-sm text-gray-500 dark:text-gray-500"><%= improvement[:count] %></span>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 dark:text-gray-400 text-sm">
              Add feedback to interviews to identify focus areas
            </p>
          <% end %>
        </div>
      </div>

      <!-- Learning Timeline -->
      <div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 p-6">
        <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6">
          ðŸ“… Your Journey Timeline
        </h2>
        <% if @insights[:timeline].any? %>
          <div class="space-y-4">
            <% @insights[:timeline].each_with_index do |item, index| %>
              <div class="flex items-start">
                <!-- Timeline Line -->
                <div class="flex flex-col items-center mr-4">
                  <div class="w-10 h-10 rounded-full flex items-center justify-center
                    <%= case item[:sentiment]
                        when 'positive' then 'bg-green-100 dark:bg-green-900/30'
                        when 'negative' then 'bg-red-100 dark:bg-red-900/30'
                        else 'bg-gray-100 dark:bg-dark-800'
                        end %>">
                    <svg class="w-5 h-5 
                      <%= case item[:sentiment]
                          when 'positive' then 'text-green-600 dark:text-green-400'
                          when 'negative' then 'text-red-600 dark:text-red-400'
                          else 'text-gray-600 dark:text-gray-400'
                          end %>" 
                      fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </div>
                  <% unless index == @insights[:timeline].length - 1 %>
                    <div class="w-0.5 h-12 bg-gray-200 dark:bg-dark-800"></div>
                  <% end %>
                </div>

                <!-- Content -->
                <div class="flex-1 pb-8">
                  <div class="flex items-center justify-between mb-1">
                    <h4 class="font-semibold text-gray-900 dark:text-white">
                      <%= item[:company] %>
                    </h4>
                    <span class="text-xs text-gray-500 dark:text-gray-500">
                      <%= item[:date].strftime("%b %d, %Y") %>
                    </span>
                  </div>
                  <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
                    <%= item[:role] %>
                  </p>
                  <div class="flex items-center gap-2">
                    <span class="inline-flex items-center px-2 py-1 text-xs rounded-full
                      <%= case item[:stage]
                          when 'applied' then 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300'
                          when 'interview' then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-300'
                          when 'feedback' then 'bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-300'
                          when 'offer' then 'bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300'
                          end %>">
                      <%= item[:stage].humanize %>
                    </span>
                    <% if item[:has_feedback] %>
                      <span class="text-xs text-primary-600 dark:text-primary-400 flex items-center">
                        <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Reflected
                      </span>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto text-gray-300 dark:text-gray-700 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
            <p class="text-gray-500 dark:text-gray-400 mb-4">No interviews yet</p>
            <%= link_to "Add your first interview", new_interview_application_path, class: "text-primary-600 dark:text-primary-400 hover:underline" %>
          </div>
        <% end %>
      </div>
    </div>
</div>
