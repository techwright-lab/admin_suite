<% if resume_skills.any? %>
  <div class="divide-y divide-gray-200 dark:divide-gray-700">
    <!-- Table Header -->
    <div
      class="
        px-6 py-3 bg-gray-50 dark:bg-dark-800 grid grid-cols-12 gap-4
        text-xs font-medium text-gray-500 dark:text-gray-400 uppercase
        tracking-wider
      "
    >
      <div class="col-span-4">Skill</div>
      <div class="col-span-2">Category</div>
      <div class="col-span-2 text-center">AI Level</div>
      <div class="col-span-3 text-center">Your Level</div>
      <div class="col-span-1"></div>
    </div>

    <!-- Skills Rows -->
    <% resume_skills.each do |resume_skill| %>
      <%= render "resume_skills/skill_row", resume_skill: resume_skill %>
    <% end %>
  </div>
<% else %>
  <div class="p-12 text-center">
    <svg
      class="w-12 h-12 mx-auto text-gray-300 dark:text-gray-600 mb-3"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="1.5"
        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
      />
    </svg>

    <p class="text-sm text-gray-500 dark:text-gray-400">
      No skills extracted yet
    </p>
  </div>
<% end %>
