<div
  id="skill_row_<%= resume_skill.id %>"
  class="
    px-6 py-4 grid grid-cols-12 gap-4 items-center hover:bg-gray-50
    dark:hover:bg-dark-800 transition-colors
  "
  data-controller="skill-editor"
  data-skill-editor-url-value="<%= user_resume_resume_skill_path(resume_skill.user_resume, resume_skill) %>"
>
  <!-- Skill Name & Evidence -->
  <div class="col-span-4">
    <div class="flex items-center">
      <%= link_to skill_path(resume_skill.skill_tag), class: "font-medium text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors" do %>
        <%= resume_skill.skill_name %>
      <% end %>

      <% if resume_skill.user_confirmed? %>
        <svg
          class="w-4 h-4 ml-1 text-green-500"
          fill="currentColor"
          viewBox="0 0 20 20"
          title="User confirmed"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
            clip-rule="evenodd"
          />
        </svg>
      <% end %>
    </div>

    <% if resume_skill.evidence_snippet.present? %>
      <p
        class="mt-1 text-xs text-gray-500 dark:text-gray-400 line-clamp-2"
        title="<%= resume_skill.evidence_snippet %>"
      >
        "<%= truncate(resume_skill.evidence_snippet, length: 80) %>"
      </p>
    <% end %>

    <% if resume_skill.years_of_experience.present? && resume_skill.years_of_experience > 0 %>
      <span class="inline-flex items-center mt-1 text-xs text-gray-400">
        <svg
          class="w-3 h-3 mr-1"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
          />
        </svg>
        <%= resume_skill.years_of_experience %>
        year
        <%= resume_skill.years_of_experience == 1 ? '' : 's' %>
      </span>
    <% end %>
  </div>

  <!-- Category -->
  <div class="col-span-2">
    <span
      class="
        inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
        bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-200
      "
    >
      <%= resume_skill.category || "Other" %>
    </span>
  </div>

  <!-- AI Level -->
  <div class="col-span-2 text-center">
    <div class="flex items-center justify-center">
      <% 5.times do |i| %>
        <svg
          class="w-4 h-4 <%= i < resume_skill.model_level ? 'text-gray-400' : 'text-gray-200 dark:text-gray-700' %>"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
          />
        </svg>
      <% end %>

      <span class="ml-1 text-xs text-gray-500 dark:text-gray-400">
        (<%= resume_skill.model_level %>)
      </span>
    </div>

    <% if resume_skill.confidence_score %>
      <div class="mt-1 text-xs text-gray-400">
        <%= resume_skill.confidence_percentage %>% confidence
      </div>
    <% end %>
  </div>

  <!-- User Level (Editable) -->
  <div class="col-span-3">
    <div
      class="flex items-center justify-center space-x-1"
      data-skill-editor-target="levelButtons"
    >
      <% 5.times do |i| %>
        <% level = i + 1 %>

        <button
          type="button"
          data-action="click->skill-editor#setLevel"
          data-level="<%= level %>"
          class="
            w-8 h-8 rounded-full border-2 transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900
            <%= if resume_skill.user_level == level
            'bg-primary-600 border-primary-600 text-white'
            elsif resume_skill.user_level.nil? && resume_skill.model_level == level
            'bg-gray-200 border-gray-300 dark:bg-dark-700 dark:border-gray-600 text-gray-600 dark:text-gray-400'
            else
            'bg-white dark:bg-dark-800 border-gray-300 dark:border-gray-600 text-gray-400 hover:border-primary-400 hover:text-primary-600'
            end %>
          "
          title="<%= ['Beginner', 'Elementary', 'Intermediate', 'Advanced', 'Expert'][i] %>"
        >
          <%= level %>
        </button>
      <% end %>
    </div>

    <% if resume_skill.user_confirmed? %>
      <div class="mt-1 text-xs text-center text-green-600 dark:text-green-400">
        Confirmed
      </div>
    <% else %>
      <div class="mt-1 text-xs text-center text-gray-400">
        Click to confirm
      </div>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="col-span-1 text-right">
    <%= button_to user_resume_resume_skill_path(resume_skill.user_resume, resume_skill),
        method: :delete,
        data: { turbo_confirm: "Remove #{resume_skill.skill_name} from this resume?" },
        class: "p-1.5 text-gray-400 hover:text-red-500 rounded-lg hover:bg-gray-100 dark:hover:bg-dark-700 transition-colors",
        title: "Remove skill" do %>
      <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
        />
      </svg>
    <% end %>
  </div>
</div>
