<%# Interview Rounds Timeline Component %>

<div class="flow-root">
  <ul role="list" class="-mb-8">
    <% rounds.each_with_index do |round, index| %>
      <li>
        <div class="relative pb-8">
          <% unless index == rounds.size - 1 %>
            <span
              class="
                absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200
                dark:bg-gray-700
              "
              aria-hidden="true"
            ></span>
          <% end %>

          <div class="relative flex space-x-3">
            <!-- Icon -->
            <div>
              <span
                class="
                  h-8 w-8 rounded-full flex items-center justify-center ring-8 ring-white dark:ring-gray-800
                  <%= case round.result.to_sym
                  when :passed then 'bg-green-500'
                  when :failed then 'bg-red-500'
                  when :waitlisted then 'bg-yellow-500'
                  else 'bg-gray-400'
                  end %>
                "
              >
                <% if round.completed? %>
                  <svg
                    class="h-5 w-5 text-white"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                <% else %>
                  <svg
                    class="h-5 w-5 text-white"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                <% end %>
              </span>
            </div>

            <!-- Content -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= round.stage_display_name %>
                  </p>
                  <% if round.interviewer_display.present? %>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      with <%= round.interviewer_display %>
                    </p>
                  <% end %>
                </div>

                <div class="flex items-center gap-2">
                  <% if round.completed? %>
                    <span
                      class="
                        inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
                        <%= case round.result.to_sym
                        when :passed then 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
                        when :failed then 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400'
                        when :waitlisted then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400'
                        else 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
                        end %>
                      "
                    >
                      <%= round.result.to_s.titleize %>
                    </span>
                  <% else %>
                    <span
                      class="
                        inline-flex items-center px-2 py-0.5 rounded text-xs
                        font-medium bg-blue-100 text-blue-800
                        dark:bg-blue-900/20 dark:text-blue-400
                      "
                    >
                      Upcoming
                    </span>
                  <% end %>

                  <%= link_to edit_interview_application_interview_round_path(round.interview_application, round),
                      class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300" do %>
                    <svg
                      class="w-4 h-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
                      />
                    </svg>
                  <% end %>
                </div>
              </div>

              <div class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                <% if round.scheduled_at.present? %>
                  <p>
                    <%= round.completed? ? "Completed" : "Scheduled for" %>
                    <%= round.scheduled_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </p>
                <% end %>

                <% if round.duration_minutes.present? %>
                  <p class="mt-1">Duration: <%= round.formatted_duration %></p>
                <% end %>

                <% if round.notes.present? %>
                  <p class="mt-2"><%= round.notes %></p>
                <% end %>
              </div>

              <!-- Self-Reflection Section -->
              <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                <% if round.interview_feedback.present? %>
                  <div class="bg-gray-50 dark:bg-gray-900/50 rounded-lg p-4">
                    <div class="flex items-center justify-between mb-3">
                      <h4 class="text-sm font-medium text-gray-900 dark:text-white">
                        Self-Reflection
                      </h4>
                      <div class="flex items-center gap-2">
                        <%= link_to edit_interview_application_interview_round_interview_feedback_path(round.interview_application, round),
                            class: "text-primary-600 hover:text-primary-700 dark:text-primary-400 text-xs" do %>
                          Edit
                        <% end %>
                        <%= link_to interview_application_interview_round_interview_feedback_path(round.interview_application, round),
                            method: :delete,
                            data: { confirm: "Are you sure?" },
                            class: "text-red-600 hover:text-red-700 dark:text-red-400 text-xs" do %>
                          Delete
                        <% end %>
                      </div>
                    </div>

                    <% feedback = round.interview_feedback %>
                    <% if feedback.went_well.present? %>
                      <div class="mb-3">
                        <p class="text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">
                          What Went Well
                        </p>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                          <%= feedback.went_well %>
                        </p>
                      </div>
                    <% end %>

                    <% if feedback.to_improve.present? %>
                      <div class="mb-3">
                        <p class="text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">
                          What to Improve
                        </p>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                          <%= feedback.to_improve %>
                        </p>
                      </div>
                    <% end %>

                    <% if feedback.self_reflection.present? %>
                      <div>
                        <p class="text-xs font-medium text-gray-700 dark:text-gray-300 mb-1">
                          Overall Reflection
                        </p>
                        <p class="text-sm text-gray-600 dark:text-gray-400 whitespace-pre-wrap">
                          <%= feedback.self_reflection %>
                        </p>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                      No self-reflection yet
                    </p>
                    <%= link_to new_interview_application_interview_round_interview_feedback_path(round.interview_application, round),
                        class: "inline-flex items-center px-3 py-1.5 text-xs font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 bg-primary-50 dark:bg-primary-900/20 rounded-lg" do %>
                      <svg
                        class="w-4 h-4 mr-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 4v16m8-8H4"
                        />
                      </svg>
                      Add Self-Reflection
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
