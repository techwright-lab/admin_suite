<%# Round Prep Display Partial %>
<%# locals: (prep: nil, round: nil, application: nil) %>
<%# Falls back to instance variables if locals not provided %>
<% prep ||= @prep %>
<% round ||= @round %>
<% application ||= @application %>

<% if prep&.has_content? %>
  <div class="space-y-6">
    <%# Round Summary %>
    <% if prep.round_summary.present? %>
      <div class="bg-primary-50 dark:bg-primary-900/20 rounded-lg p-4">
        <h4 class="font-medium text-primary-900 dark:text-primary-100 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Round Overview
        </h4>
        <div class="mt-2 text-sm text-primary-800 dark:text-primary-200">
          <% summary = prep.round_summary %>
          <p class="font-medium"><%= summary["type_name"] %></p>
          <% if summary["typical_duration"].present? %>
            <p class="mt-1">Duration: <%= summary["typical_duration"] %></p>
          <% end %>
          <% if summary["format_hints"].present? %>
            <div class="mt-2 flex flex-wrap gap-2">
              <% summary["format_hints"].each do |hint| %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 dark:bg-primary-800 text-primary-800 dark:text-primary-200">
                  <%= hint %>
                </span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Expected Questions %>
    <% if prep.expected_questions.present? %>
      <div>
        <h4 class="font-medium text-gray-900 dark:text-gray-100 flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Expected Questions
        </h4>
        <div class="space-y-3">
          <% prep.expected_questions.each do |question| %>
            <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-3">
              <div class="flex items-start justify-between">
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300">
                  <%= question["category"] %>
                </span>
                <% if question["difficulty"].present? %>
                  <span class="text-xs text-gray-500 dark:text-gray-400 capitalize"><%= question["difficulty"] %></span>
                <% end %>
              </div>
              <p class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100"><%= question["example"] %></p>
              <% if question["your_preparation"].present? %>
                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400"><%= question["your_preparation"] %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Your History %>
    <% if prep.your_history.present? %>
      <div>
        <h4 class="font-medium text-gray-900 dark:text-gray-100 flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Your Track Record
        </h4>
        <% history = prep.your_history %>
        <div class="grid grid-cols-2 gap-4">
          <% if history["same_type_rounds"].present? %>
            <div class="text-center p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
              <p class="text-2xl font-bold text-gray-900 dark:text-gray-100"><%= history["same_type_rounds"] %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400">Similar rounds</p>
            </div>
          <% end %>
          <% if history["pass_rate"].present? %>
            <div class="text-center p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
              <p class="text-2xl font-bold text-green-600 dark:text-green-400"><%= history["pass_rate"] %>%</p>
              <p class="text-xs text-gray-500 dark:text-gray-400">Pass rate</p>
            </div>
          <% end %>
        </div>
        <% if history["strengths"].present? %>
          <div class="mt-3">
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Your strengths</p>
            <div class="flex flex-wrap gap-2">
              <% history["strengths"].each do |strength| %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300">
                  <%= strength %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
        <% if history["areas_to_watch"].present? %>
          <div class="mt-3">
            <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase mb-1">Areas to focus on</p>
            <div class="flex flex-wrap gap-2">
              <% history["areas_to_watch"].each do |area| %>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 dark:bg-amber-900/30 text-amber-800 dark:text-amber-300">
                  <%= area %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <%# Answer Strategies %>
    <% if prep.answer_strategies.present? %>
      <div>
        <h4 class="font-medium text-gray-900 dark:text-gray-100 flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          Answer Strategies
        </h4>
        <div class="space-y-3">
          <% prep.answer_strategies.each do |strategy| %>
            <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-3">
              <p class="font-medium text-purple-900 dark:text-purple-100"><%= strategy["strategy"] %></p>
              <p class="mt-1 text-sm text-purple-800 dark:text-purple-200"><%= strategy["description"] %></p>
              <% if strategy["example_application"].present? %>
                <p class="mt-2 text-sm text-purple-700 dark:text-purple-300 italic">"<%= strategy["example_application"] %>"</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <%# Preparation Checklist %>
    <% if prep.preparation_checklist.present? %>
      <div>
        <h4 class="font-medium text-gray-900 dark:text-gray-100 flex items-center gap-2 mb-3">
          <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Preparation Checklist
        </h4>
        <ul class="space-y-2">
          <% prep.preparation_checklist.each do |item| %>
            <li class="flex items-start gap-2">
              <svg class="w-5 h-5 text-gray-400 dark:text-gray-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
              <span class="text-sm text-gray-700 dark:text-gray-300"><%= item %></span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# Quick Tips %>
    <% if prep.tips.present? %>
      <div class="bg-amber-50 dark:bg-amber-900/20 rounded-lg p-4">
        <h4 class="font-medium text-amber-900 dark:text-amber-100 flex items-center gap-2 mb-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Quick Tips
        </h4>
        <ul class="space-y-1">
          <% prep.tips.each do |tip| %>
            <li class="text-sm text-amber-800 dark:text-amber-200 flex items-start gap-2">
              <span class="text-amber-500">â€¢</span>
              <%= tip %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# Generation Timestamp %>
    <% if prep.generated_at.present? %>
      <p class="text-xs text-gray-400 dark:text-gray-500 text-right">
        Generated <%= time_ago_in_words(prep.generated_at) %> ago
      </p>
    <% end %>
  </div>
<% else %>
  <%# No prep available - show generation button %>
  <div class="text-center py-8">
    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
    </svg>
    <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No prep generated yet</h3>
    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      Generate personalized preparation for this interview round.
    </p>
    <div class="mt-4">
      <%= button_to "Generate Prep",
          generate_interview_application_interview_round_prep_path(application, round),
          method: :post,
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>
  </div>
<% end %>
