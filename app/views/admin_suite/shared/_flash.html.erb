<% if flash.any? %>
  <div class="fixed top-4 right-4 z-50 space-y-2 max-w-md">
    <% flash.each do |type, message| %>
      <% type = type.to_sym %>
      <% classes = case type
        when :notice
          "bg-green-50 dark:bg-green-900/20 border-green-200 dark:border-green-800 text-green-800 dark:text-green-300"
        when :alert
          "bg-red-50 dark:bg-red-900/20 border-red-200 dark:border-red-800 text-red-800 dark:text-red-300"
        when :warning
          "bg-amber-50 dark:bg-amber-900/20 border-amber-200 dark:border-amber-800 text-amber-800 dark:text-amber-300"
        else
          "bg-#{theme_primary}-50 dark:bg-#{theme_primary}-900/20 border-#{theme_primary}-200 dark:border-#{theme_primary}-800 text-#{theme_primary}-800 dark:text-#{theme_primary}-300"
      end %>

      <div class="flex items-start gap-3 px-5 py-4 rounded-lg shadow-lg border <%= classes %>">
        <div class="flex-shrink-0 mt-0.5">
          <% icon_name = case type
            when :notice then "check-circle-2"
            when :alert then "alert-triangle"
            when :warning then "triangle-alert"
            else "info"
          end %>
          <%= admin_suite_icon(icon_name, class: "w-5 h-5") %>
        </div>
        <p class="flex-1 text-sm font-medium leading-snug"><%= message %></p>
      </div>
    <% end %>
  </div>
<% end %>
