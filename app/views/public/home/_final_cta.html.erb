<%# Final CTA Section %>
<section class="relative py-24 lg:py-32 overflow-hidden">
  <%# Background with nebula bloom effect %>
  <div class="absolute inset-0 bg-dark-950"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-dark-900 via-transparent to-dark-900"></div>
  
  <%# Nebula bloom effects %>
  <div class="absolute top-1/2 left-1/4 -translate-y-1/2 w-[500px] h-[500px] bg-primary-500/10 rounded-full blur-[120px] pointer-events-none"></div>
  <div class="absolute top-1/3 right-1/4 w-[400px] h-[400px] bg-secondary-500/10 rounded-full blur-[100px] pointer-events-none"></div>
  <div class="absolute bottom-1/3 left-1/3 w-[300px] h-[300px] bg-accent-500/10 rounded-full blur-[80px] pointer-events-none"></div>

  <div class="relative mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
    <%# G-spark icon %>
    <div class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-primary-500 to-secondary-500 shadow-glow-lg mb-10 animate-pulse-glow">
      <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2L14.5 9.5L22 12L14.5 14.5L12 22L9.5 14.5L2 12L9.5 9.5L12 2Z"/>
      </svg>
    </div>

    <%# Main headline %>
    <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight mb-6">
      Start your growth journey <span class="text-gradient-brand">today</span>
    </h2>

    <%# Supporting copy %>
    <p class="text-lg sm:text-xl text-gray-400 leading-relaxed max-w-2xl mx-auto mb-10">
      Every interview teaches you something. Gleania helps you capture it, understand it, and use it to land your dream job.
    </p>

    <%# CTA buttons %>
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
      <%= link_to new_registration_path, class: "btn-primary-glow group text-lg px-8 py-4" do %>
        <span>Start Reflecting</span>
        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      <% end %>
    </div>

    <%# Trust badges %>
    <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-gray-500">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <span>Privacy-first</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
        </svg>
        <span>No credit card required</span>
      </div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Setup in 2 minutes</span>
      </div>
    </div>
  </div>
</section>

