<%# Testimonials / Social Proof Section %>
<section class="relative py-24 lg:py-32 overflow-hidden">
  <%# Background %>
  <div class="absolute inset-0 bg-dark-900"></div>
  <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary-500/5 rounded-full blur-[120px] pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-secondary-500/5 rounded-full blur-[100px] pointer-events-none"></div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <%# Section header %>
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-500/10 border border-primary-500/20 mb-6">
        <span class="text-sm font-medium text-primary-300">Testimonials</span>
      </div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
        Loved by <span class="text-gradient-brand">job seekers</span>
      </h2>
    </div>

    <%# Testimonial cards %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% [
        {
          quote: "Gleania helped me improve my system design explanations. I went from fumbling through answers to confidently walking through architecture decisions.",
          name: "Sarah Chen",
          role: "Software Engineer at Meta",
          initials: "SC",
          color: "primary"
        },
        {
          quote: "The AI summaries changed how I prepare. I can now see patterns in my interview feedback that I never noticed before.",
          name: "Marcus Johnson",
          role: "Senior Developer at Shopify",
          initials: "MJ",
          color: "secondary"
        },
        {
          quote: "I finally saw my interview patterns clearly. Turns out I was making the same mistake in every behavioral question. Fixed it, got the job.",
          name: "Aisha Patel",
          role: "Tech Lead at Stripe",
          initials: "AP",
          color: "accent"
        }
      ].each do |testimonial| %>
        <div class="group relative">
          <div class="card-glass h-full hover:border-<%= testimonial[:color] %>-500/30 transition-all duration-300">
            <%# Quote icon %>
            <div class="absolute -top-3 -left-3 w-8 h-8 rounded-lg bg-<%= testimonial[:color] %>-500 flex items-center justify-center shadow-lg">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
            </div>

            <%# Quote text %>
            <p class="text-gray-300 leading-relaxed mb-6 pt-4">
              "<%= testimonial[:quote] %>"
            </p>

            <%# Author %>
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-full bg-gradient-to-br from-<%= testimonial[:color] %>-400 to-<%= testimonial[:color] %>-600 flex items-center justify-center ring-2 ring-<%= testimonial[:color] %>-500/20">
                <span class="text-sm font-semibold text-white"><%= testimonial[:initials] %></span>
              </div>
              <div>
                <p class="font-medium text-white"><%= testimonial[:name] %></p>
                <p class="text-sm text-gray-500"><%= testimonial[:role] %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <%# Stats row %>
    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <% [
        { value: "500+", label: "Active Users" },
        { value: "2,000+", label: "Interviews Tracked" },
        { value: "89%", label: "Report Improvement" },
        { value: "4.9/5", label: "User Rating" }
      ].each do |stat| %>
        <div>
          <p class="text-3xl lg:text-4xl font-bold text-gradient-brand"><%= stat[:value] %></p>
          <p class="text-sm text-gray-500 mt-1"><%= stat[:label] %></p>
        </div>
      <% end %>
    </div>
  </div>
</section>

