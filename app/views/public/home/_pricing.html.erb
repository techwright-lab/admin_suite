<%# Pricing Preview Section %>
<section id="pricing" class="relative py-24 lg:py-32 overflow-hidden">
  <%# Background %>
  <div class="absolute inset-0 bg-dark-950"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[600px] bg-primary-500/5 rounded-full blur-[150px] pointer-events-none"></div>

  <div class="relative mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
    <%# Section header %>
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary-500/10 border border-primary-500/20 mb-6">
        <span class="text-sm font-medium text-primary-300">Pricing</span>
      </div>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight mb-6">
        Simple, <span class="text-gradient-brand">transparent</span> pricing
      </h2>
      <p class="text-lg text-gray-400">
        Start for free. Upgrade when you're ready for more powerful features.
      </p>
    </div>

    <%# Pricing cards %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <%# Free plan %>
      <div class="card-glass hover:border-white/20 transition-all duration-300">
        <div class="mb-6">
          <h3 class="text-xl font-semibold text-white mb-2">Gleania Free</h3>
          <p class="text-gray-400 text-sm">Perfect for getting started</p>
        </div>

        <div class="mb-8">
          <span class="text-4xl font-bold text-white">$0</span>
          <span class="text-gray-500">/month</span>
        </div>

        <ul class="space-y-4 mb-8">
          <% [
            { feature: "Manual interview tracking", included: true },
            { feature: "Basic interview notes", included: true },
            { feature: "Light reflection tools", included: true },
            { feature: "Up to 10 applications", included: true },
            { feature: "Gmail sync", included: false },
            { feature: "AI insight engine", included: false },
            { feature: "Growth dashboard", included: false },
            { feature: "CV tailoring", included: false }
          ].each do |item| %>
            <li class="flex items-center gap-3">
              <% if item[:included] %>
                <div class="w-5 h-5 rounded-full bg-primary-500/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-3 h-3 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-gray-300"><%= item[:feature] %></span>
              <% else %>
                <div class="w-5 h-5 rounded-full bg-gray-800 flex items-center justify-center flex-shrink-0">
                  <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </div>
                <span class="text-gray-500"><%= item[:feature] %></span>
              <% end %>
            </li>
          <% end %>
        </ul>

        <%= link_to new_registration_path, class: "block w-full text-center py-3 px-6 rounded-xl border-2 border-white/10 text-white font-semibold hover:bg-white/5 transition-colors" do %>
          Get Started Free
        <% end %>
      </div>

      <%# Pro plan %>
      <div class="relative">
        <%# Popular badge %>
        <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 rounded-full bg-gradient-to-r from-primary-500 to-secondary-500 text-sm font-semibold text-white shadow-lg">
          Most Popular
        </div>

        <div class="card-glass border-primary-500/30 hover:border-primary-500/50 transition-all duration-300 shadow-glow">
          <div class="mb-6">
            <h3 class="text-xl font-semibold text-white mb-2">Gleania Pro</h3>
            <p class="text-gray-400 text-sm">For serious job seekers</p>
          </div>

          <div class="mb-8">
            <span class="text-4xl font-bold text-white">$12</span>
            <span class="text-gray-500">/month</span>
          </div>

          <ul class="space-y-4 mb-8">
            <% [
              { feature: "Everything in Free", included: true },
              { feature: "Unlimited applications", included: true },
              { feature: "Gmail sync", included: true },
              { feature: "AI insight engine", included: true },
              { feature: "Growth dashboard", included: true },
              { feature: "CV tailoring", included: true },
              { feature: "Priority support", included: true },
              { feature: "Export to PDF", included: true }
            ].each do |item| %>
              <li class="flex items-center gap-3">
                <div class="w-5 h-5 rounded-full bg-primary-500/20 flex items-center justify-center flex-shrink-0">
                  <svg class="w-3 h-3 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-gray-300"><%= item[:feature] %></span>
              </li>
            <% end %>
          </ul>

          <%= link_to new_registration_path, class: "btn-primary-glow w-full justify-center" do %>
            Upgrade to Pro
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <%# FAQ teaser %>
    <div class="mt-16 text-center">
      <p class="text-gray-500">
        Have questions? <a href="#" class="text-primary-400 hover:text-primary-300 transition-colors">Check our FAQ</a> or <a href="mailto:hello@gleania.com" class="text-primary-400 hover:text-primary-300 transition-colors">reach out</a>.
      </p>
    </div>
  </div>
</section>

