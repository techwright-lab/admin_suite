          <li><a href="#" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Blog</a></li>
          <li><%= link_to "Contact", contact_path, class: "text-sm text-gray-400 hover:text-primary-400 transition-colors" %></li>
          <li><a href="#" class="text-sm text-gray-400 hover:text-primary-400 transition-colors">Careers</a></li>
        </ul>
      </div>

      <%# Legal links %>
