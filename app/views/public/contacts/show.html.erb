<% content_for :title, "Contact Us - Gleania" %>
<% content_for :description, "Get in touch with the Gleania team. We'd love to hear from you." %>

<%# Load Turnstile script only on this page %>
<% if turnstile_configured? %>
  <% content_for :head do %>
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  <% end %>
<% end %>

<section class="relative min-h-screen flex items-center pt-20">
  <%# Background %>
  <div class="absolute inset-0 bg-dark-950"></div>

  <div
    class="
      absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-primary-500/10
      rounded-full blur-[120px] pointer-events-none
    "
  ></div>

  <div class="relative mx-auto max-w-2xl px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-12">
      <h1
        class="
          text-3xl sm:text-4xl lg:text-5xl font-bold text-white
          leading-tight mb-4
        "
      >
        Get in <span class="text-gradient-brand">touch</span>
      </h1>

      <p class="text-lg text-gray-400">
        Have questions, feedback, or just want to say hello? We'd love to hear
        from you.
      </p>
    </div>

    <div class="card-glass">
      <%= form_with model: @support_ticket, url: contact_path, local: true, class: "space-y-6" do |f| %>
        <% if @support_ticket.errors.any? %>
          <div class="p-4 rounded-xl bg-red-500/10 border border-red-500/20">
            <h3 class="text-sm font-medium text-red-400 mb-2">
              Please fix the following errors:
            </h3>

            <ul class="text-sm text-red-300 space-y-1">
              <% @support_ticket.errors.full_messages.each do |message| %>
                <li>&bull; <%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <%= f.label :name, "Name *", class: "block text-sm font-medium text-gray-300 mb-2" %>

          <%= f.text_field :name, required: true,
                          class: "form-input bg-white/5 border-white/10 focus:border-primary-500",
                          placeholder: "Your name" %>
        </div>

        <div>
          <%= f.label :email, "Email *", class: "block text-sm font-medium text-gray-300 mb-2" %>

          <%= f.email_field :email, required: true,
                           class: "form-input bg-white/5 border-white/10 focus:border-primary-500",
                           placeholder: "you@example.com" %>
        </div>

        <div>
          <%= f.label :subject, "Subject *", class: "block text-sm font-medium text-gray-300 mb-2" %>

          <%= f.text_field :subject, required: true,
                          class: "form-input bg-white/5 border-white/10 focus:border-primary-500",
                          placeholder: "What is this about?" %>
        </div>

        <div>
          <%= f.label :message, "Message *", class: "block text-sm font-medium text-gray-300 mb-2" %>

          <%= f.text_area :message, required: true, rows: 5,
                         class: "form-textarea bg-white/5 border-white/10 focus:border-primary-500",
                         placeholder: "How can we help you?" %>
        </div>

        <%# Turnstile widget %>
        <% if turnstile_configured? %>
          <div class="flex justify-center">
            <div
              class="cf-turnstile"
              data-sitekey="<%= turnstile_site_key %>"
              data-theme="dark"
            ></div>
          </div>
        <% end %>

        <div>
          <%= f.button type: :submit, class: "btn-primary-glow w-full justify-center" do %>
            Send Message
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="mt-12 text-center">
      <p class="text-gray-500 mb-4">Or reach out directly:</p>

      <a
        href="mailto:hello@gleania.com"
        class="text-primary-400 hover:text-primary-300 transition-colors"
      >
        hello@gleania.com
      </a>
    </div>
  </div>
</section>
