<% content_for :title, @user_resume.name %>

<div
  class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8"
  <% if @user_resume.analysis_status_pending? || @user_resume.analysis_status_processing? %>
    data-controller="analysis-status"
    data-analysis-status-url-value="<%= user_resume_path(@user_resume, format: :json) %>"
    data-analysis-status-status-value="<%= @user_resume.analysis_status %>"
    data-analysis-status-interval-value="3000"
  <% end %>
>
  <!-- Sticky Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between">
      <%= link_to user_resumes_path, class: "inline-flex items-center text-sm text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors" do %>
        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Resumes
      <% end %>

      <div class="flex items-center gap-2">
        <%= link_to skills_path, class: "inline-flex items-center px-3 py-1.5 text-sm font-medium text-primary-700 dark:text-primary-300 bg-primary-50 dark:bg-primary-900/20 border border-primary-200 dark:border-primary-800 rounded-lg hover:bg-primary-100 dark:hover:bg-primary-900/30 transition-colors" do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          Skills Dashboard
        <% end %>
      </div>
    </div>
  </div>

  <!-- Page Header -->
  <div class="mb-6 pb-6 border-b border-gray-200 dark:border-gray-700">
    <div class="flex items-start justify-between gap-4">
      <div class="min-w-0 flex-1">
        <div class="flex items-center gap-3 flex-wrap">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white truncate">
            <%= @user_resume.name %>
          </h1>
          <%= render "user_resumes/analysis_status", user_resume: @user_resume %>
        </div>

        <div class="mt-2 flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400 flex-wrap">
          <span class="inline-flex items-center gap-1.5">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <%= @user_resume.file_type %>
          </span>
          <span class="text-gray-300 dark:text-gray-600">•</span>
          <span><%= @user_resume.purpose.humanize %></span>
          <% if @user_resume.has_target_roles? %>
            <span class="text-gray-300 dark:text-gray-600">•</span>
            <span>Target: <%= @user_resume.target_job_roles.pluck(:title).join(", ") %></span>
          <% end %>
          <% if @user_resume.has_target_companies? %>
            <span>@ <%= @user_resume.target_companies.pluck(:name).join(", ") %></span>
          <% end %>
        </div>
      </div>

      <div class="flex items-center gap-2 flex-shrink-0">
        <%= link_to edit_user_resume_path(@user_resume), class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-dark-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-dark-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>

        <%= button_to reanalyze_user_resume_path(@user_resume), method: :post, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-dark-800 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-dark-700 transition-colors" do %>
          <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
          </svg>
          Re-analyze
        <% end %>
      </div>
    </div>
  </div>

  <% if @user_resume.analyzed? %>
    <!-- Two Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
      <!-- Main Content with Tabs (Left - wider) -->
      <main class="lg:col-span-8">
        <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden" data-controller="tabs" data-tabs-default-tab-value="experiences" data-tabs-persist-value="false">
          <!-- Tab Navigation -->
          <div class="flex border-b border-gray-200 dark:border-gray-700 bg-gray-50/50 dark:bg-dark-800/50">
            <button
              type="button"
              data-tabs-target="tab"
              data-action="click->tabs#switch"
              data-tab="experiences"
              class="flex-1 px-6 py-4 text-sm font-medium text-center transition-colors border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600"
            >
              <span class="flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                Work History
                <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-medium rounded-full bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                  <%= @work_experiences.size %>
                </span>
              </span>
            </button>

            <button
              type="button"
              data-tabs-target="tab"
              data-action="click->tabs#switch"
              data-tab="skills"
              class="flex-1 px-6 py-4 text-sm font-medium text-center transition-colors border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600"
            >
              <span class="flex items-center justify-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
                Skills
                <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-medium rounded-full bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
                  <%= @total_skills_count %>
                </span>
              </span>
            </button>
          </div>

          <!-- Tab Panels -->
          <div data-tabs-target="panel" data-panel="experiences" class="hidden">
            <%= render "user_resumes/work_history_panel", experiences: @work_experiences %>
          </div>

          <div data-tabs-target="panel" data-panel="skills" class="hidden">
            <div class="px-5 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-50/50 dark:bg-dark-800/50">
              <div class="flex items-center justify-between">
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  Review and adjust proficiency levels
                </p>
                <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-400">
                  <span class="inline-flex items-center gap-1.5">
                    <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                    Your level
                  </span>
                  <span class="inline-flex items-center gap-1.5">
                    <span class="w-2 h-2 bg-gray-300 dark:bg-gray-600 rounded-full"></span>
                    AI detected
                  </span>
                </div>
              </div>
            </div>

            <div id="skills_list">
              <%= render "resume_skills/skills_list", resume_skills: @resume_skills %>
            </div>

            <% if @pagy && @pagy.pages > 1 %>
              <div class="px-5 py-4">
                <%= render "shared/pagination", pagy: @pagy %>
              </div>
            <% end %>
          </div>
        </div>
      </main>

      <!-- Sidebar (Right - narrower) -->
      <aside class="lg:col-span-4 space-y-5">
        <!-- AI Summary Card -->
        <% if @user_resume.analysis_summary.present? %>
          <div class="bg-gradient-to-br from-primary-50 via-blue-50 to-indigo-50 dark:from-primary-900/20 dark:via-blue-900/15 dark:to-indigo-900/20 rounded-xl border border-primary-200/60 dark:border-primary-800/40 p-5">
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-primary-100 dark:bg-primary-800/30 flex items-center justify-center">
                <svg class="w-4 h-4 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                </svg>
              </div>
              <div class="min-w-0">
                <h3 class="text-sm font-semibold text-primary-900 dark:text-primary-200 mb-1.5">AI Summary</h3>
                <p class="text-sm text-primary-800 dark:text-primary-300 leading-relaxed"><%= @user_resume.analysis_summary %></p>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Strengths -->
        <% if @user_resume.strengths.any? %>
          <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-5">
            <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">Strengths</h3>
            <div class="flex flex-wrap gap-2">
              <% @user_resume.strengths.first(12).each do |strength| %>
                <span class="inline-flex items-center px-2.5 py-1.5 rounded-lg text-xs font-medium bg-indigo-50 text-indigo-700 dark:bg-indigo-900/25 dark:text-indigo-300 border border-indigo-100 dark:border-indigo-800/40">
                  <%= strength %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Domains -->
        <% if @user_resume.domains.any? %>
          <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-5">
            <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-3">Domains</h3>
            <div class="flex flex-wrap gap-2">
              <% @user_resume.domains.first(12).each do |domain| %>
                <span class="inline-flex items-center px-2.5 py-1.5 rounded-lg text-xs font-medium bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-200 border border-slate-200 dark:border-slate-600">
                  <%= domain %>
                </span>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Quick Stats -->
        <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-5">
          <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-4">Quick Stats</h3>
          <div class="grid grid-cols-2 gap-4">
            <div class="text-center p-3 rounded-lg bg-gray-50 dark:bg-dark-800">
              <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @work_experiences.size %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">Experiences</p>
            </div>
            <div class="text-center p-3 rounded-lg bg-gray-50 dark:bg-dark-800">
              <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= @total_skills_count %></p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-0.5">Skills</p>
            </div>
          </div>
        </div>
      </aside>
    </div>
  <% elsif @user_resume.analyzing? %>
    <!-- Processing State -->
    <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-4 relative">
        <div class="absolute inset-0 rounded-full border-4 border-primary-100 dark:border-primary-900/30"></div>
        <div class="absolute inset-0 rounded-full border-4 border-primary-500 border-t-transparent animate-spin"></div>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Analyzing Resume...</h3>
      <p class="text-gray-500 dark:text-gray-400 max-w-md mx-auto">
        We're extracting skills from your resume. This usually takes 30-60 seconds.
      </p>
      <p class="mt-4 text-sm text-gray-400 dark:text-gray-500">
        This page will automatically update when analysis is complete.
      </p>
    </div>
  <% elsif @user_resume.analysis_status_failed? %>
    <!-- Failed State -->
    <div class="bg-white dark:bg-dark-900 rounded-xl border-2 border-red-200 dark:border-red-800/50 p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-red-50 dark:bg-red-900/20 flex items-center justify-center">
        <svg class="w-8 h-8 text-red-500 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Analysis Failed</h3>
      <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md mx-auto">
        We couldn't extract skills from this resume. This might be due to file format issues or temporary service problems.
      </p>
      <%= button_to reanalyze_user_resume_path(@user_resume), method: :post, class: "inline-flex items-center px-5 py-2.5 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
        </svg>
        Try Again
      <% end %>
    </div>
  <% else %>
    <!-- Pending State -->
    <div class="bg-white dark:bg-dark-900 rounded-xl border border-gray-200 dark:border-gray-700 p-12 text-center">
      <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-amber-50 dark:bg-amber-900/20 flex items-center justify-center">
        <svg class="w-8 h-8 text-amber-500 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Analysis Pending</h3>
      <p class="text-gray-500 dark:text-gray-400">
        Your resume is queued for analysis. It will start processing shortly.
      </p>
    </div>
  <% end %>
</div>
