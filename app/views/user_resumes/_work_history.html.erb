<% experiences = local_assigns.fetch(:experiences, []) %>

<div class="bg-white dark:bg-dark-900 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Work History</h2>
        <p class="text-sm text-gray-500 dark:text-gray-400">
          <%= experiences.size %> experience<%= experiences.size == 1 ? "" : "s" %> extracted from this resume
        </p>
      </div>
    </div>
  </div>

  <div class="p-6">
    <% if experiences.any? %>
      <div class="space-y-5">
        <% experiences.each do |exp| %>
          <div class="rounded-lg border border-gray-200 dark:border-gray-700 p-4">
            <div class="flex items-start justify-between gap-3">
              <div class="min-w-0">
                <div class="flex items-center gap-2 flex-wrap">
                  <h3 class="text-sm font-semibold text-gray-900 dark:text-white truncate">
                    <%= exp.display_role_title.presence || "Role" %>
                  </h3>
                  <span class="text-sm text-gray-500 dark:text-gray-400">•</span>
                  <p class="text-sm text-gray-700 dark:text-gray-300 truncate">
                    <%= exp.display_company_name.presence || "Company" %>
                  </p>

                  <% if exp.current %>
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-300">
                      Current
                    </span>
                  <% end %>
                </div>

                <div class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                  <% if exp.start_date.present? || exp.end_date.present? %>
                    <%= exp.start_date&.strftime("%b %Y") || "?" %>
                    —
                    <%= exp.current ? "Present" : (exp.end_date&.strftime("%b %Y") || "?") %>
                  <% elsif exp.duration_text.present? %>
                    <%= exp.duration_text %>
                  <% else %>
                    Dates not provided
                  <% end %>
                </div>
              </div>
            </div>

            <% skills = exp.resume_work_experience_skills.includes(:skill_tag).limit(18) rescue [] %>
            <% if skills.any? %>
              <div class="mt-3 flex flex-wrap gap-1.5">
                <% skills.each do |rwe_skill| %>
                  <% tag = rwe_skill.skill_tag %>
                  <%= link_to skill_path(tag), class: "inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium bg-sky-50 text-sky-700 dark:bg-sky-900/25 dark:text-sky-300 border border-sky-200/60 dark:border-sky-800/40 hover:bg-sky-100 dark:hover:bg-sky-900/40 transition-colors" do %>
                    <%= tag.name %>
                  <% end %>
                <% end %>
              </div>
            <% end %>

            <% responsibilities = Array(exp.responsibilities).map(&:to_s).map(&:strip).reject(&:blank?) %>
            <% highlights = Array(exp.highlights).map(&:to_s).map(&:strip).reject(&:blank?) %>

            <% if responsibilities.any? || highlights.any? %>
              <details class="mt-4">
                <summary class="cursor-pointer text-sm text-primary-600 dark:text-primary-400 hover:underline">
                  Details
                </summary>

                <div class="mt-3 space-y-4">
                  <% if highlights.any? %>
                    <div>
                      <h4 class="text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide mb-2">
                        Highlights
                      </h4>
                      <ul class="list-disc pl-5 space-y-1 text-sm text-gray-700 dark:text-gray-300">
                        <% highlights.first(12).each do |h| %>
                          <li><%= h %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <% if responsibilities.any? %>
                    <div>
                      <h4 class="text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide mb-2">
                        Responsibilities
                      </h4>
                      <ul class="list-disc pl-5 space-y-1 text-sm text-gray-700 dark:text-gray-300">
                        <% responsibilities.first(12).each do |r| %>
                          <li><%= r %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                </div>
              </details>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500 dark:text-gray-400">No work history extracted yet.</p>
    <% end %>
  </div>
</div>

