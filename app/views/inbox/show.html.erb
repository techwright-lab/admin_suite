<% content_for :title, @email.short_subject(50) %>

<!-- Mobile/Direct access full page view -->
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <!-- Mobile Header -->
  <div class="sticky top-0 z-10 bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 lg:hidden">
    <div class="flex items-center px-4 py-3">
      <%= link_to inbox_index_path, class: "p-2 -ml-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <span class="ml-2 text-sm font-medium text-gray-900 dark:text-white truncate">
        Back to Inbox
      </span>
    </div>
  </div>

  <!-- Desktop: Back button -->
  <div class="hidden lg:block max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-6">
    <%= link_to inbox_index_path, class: "inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      Back to Inbox
    <% end %>
  </div>

  <!-- Email Detail Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <%= turbo_frame_tag "email_detail" do %>
      <%= render "inbox/detail_panel", 
          email: @email, 
          thread_emails: @thread_emails, 
          application: @application %>
    <% end %>
  </div>
</div>
