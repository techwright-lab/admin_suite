<% content_for :title, "Edit #{@skill_tag.name} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-2xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Skill Tags", admin_skill_tags_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to @skill_tag.name, admin_skill_tag_path(@skill_tag), class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Edit</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Edit Skill Tag</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Update skill tag information
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @skill_tag, url: admin_skill_tag_path(@skill_tag), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @skill_tag.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@skill_tag.errors.count, "error") %> prevented this skill tag from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @skill_tag.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Skill Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", placeholder: "e.g., Ruby on Rails", required: true %>
        <p class="form-help-text">The skill tag name (required, will be titleized automatically)</p>
      </div>

      <div>
        <%= render "shared/autocomplete",
          form: f,
          field_name: :category_id,
          label: "Category",
          placeholder: "Search or create category...",
          autocomplete_url: autocomplete_categories_path(kind: "skill_tag"),
          create_url: categories_path,
          modal_id: "skill-tag-category-modal",
          value: @skill_tag.category_id,
          display_value: @skill_tag.category_name || @skill_tag.legacy_category_name,
          required: false,
          help_text: "Optional category for grouping skill tags",
          kind: "skill_tag",
          wrapper_class: "mb-0" %>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_skill_tag_path(@skill_tag), class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Save Changes", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
