<% collection ||= [] %>
<% columns ||= [] %>
<% empty_message ||= "No items found" %>
<% empty_colspan ||= columns.length %>

<div
  class="
    bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200
    dark:border-slate-700 overflow-hidden
  "
>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
      <thead class="bg-slate-50 dark:bg-slate-900">
        <tr>
          <% columns.each do |column| %>
            <th
              class="
                px-4 py-3 text-left text-xs font-medium text-slate-500
                dark:text-slate-400 uppercase
              "
            >
              <%= column[:header] || column[:label] %>
            </th>
          <% end %>
        </tr>
      </thead>

      <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
        <% if collection.any? %>
          <% collection.each do |item| %>
            <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
              <% columns.each do |column| %>
                <td class="px-4 py-3 <%= column[:class] || '' %>">
                  <% if column[:content].is_a?(Proc) %>
                    <%= column[:content].call(item) %>
                  <% elsif column[:content].is_a?(Symbol) %>
                    <%= item.send(column[:content]) %>
                  <% else %>
                    <%= column[:content] %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td
              colspan="<%= empty_colspan %>"
              class="
                px-4 py-8 text-center text-sm text-slate-500
                dark:text-slate-400
              "
            >
              <%= empty_message %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
