<header
  class="
    bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700
    sticky top-0 z-40
  "
>
  <div class="px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Mobile menu button -->
      <button
        type="button"
        data-action="click->sidebar#toggle"
        class="
          lg:hidden inline-flex items-center justify-center p-2 rounded-md
          text-slate-400 hover:text-slate-500 hover:bg-slate-100
          dark:hover:bg-slate-700 focus:outline-none focus:ring-2
          focus:ring-inset focus:ring-amber-500
        "
      >
        <span class="sr-only">Open sidebar</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Title -->
      <div class="flex items-center gap-3">
        <h1 class="text-lg font-semibold text-slate-900 dark:text-white">
          Admin Panel
        </h1>
        <span class="hidden sm:inline-flex px-2 py-1 text-xs font-medium text-amber-700 dark:text-amber-400 bg-amber-100 dark:bg-amber-400/10 rounded-full">
          Developer Tools
        </span>
      </div>

      <!-- Right side actions -->
      <div class="flex items-center gap-2">
        <!-- Theme toggle -->
        <button
          type="button"
          data-controller="theme"
          data-action="click->theme#toggle"
          class="
            p-2 rounded-lg text-slate-400 hover:text-slate-500
            hover:bg-slate-100 dark:hover:bg-slate-700 focus:outline-none
            focus:ring-2 focus:ring-amber-500
          "
          title="Toggle theme"
        >
          <span class="sr-only">Toggle theme</span>
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>

        <!-- Exit Admin link -->
        <%= link_to root_path, class: "hidden sm:flex items-center gap-2 px-3 py-2 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 15l-3-3m0 0l3-3m-3 3h8M3 12a9 9 0 1118 0 9 9 0 01-18 0z" />
          </svg>
          Exit Admin
        <% end %>

        <!-- User info -->
        <div class="flex items-center gap-2 pl-2 border-l border-slate-200 dark:border-slate-700">
          <div class="w-8 h-8 bg-amber-500 rounded-full flex items-center justify-center text-white font-medium text-sm">
            <%= Current.user&.display_name&.first&.upcase || "A" %>
          </div>
          <span class="hidden md:block text-sm font-medium text-slate-700 dark:text-slate-300">
            <%= Current.user&.display_name || "Admin" %>
          </span>
        </div>
      </div>
    </div>
  </div>
</header>

