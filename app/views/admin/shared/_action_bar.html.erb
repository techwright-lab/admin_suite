<% actions ||= [] %>

<div class="flex items-center gap-3 mb-6">
  <% actions.each do |action| %>
    <% style = action[:style] || :primary
      style_classes = {
        primary: "bg-amber-500 hover:bg-amber-600 text-white",
        secondary: "bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300",
        danger: "bg-red-500 hover:bg-red-600 text-white",
        outline: "border border-slate-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700"
      }
      
      method = action[:method] || :get
      confirm = action[:confirm] %>

    <% if method == :delete %>
      <%= link_to action[:path], 
          method: :delete,
          data: { turbo_method: :delete, turbo_confirm: confirm },
          class: "inline-flex items-center px-4 py-2 #{style_classes[style]} text-sm font-medium rounded-lg transition-colors" do %>
        <% if action[:icon].present? %>
          <%= action[:icon] %>
        <% end %>

        <%= action[:label] %>
      <% end %>
    <% else %>
      <%= link_to action[:path], 
          method: (method == :get ? nil : method),
          data: (method == :get ? {} : { turbo_method: method, turbo_confirm: confirm }),
          class: "inline-flex items-center px-4 py-2 #{style_classes[style]} text-sm font-medium rounded-lg transition-colors",
          target: action[:target] do %>
        <% if action[:icon].present? %>
          <%= action[:icon] %>
        <% end %>

        <%= action[:label] %>
      <% end %>
    <% end %>
  <% end %>
</div>
