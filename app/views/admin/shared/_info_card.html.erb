<% title ||= nil %>
<% data ||= {} %>
<% class_name ||= "" %>

<div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6 <%= class_name %>">
  <% if title.present? %>
    <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">
      <%= title %>
    </h3>
  <% end %>

  <dl class="space-y-3">
    <% data.each do |label, value| %>
      <div>
        <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">
          <%= label %>
        </dt>

        <dd class="mt-1 text-sm text-slate-900 dark:text-white">
          <%= value || "â€”" %>
        </dd>
      </div>
    <% end %>
  </dl>
</div>
