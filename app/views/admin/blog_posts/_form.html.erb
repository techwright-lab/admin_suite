<%= form_with model: blog_post, url: blog_post.persisted? ? admin_blog_post_path(blog_post) : admin_blog_posts_path, local: true, class: "space-y-6" do |f| %>
  <% if blog_post.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 dark:text-red-300">
        <%= pluralize(blog_post.errors.count, "error") %> prevented this post from being saved:
      </h3>
      <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
        <% blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Post</h2>
        </div>

        <div class="p-6 space-y-6">
          <div>
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-input", placeholder: "Post title" %>
          </div>

          <div>
            <%= f.label :slug, class: "form-label" %>
            <%= f.text_field :slug, class: "form-input", placeholder: "auto-generated from title if blank" %>
            <p class="form-help-text">
              Used in the URL: <code class="bg-slate-100 dark:bg-slate-700 px-1 rounded">/blog/&lt;slug&gt;</code>
            </p>
          </div>

          <div>
            <%= f.label :excerpt, class: "form-label" %>
            <%= f.text_area :excerpt, rows: 3, class: "form-textarea", placeholder: "Short summary for listing pages (optional)" %>
          </div>

          <div data-controller="markdown-editor">
            <%= f.label :body, "Body (Markdown)", class: "form-label" %>
            <%= f.text_area :body, 
                rows: 18, 
                class: "form-textarea font-mono text-sm", 
                placeholder: "Write markdown here...",
                data: { markdown_editor_target: "textarea" } %>
            <p class="form-help-text">
              Full markdown is supported: headings, lists, bold/italic, links, code blocks, blockquotes, and more.
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Cover Image</h2>
        </div>

        <div class="p-6 space-y-4">
          <% if blog_post.cover_image.attached? %>
            <div class="overflow-hidden rounded-lg border border-slate-200 dark:border-slate-700 bg-slate-50 dark:bg-slate-900">
              <%= image_tag blog_post.cover_image_variant(size: :thumbnail),
                  class: "w-full aspect-video object-cover" %>
            </div>
          <% end %>

          <div>
            <%= f.label :cover_image, "Upload image", class: "form-label" %>
            <%= f.file_field :cover_image,
                accept: "image/*",
                class: "form-input file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-slate-100 file:text-slate-700 hover:file:bg-slate-200 dark:file:bg-slate-700 dark:file:text-slate-200 dark:hover:file:bg-slate-600" %>
            <p class="form-help-text">Recommended: 1200×675px (16:9). Used on blog cards and the post header.</p>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Publishing</h2>
        </div>

        <div class="p-6 space-y-4">
          <div>
            <%= f.label :status, class: "form-label" %>
            <%= f.select :status,
              [["Draft", "draft"], ["Published", "published"]],
              {},
              class: "form-select" %>
          </div>

          <div>
            <%= f.label :published_at, class: "form-label" %>
            <%= f.datetime_field :published_at, class: "form-input" %>
            <p class="form-help-text">
              Public visibility requires status=Published and a published time that is not in the future.
            </p>
          </div>

          <div>
            <%= f.label :author_name, class: "form-label" %>
            <%= f.text_field :author_name, class: "form-input", placeholder: "Optional" %>
          </div>

          <div>
            <%= f.label :tag_list, "Tags", class: "form-label" %>
            <div
              data-controller="tag-picker"
              data-tag-picker-suggest-url-value="<%= admin_blog_tags_path %>"
            >
              <%= f.hidden_field :tag_list, value: blog_post.tag_list.join(", "), data: { tag_picker_target: "hidden" } %>

              <div class="flex flex-wrap gap-2" data-tag-picker-target="chips"></div>

              <input
                type="text"
                class="form-input mt-2"
                placeholder="Type a tag and press Enter (or comma)…"
                data-tag-picker-target="input"
                data-action="keydown->tag-picker#onKeydown input->tag-picker#onInput"
                autocomplete="off"
              >

              <div data-tag-picker-target="menu"></div>
              <p class="form-help-text">Search existing tags, select suggestions, or create new ones.</p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <div class="flex flex-col gap-3">
          <%= f.submit blog_post.persisted? ? "Update Post" : "Create Post", class: "w-full px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
          <%= link_to "Cancel", blog_post.persisted? ? admin_blog_post_path(blog_post) : admin_blog_posts_path, class: "w-full px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg transition-colors text-center" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
