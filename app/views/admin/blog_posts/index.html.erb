<% content_for :title, "Blog Posts - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Blog Posts",
      description: "Draft and publish markdown blog posts for the public site",
      actions: link_to("New Post", new_admin_blog_post_path, class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors") %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_blog_posts_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Title or slug...",
            value: params[:search]
          },
          {
            type: :select,
            name: :status,
            label: "Status",
            options: [
              ["All", ""],
              ["Draft", "draft"],
              ["Published", "published"]
            ],
            value: params[:status]
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Recently Updated", ""],
              ["Published At", "published_at"],
              ["Recently Created", "recent"],
              ["Title (A-Z)", "title"]
            ],
            value: params[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @blog_posts,
          columns: [
            {
              header: "Post",
              content: ->(post) do
                content_tag(:div) do
                  content_tag(:div, class: "flex items-center gap-2") do
                    content_tag(:p, post.title, class: "text-sm font-medium text-slate-900 dark:text-white") +
                    content_tag(:span, post.status.to_s.titleize, class: "px-2 py-0.5 text-xs font-semibold rounded-full bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-200")
                  end +
                  content_tag(:p, post.slug, class: "mt-1 text-xs text-slate-500 dark:text-slate-400 font-mono")
                end
              end
            },
            {
              header: "Published",
              content: ->(post) do
                if post.published_at.present?
                  content_tag(:span, l(post.published_at, format: :long), class: "text-sm text-slate-600 dark:text-slate-400")
                else
                  content_tag(:span, "â€”", class: "text-sm text-slate-400")
                end
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Actions",
              content: ->(post) do
                content_tag(:div, class: "flex items-center gap-2") do
                  link_to("View", admin_blog_post_path(post), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium") +
                  link_to("Edit", edit_admin_blog_post_path(post), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium") +
                  link_to("Delete", admin_blog_post_path(post), method: :delete, data: { turbo_confirm: "Delete this blog post?" }, class: "text-red-600 hover:text-red-800 dark:text-red-400 font-medium")
                end
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No blog posts found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>


