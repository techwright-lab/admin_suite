<% content_for :title, "Scraping Attempts - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Scraping Attempts</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      View and debug job listing extraction attempts
    </p>
  </div>

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filters Sidebar -->
    <div class="lg:w-64 flex-shrink-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Filters</h3>
        
        <%= form_with url: admin_scraping_attempts_path, method: :get, local: true, class: "space-y-4" do |f| %>
          <!-- Status Filter -->
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Status</label>
            <select name="status" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">All Statuses</option>
              <option value="pending" <%= "selected" if @filters[:status] == "pending" %>>Pending</option>
              <option value="fetching" <%= "selected" if @filters[:status] == "fetching" %>>Fetching</option>
              <option value="extracting" <%= "selected" if @filters[:status] == "extracting" %>>Extracting</option>
              <option value="completed" <%= "selected" if @filters[:status] == "completed" %>>Completed</option>
              <option value="failed" <%= "selected" if @filters[:status] == "failed" %>>Failed</option>
              <option value="retrying" <%= "selected" if @filters[:status] == "retrying" %>>Retrying</option>
              <option value="dead_letter" <%= "selected" if @filters[:status] == "dead_letter" %>>Dead Letter</option>
            </select>
          </div>

          <!-- Domain Filter -->
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Domain</label>
            <input type="text" name="domain" value="<%= @filters[:domain] %>" placeholder="e.g., greenhouse.io"
                   class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
          </div>

          <!-- Extraction Method Filter -->
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Method</label>
            <select name="extraction_method" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">All Methods</option>
              <option value="api" <%= "selected" if @filters[:extraction_method] == "api" %>>API</option>
              <option value="ai" <%= "selected" if @filters[:extraction_method] == "ai" %>>AI</option>
            </select>
          </div>

          <!-- Date Range -->
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Date From</label>
            <input type="date" name="date_from" value="<%= @filters[:date_from] %>" 
                   class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
          </div>
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Date To</label>
            <input type="date" name="date_to" value="<%= @filters[:date_to] %>" 
                   class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
          </div>

          <!-- Has Events Filter -->
          <div class="flex items-center gap-2">
            <input type="checkbox" name="has_events" value="true" id="has_events" <%= "checked" if @filters[:has_events] == "true" %>
                   class="rounded border-slate-300 dark:border-slate-600 text-amber-500 focus:ring-amber-500">
            <label for="has_events" class="text-xs text-slate-500 dark:text-slate-400">With recorded events only</label>
          </div>

          <!-- Actions -->
          <div class="flex gap-2 pt-2">
            <button type="submit" class="flex-1 px-3 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors">
              Apply
            </button>
            <%= link_to "Clear", admin_scraping_attempts_path, class: "flex-1 px-3 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg text-center transition-colors" %>
          </div>
        <% end %>

        <!-- Quick Stats -->
        <div class="mt-6 pt-4 border-t border-slate-200 dark:border-slate-700">
          <h4 class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider mb-3">7-Day Stats</h4>
          <dl class="space-y-2 text-sm">
            <div class="flex justify-between">
              <dt class="text-slate-500 dark:text-slate-400">Total</dt>
              <dd class="font-medium text-slate-900 dark:text-white"><%= @stats[:total] %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-slate-500 dark:text-slate-400">Success Rate</dt>
              <dd class="font-medium text-slate-900 dark:text-white"><%= @stats[:success_rate] %>%</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-slate-500 dark:text-slate-400">Avg Duration</dt>
              <dd class="font-medium text-slate-900 dark:text-white"><%= @stats[:avg_duration] %>s</dd>
            </div>
          </dl>

          <!-- Status breakdown -->
          <div class="mt-4">
            <h5 class="text-xs font-medium text-slate-500 dark:text-slate-400 mb-2">By Status</h5>
            <% @stats[:by_status].each do |status, count| %>
              <div class="flex justify-between text-xs mb-1">
                <span class="text-slate-500 dark:text-slate-400"><%= status.to_s.titleize %></span>
                <span class="text-slate-900 dark:text-white"><%= count %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 min-w-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
            <thead class="bg-slate-50 dark:bg-slate-900">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Time</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Domain</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Method</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Provider</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Confidence</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Duration</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-700">
              <% @attempts.each do |attempt| %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <div><%= attempt.created_at.strftime("%b %d, %H:%M") %></div>
                    <div class="text-xs text-slate-400 dark:text-slate-500"><%= time_ago_in_words(attempt.created_at) %> ago</div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% status_colors = { "completed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400", "failed" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400", "dead_letter" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400", "pending" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300", "fetching" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400", "extracting" => "bg-indigo-100 text-indigo-800 dark:bg-indigo-900/20 dark:text-indigo-400", "retrying" => "bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400" } %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= status_colors[attempt.status] || 'bg-slate-100 text-slate-800' %>">
                      <%= attempt.status.titleize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-900 dark:text-white">
                    <%= attempt.domain %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <%= attempt.extraction_method&.upcase || "-" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <%= attempt.provider&.titleize || "-" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% if attempt.confidence_score %>
                      <% conf_pct = (attempt.confidence_score * 100).round(0) %>
                      <div class="flex items-center gap-2">
                        <div class="flex-1 h-2 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden" style="width: 50px;">
                          <div class="h-full <%= conf_pct >= 85 ? 'bg-green-500' : conf_pct >= 70 ? 'bg-amber-500' : 'bg-red-500' %>" style="width: <%= conf_pct %>%;"></div>
                        </div>
                        <span class="text-xs text-slate-500 dark:text-slate-400"><%= conf_pct %>%</span>
                      </div>
                    <% else %>
                      <span class="text-slate-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <%= attempt.formatted_duration || "-" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <%= link_to "View", admin_scraping_attempt_path(attempt), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                  </td>
                </tr>
              <% end %>
              <% if @attempts.empty? %>
                <tr>
                  <td colspan="8" class="px-4 py-8 text-center text-sm text-slate-500 dark:text-slate-400">
                    No scraping attempts found
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @total_pages > 1 %>
          <div class="px-4 py-3 border-t border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-between">
              <div class="text-sm text-slate-500 dark:text-slate-400">
                Showing <%= ((@page - 1) * 25) + 1 %> to <%= [(@page * 25), @total_count].min %> of <%= @total_count %> results
              </div>
              <div class="flex gap-2">
                <% if @page > 1 %>
                  <%= link_to "Previous", url_for(params.permit!.merge(page: @page - 1)), class: "px-3 py-1 text-sm bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300" %>
                <% end %>
                <% if @page < @total_pages %>
                  <%= link_to "Next", url_for(params.permit!.merge(page: @page + 1)), class: "px-3 py-1 text-sm bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

