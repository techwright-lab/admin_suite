<% content_for :title, "Scraping Attempt ##{@attempt.id} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center justify-between mb-2">
      <div class="flex items-center gap-3">
        <%= link_to admin_scraping_attempts_path, class: "text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-300" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        <% end %>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Scraping Attempt</h1>
        <% status_colors = { "completed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400", "failed" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400", "dead_letter" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400", "pending" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300", "fetching" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400", "extracting" => "bg-indigo-100 text-indigo-800 dark:bg-indigo-900/20 dark:text-indigo-400", "retrying" => "bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400" } %>
        <span class="px-3 py-1 text-sm font-semibold rounded-full <%= status_colors[@attempt.status] || 'bg-slate-100 text-slate-800' %>">
          <%= @attempt.status.titleize %>
        </span>
      </div>

      <!-- Action Buttons -->
      <div class="flex items-center gap-2">
        <% if @attempt.failed? %>
          <%= button_to retry_attempt_admin_scraping_attempt_path(@attempt),
              method: :post,
              class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded-lg bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900",
              data: { turbo_confirm: "Queue a retry job for this listing?" } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Retry
          <% end %>
        <% elsif !@attempt.completed? %>
          <%= button_to mark_failed_admin_scraping_attempt_path(@attempt),
              method: :post,
              class: "inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded-lg bg-red-600 text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-slate-900",
              data: { turbo_confirm: "Mark this stuck attempt as failed? This will allow it to be retried." } do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
            Mark Failed
          <% end %>
        <% end %>
      </div>
    </div>
    <p class="text-sm text-slate-500 dark:text-slate-400">
      <%= @attempt.created_at.strftime("%B %d, %Y at %H:%M:%S UTC") %> (<%= time_ago_in_words(@attempt.created_at) %> ago)
    </p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mb-6">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domain</p>
      <p class="mt-1 text-sm font-semibold text-slate-900 dark:text-white truncate" title="<%= @attempt.domain %>"><%= @attempt.domain %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Method</p>
      <p class="mt-1 text-sm font-semibold text-slate-900 dark:text-white"><%= @attempt.extraction_method&.upcase || "N/A" %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Provider</p>
      <p class="mt-1 text-sm font-semibold text-slate-900 dark:text-white"><%= @attempt.provider&.titleize || "N/A" %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Duration</p>
      <p class="mt-1 text-sm font-semibold text-slate-900 dark:text-white"><%= @attempt.formatted_duration || "N/A" %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Confidence</p>
      <% if @attempt.confidence_score %>
        <p class="mt-1 text-sm font-semibold <%= @attempt.confidence_score >= 0.85 ? 'text-green-600 dark:text-green-400' : @attempt.confidence_score >= 0.7 ? 'text-amber-600 dark:text-amber-400' : 'text-red-600 dark:text-red-400' %>">
          <%= (@attempt.confidence_score * 100).round(1) %>%
        </p>
      <% else %>
        <p class="mt-1 text-sm font-semibold text-slate-500">N/A</p>
      <% end %>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Retries</p>
      <p class="mt-1 text-sm font-semibold text-slate-900 dark:text-white"><%= @attempt.retry_count %></p>
    </div>
  </div>

  <!-- URL -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4 mb-6">
    <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-2">URL</p>
    <div class="flex items-center gap-2">
      <a href="<%= @attempt.url %>" target="_blank" class="text-sm text-amber-600 dark:text-amber-400 hover:underline truncate flex-1">
        <%= @attempt.url %>
      </a>
      <button type="button" onclick="navigator.clipboard.writeText('<%= @attempt.url %>')" class="p-1 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300" title="Copy URL">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Error Message (if failed) -->
  <% if @attempt.error_message.present? %>
    <div class="bg-red-50 dark:bg-red-900/20 rounded-xl border border-red-200 dark:border-red-800 p-4 mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-red-800 dark:text-red-400">Error: <%= @attempt.failed_step&.titleize || "Unknown Step" %></h3>
          <p class="mt-1 text-sm text-red-700 dark:text-red-300"><%= @attempt.error_message %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Pipeline Timeline -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-6">
    <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
      <h2 class="text-base font-semibold text-slate-900 dark:text-white">Pipeline Timeline</h2>
      <% if @timeline_stats.present? %>
        <div class="flex items-center gap-4 text-xs text-slate-500 dark:text-slate-400">
          <span><%= @timeline_stats[:successful_steps] %> successful</span>
          <span><%= @timeline_stats[:failed_steps] %> failed</span>
          <span>Total: <%= @timeline_stats[:total_duration_ms] ? "#{(@timeline_stats[:total_duration_ms] / 1000.0).round(2)}s" : "N/A" %></span>
        </div>
      <% end %>
    </div>
    
    <% if @events.any? %>
      <div class="divide-y divide-slate-200 dark:divide-slate-700">
        <% @events.each do |event| %>
          <div class="p-4 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors" data-controller="collapsible">
            <div class="flex items-start gap-4">
              <!-- Step indicator -->
              <div class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center <%= event.success? ? 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400' : event.failed? ? 'bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400' : event.skipped? ? 'bg-slate-100 dark:bg-slate-700 text-slate-500 dark:text-slate-400' : 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400' %>">
                <% if event.success? %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                <% elsif event.failed? %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                <% elsif event.skipped? %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
                  </svg>
                <% else %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                <% end %>
              </div>
              
              <!-- Event details -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center justify-between gap-4">
                  <div class="flex items-center gap-2">
                    <h3 class="text-sm font-semibold text-slate-900 dark:text-white">
                      Step <%= event.step_order %>: <%= event.event_type_display %>
                    </h3>
                    <span class="text-xs text-slate-500 dark:text-slate-400"><%= event.formatted_duration %></span>
                  </div>
                  <button type="button" data-action="click->collapsible#toggle" class="text-xs text-amber-600 dark:text-amber-400 hover:underline">
                    View Details
                  </button>
                </div>
                
                <!-- Summary line -->
                <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
                  <%= event.output_summary(80) %>
                </p>
                
                <!-- Error if present -->
                <% if event.has_error? %>
                  <p class="mt-1 text-xs text-red-600 dark:text-red-400">
                    <span class="font-medium"><%= event.error_type %>:</span> <%= truncate(event.error_message, length: 100) %>
                  </p>
                <% end %>
              </div>
            </div>
            
            <!-- Expandable details -->
            <div data-collapsible-target="content" class="hidden mt-4 ml-12">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                <!-- Input Payload -->
                <div class="bg-slate-50 dark:bg-slate-900 rounded-lg p-3">
                  <h4 class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase mb-2">Input</h4>
                  <pre class="text-xs text-slate-700 dark:text-slate-300 font-mono whitespace-pre-wrap overflow-x-auto max-h-48 overflow-y-auto"><%= event.input_payload.present? ? JSON.pretty_generate(event.input_payload) : "No input data" %></pre>
                </div>
                
                <!-- Output Payload -->
                <div class="bg-slate-50 dark:bg-slate-900 rounded-lg p-3">
                  <h4 class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase mb-2">Output</h4>
                  <pre class="text-xs text-slate-700 dark:text-slate-300 font-mono whitespace-pre-wrap overflow-x-auto max-h-48 overflow-y-auto"><%= event.output_payload.present? ? JSON.pretty_generate(event.output_payload) : "No output data" %></pre>
                </div>
              </div>
              
              <% if event.metadata.present? && event.metadata.any? %>
                <div class="mt-3 bg-slate-50 dark:bg-slate-900 rounded-lg p-3">
                  <h4 class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase mb-2">Metadata</h4>
                  <pre class="text-xs text-slate-700 dark:text-slate-300 font-mono whitespace-pre-wrap"><%= JSON.pretty_generate(event.metadata) %></pre>
                </div>
              <% end %>
              
              <div class="mt-2 flex items-center gap-2">
                <%= link_to admin_scraping_event_path(event), class: "text-xs text-amber-600 dark:text-amber-400 hover:underline" do %>
                  View Full Event Details â†’
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-8 text-center text-sm text-slate-500 dark:text-slate-400">
        No pipeline events recorded for this attempt.
        <p class="mt-1 text-xs">Events are recorded when the orchestrator runs with the new event recording system.</p>
      </div>
    <% end %>
  </div>

  <!-- HTML Scraping Results -->
  <% if @html_scraping_logs.present? && @html_scraping_logs.any? %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-6">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <h2 class="text-base font-semibold text-slate-900 dark:text-white">HTML Scraping Results</h2>
          <span class="text-xs text-slate-500 dark:text-slate-400">
            <%= @html_scraping_logs.count %> log<%= @html_scraping_logs.count == 1 ? "" : "s" %>
          </span>
        </div>
        <%= link_to "View All Logs", admin_html_scraping_logs_path(scraping_attempt_id: @attempt.id), class: "text-xs text-amber-600 dark:text-amber-400 hover:underline" %>
      </div>
      
      <div class="p-4">
        <div class="space-y-4">
          <% @html_scraping_logs.each do |html_log| %>
            <div class="rounded-lg border border-slate-200 dark:border-slate-700 p-4">
              <div class="flex items-center justify-between gap-4">
                <div class="flex items-center gap-2 min-w-0">
                  <span class="px-2 py-0.5 text-xs font-semibold rounded-full <%= html_log.status_badge_color %>">
                    <%= html_log.status.titleize %>
                  </span>
                  <span class="text-xs text-slate-500 dark:text-slate-400 truncate">
                    <%= html_log.created_at.strftime("%b %d, %H:%M") %>
                  </span>
                  <% if html_log.fetch_mode.present? %>
                    <span class="px-2 py-0.5 text-xs rounded-full bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300">
                      <%= html_log.fetch_mode %>
                    </span>
                  <% end %>
                  <% if html_log.board_type.present? %>
                    <span class="px-2 py-0.5 text-xs rounded-full bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300">
                      <%= html_log.board_type %>
                    </span>
                  <% end %>
                </div>
                <%= link_to "Details", admin_html_scraping_log_path(html_log), class: "text-xs text-amber-600 dark:text-amber-400 hover:underline flex-shrink-0" %>
              </div>

              <div class="mt-3 grid grid-cols-2 md:grid-cols-4 gap-4">
                <div>
                  <p class="text-xs text-slate-500 dark:text-slate-400">Extraction Rate</p>
                  <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= html_log.extraction_rate_display %></p>
                </div>
                <div>
                  <p class="text-xs text-slate-500 dark:text-slate-400">Fields</p>
                  <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= html_log.fields_extracted %>/<%= html_log.fields_attempted %></p>
                </div>
                <div>
                  <p class="text-xs text-slate-500 dark:text-slate-400">Duration</p>
                  <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= html_log.formatted_duration %></p>
                </div>
                <div>
                  <p class="text-xs text-slate-500 dark:text-slate-400">HTML Size</p>
                  <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= number_to_human_size(html_log.html_size || 0) %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Data Section -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Scraped HTML Data -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">Cached HTML Data</h2>
      </div>
      <% if @scraped_data %>
        <div class="p-4 space-y-3">
          <div class="flex justify-between text-sm">
            <span class="text-slate-500 dark:text-slate-400">Status:</span>
            <span class="<%= @scraped_data.cache_valid? ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
              <%= @scraped_data.cache_valid? ? "Valid" : "Expired" %>
            </span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-slate-500 dark:text-slate-400">Valid Until:</span>
            <span class="text-slate-900 dark:text-white"><%= @scraped_data.valid_until.strftime("%b %d, %Y %H:%M") %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-slate-500 dark:text-slate-400">Raw HTML Size:</span>
            <span class="text-slate-900 dark:text-white"><%= number_to_human_size(@scraped_data.html_content&.bytesize || 0) %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-slate-500 dark:text-slate-400">Cleaned HTML Size:</span>
            <span class="text-slate-900 dark:text-white"><%= number_to_human_size(@scraped_data.cleaned_html&.bytesize || 0) %></span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-slate-500 dark:text-slate-400">HTTP Status:</span>
            <span class="text-slate-900 dark:text-white"><%= @scraped_data.http_status || "N/A" %></span>
          </div>
          
          <!-- View HTML buttons -->
          <div class="pt-3 border-t border-slate-200 dark:border-slate-700 flex gap-2">
            <button type="button" data-controller="modal" data-action="click->modal#open" data-modal-target="raw-html-modal" class="flex-1 px-3 py-2 text-xs font-medium bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-colors">
              View Raw HTML
            </button>
            <button type="button" data-controller="modal" data-action="click->modal#open" data-modal-target="cleaned-html-modal" class="flex-1 px-3 py-2 text-xs font-medium bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-colors">
              View Cleaned HTML
            </button>
          </div>
        </div>
      <% else %>
        <div class="p-4 text-sm text-slate-500 dark:text-slate-400">
          No cached HTML data available.
        </div>
      <% end %>
    </div>

    <!-- Job Listing -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">Job Listing</h2>
      </div>
      <% if @job_listing %>
        <div class="p-4 space-y-3">
          <div>
            <span class="text-xs text-slate-500 dark:text-slate-400 uppercase">Title</span>
            <p class="text-sm font-medium text-slate-900 dark:text-white"><%= @job_listing.title || "Not extracted" %></p>
          </div>
          <div>
            <span class="text-xs text-slate-500 dark:text-slate-400 uppercase">Company</span>
            <p class="text-sm text-slate-900 dark:text-white"><%= @job_listing.company&.name || "Not extracted" %></p>
          </div>
          <div>
            <span class="text-xs text-slate-500 dark:text-slate-400 uppercase">Location</span>
            <p class="text-sm text-slate-900 dark:text-white"><%= @job_listing.location || "Not extracted" %></p>
          </div>
          <div>
            <span class="text-xs text-slate-500 dark:text-slate-400 uppercase">Remote Type</span>
            <p class="text-sm text-slate-900 dark:text-white"><%= @job_listing.remote_type&.titleize %></p>
          </div>
          <% if @job_listing.salary_min || @job_listing.salary_max %>
            <div>
              <span class="text-xs text-slate-500 dark:text-slate-400 uppercase">Salary</span>
              <p class="text-sm text-slate-900 dark:text-white">
                <%= @job_listing.salary_currency %> <%= number_with_delimiter(@job_listing.salary_min) %> - <%= number_with_delimiter(@job_listing.salary_max) %>
              </p>
            </div>
          <% end %>
          
          <div class="pt-3 border-t border-slate-200 dark:border-slate-700">
            <%= link_to "View in Avo", avo_path + "/resources/job_listings/#{@job_listing.id}", target: "_blank", class: "text-sm text-amber-600 dark:text-amber-400 hover:underline" %>
          </div>
        </div>
      <% else %>
        <div class="p-4 text-sm text-slate-500 dark:text-slate-400">
          No job listing linked.
        </div>
      <% end %>
    </div>
  </div>

  <!-- AI Extraction Logs -->
  <% if @ai_logs.any? %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-6">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">AI Extraction Logs</h2>
        <%= link_to "View All", admin_ai_llm_api_logs_path, class: "text-xs text-amber-600 dark:text-amber-400 hover:underline" %>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
          <thead class="bg-slate-50 dark:bg-slate-900">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Time</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Provider</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Status</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Latency</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Cost</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @ai_logs.each do |log| %>
              <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                <td class="px-4 py-2 text-xs text-slate-500 dark:text-slate-400"><%= log.created_at.strftime("%H:%M:%S") %></td>
                <td class="px-4 py-2 text-xs text-slate-900 dark:text-white"><%= log.provider.titleize %></td>
                <td class="px-4 py-2">
                  <% ai_status_colors = { "success" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400", "error" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400", "timeout" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400", "rate_limited" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400" } %>
                  <span class="px-2 text-xs font-semibold rounded-full <%= ai_status_colors[log.status] || 'bg-slate-100 text-slate-800' %>">
                    <%= log.status.titleize %>
                  </span>
                </td>
                <td class="px-4 py-2 text-xs text-slate-500 dark:text-slate-400"><%= log.formatted_latency %></td>
                <td class="px-4 py-2 text-xs text-slate-500 dark:text-slate-400"><%= log.formatted_cost %></td>
                <td class="px-4 py-2">
                  <%= link_to "View", admin_ai_llm_api_log_path(log), class: "text-xs text-amber-600 dark:text-amber-400 hover:underline" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <!-- Response Metadata -->
  <% if @attempt.response_metadata.present? && @attempt.response_metadata.any? %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden" data-controller="collapsible">
      <button type="button" data-action="click->collapsible#toggle" class="w-full px-4 py-3 flex items-center justify-between text-left border-b border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white">Response Metadata</h3>
        <svg data-collapsible-target="icon" class="w-5 h-5 text-slate-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>
      <div data-collapsible-target="content" class="hidden">
        <div class="p-4">
          <pre class="text-xs text-slate-700 dark:text-slate-300 font-mono whitespace-pre-wrap overflow-x-auto"><%= JSON.pretty_generate(@attempt.response_metadata) %></pre>
        </div>
      </div>
    </div>
  <% end %>
</div>


