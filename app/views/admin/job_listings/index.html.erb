<% content_for :title, "Job Listings - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Job Listings",
      description: "Manage and review job listings with extraction data" %>

  <!-- Stats Grid - Custom handling for nested stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div
      class="
        bg-white dark:bg-slate-800 rounded-xl shadow-sm border
        border-slate-200 dark:border-slate-700 p-4
      "
    >
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">
        Total Listings
      </p>

      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white">
        <%= @stats[:total] %>
      </p>
    </div>

    <div
      class="
        bg-white dark:bg-slate-800 rounded-xl shadow-sm border
        border-slate-200 dark:border-slate-700 p-4
      "
    >
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">
        With Description
      </p>

      <p class="mt-1 text-2xl font-bold text-green-600 dark:text-green-400">
        <%= @stats[:with_description] %>
      </p>
    </div>

    <div
      class="
        bg-white dark:bg-slate-800 rounded-xl shadow-sm border
        border-slate-200 dark:border-slate-700 p-4
      "
    >
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">
        With Requirements
      </p>

      <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400">
        <%= @stats[:with_requirements] %>
      </p>
    </div>

    <div
      class="
        bg-white dark:bg-slate-800 rounded-xl shadow-sm border
        border-slate-200 dark:border-slate-700 p-4
      "
    >
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">
        Active
      </p>

      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white">
        <%= @stats[:by_status]["active"] || 0 %>
      </p>
    </div>
  </div>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_job_listings_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Title, company...",
            value: @filters[:search]
          },
          {
            type: :select,
            name: :status,
            label: "Status",
            options: [
              ["All", ""],
              ["Active", "active"],
              ["Closed", "closed"],
              ["Draft", "draft"]
            ],
            value: @filters[:status]
          },
          {
            type: :select,
            name: :extraction_status,
            label: "Extraction",
            options: [
              ["All", ""],
              ["Completed", "completed"],
              ["Pending", "pending"],
              ["Failed", "failed"]
            ],
            value: @filters[:extraction_status]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @job_listings,
          columns: [
            {
              header: "Job",
              content: ->(listing) do
                content_tag(:div, class: "max-w-xs") do
                  content_tag(:p, listing.display_title, class: "text-sm font-medium text-slate-900 dark:text-white truncate", title: listing.display_title) +
                  content_tag(:p, listing.url, class: "text-xs text-slate-500 dark:text-slate-400 truncate")
                end
              end
            },
            {
              header: "Company",
              content: ->(listing) { listing.company.name },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Status",
              content: ->(listing) do
                render "admin/shared/status_badge", status: listing.status, custom_colors: {
                  "active" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                  "closed" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300",
                  "draft" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400"
                }
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Data",
              content: ->(listing) do
                content_tag(:div, class: "flex items-center gap-2") do
                  (listing.description.present? ? content_tag(:span, "", class: "w-2 h-2 rounded-full bg-green-500", title: "Has description") : content_tag(:span, "", class: "w-2 h-2 rounded-full bg-slate-300 dark:bg-slate-600", title: "No description")) +
                  (listing.requirements.present? ? content_tag(:span, "", class: "w-2 h-2 rounded-full bg-green-500", title: "Has requirements") : content_tag(:span, "", class: "w-2 h-2 rounded-full bg-slate-300 dark:bg-slate-600", title: "No requirements")) +
                  (listing.responsibilities.present? ? content_tag(:span, "", class: "w-2 h-2 rounded-full bg-green-500", title: "Has responsibilities") : content_tag(:span, "", class: "w-2 h-2 rounded-full bg-slate-300 dark:bg-slate-600", title: "No responsibilities"))
                end
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Actions",
              content: ->(listing) do
                content_tag(:div, class: "flex items-center gap-2") do
                  link_to("View", admin_job_listing_path(listing), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium") +
                  link_to("Edit", edit_admin_job_listing_path(listing), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium")
                end
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No job listings found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
