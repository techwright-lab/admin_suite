<% content_for :title, "Synced Emails - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Synced Emails",
      description: "Manage and match synced emails from Gmail" %>

  <%= render "admin/shared/stats_grid",
      stats: @stats,
      colors: {
        total: "text-slate-900 dark:text-white",
        pending: "text-amber-600 dark:text-amber-400",
        processed: "text-green-600 dark:text-green-400",
        needs_review: "text-red-600 dark:text-red-400",
        unmatched: "text-blue-600 dark:text-blue-400",
        matched: "text-purple-600 dark:text-purple-400"
      },
      columns: @stats.size,
      grid_class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-6 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_synced_emails_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Subject, from email...",
            value: @filters[:search]
          },
          {
            type: :select,
            name: :status,
            label: "Status",
            options: [
              ["All", ""],
              ["Pending", "pending"],
              ["Processed", "processed"],
              ["Ignored", "ignored"],
              ["Failed", "failed"]
            ],
            value: @filters[:status]
          },
          {
            type: :select,
            name: :matched,
            label: "Matching",
            options: [
              ["All", ""],
              ["Matched", "matched"],
              ["Unmatched", "unmatched"]
            ],
            value: @filters[:matched]
          },
          {
            type: :select,
            name: :email_type,
            label: "Email Type",
            options: [["All", ""]] + SyncedEmail::EMAIL_TYPES.map { |t| [t.titleize, t] },
            value: @filters[:email_type]
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Recent", "recent"],
              ["Oldest", "oldest"],
              ["Subject (A-Z)", "subject"]
            ],
            value: @filters[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @synced_emails,
          columns: [
            {
              header: "Email",
              content: ->(email) do
                content_tag(:div, class: "max-w-md") do
                  content_tag(:p, email.subject, class: "text-sm font-medium text-slate-900 dark:text-white truncate", title: email.subject) +
                  content_tag(:p, "#{email.from_name.presence || email.from_email}", class: "text-xs text-slate-500 dark:text-slate-400 truncate")
                end
              end
            },
            {
              header: "User",
              content: ->(email) do
                if email.user.present?
                  content_tag(:span, email.user.display_name, class: "text-sm text-slate-600 dark:text-slate-400")
                else
                  content_tag(:span, "—", class: "text-sm text-slate-400 dark:text-slate-500")
                end
              end,
              class: "whitespace-nowrap text-sm"
            },
            {
              header: "Status",
              content: ->(email) do
                render "admin/shared/status_badge", status: email.status, custom_colors: {
                  "pending" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                  "processed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                  "ignored" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400",
                  "failed" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400"
                }
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Matched",
              content: ->(email) do
                if email.interview_application.present?
                  content_tag(:span, "Yes", class: "text-xs text-green-600 dark:text-green-400")
                else
                  content_tag(:span, "No", class: "text-xs text-red-600 dark:text-red-400")
                end
              end,
              class: "whitespace-nowrap text-sm"
            },
            {
              header: "Date",
              content: ->(email) { email.email_date&.strftime("%b %d, %Y") || "—" },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Actions",
              content: ->(email) do
                content_tag(:div, class: "flex items-center gap-2") do
                  link_to("View", admin_synced_email_path(email), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium") +
                  link_to("Edit", edit_admin_synced_email_path(email), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium")
                end
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No synced emails found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
