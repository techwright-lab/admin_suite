<% content_for :title, "Edit #{@synced_email.subject} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-4xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Synced Emails", admin_synced_emails_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to @synced_email.subject.truncate(30), admin_synced_email_path(@synced_email), class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Edit</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Edit Synced Email</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Manually match email to application or update status
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @synced_email, url: admin_synced_email_path(@synced_email), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @synced_email.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@synced_email.errors.count, "error") %> prevented this email from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @synced_email.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Read-only email info -->
      <div class="p-4 rounded-lg bg-slate-50 dark:bg-slate-700/50">
        <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Email Information</p>
        <p class="text-sm text-slate-900 dark:text-white"><strong>Subject:</strong> <%= @synced_email.subject %></p>
        <p class="text-sm text-slate-900 dark:text-white"><strong>From:</strong> <%= @synced_email.from_name.presence || @synced_email.from_email %></p>
        <p class="text-sm text-slate-900 dark:text-white"><strong>Date:</strong> <%= @synced_email.email_date&.strftime("%B %d, %Y at %H:%M") || "—" %></p>
      </div>

      <!-- Manual Matching -->
      <div>
        <%= f.label :interview_application_id, "Match to Application", class: "form-label" %>
        <% if @interview_applications.present? %>
          <%= f.collection_select :interview_application_id, 
              @interview_applications,
              :id,
              ->(app) { "#{app.company.name} • #{app.job_role.title} (#{app.pipeline_stage&.titleize})" },
              { include_blank: "— No application —" },
              { class: "form-select" } %>
          <p class="form-help-text">Select an interview application to match this email to</p>
        <% else %>
          <p class="text-sm text-slate-500 dark:text-slate-400">
            No interview applications found for this user.
          </p>
        <% end %>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :email_type, "Email Type", class: "form-label" %>
          <%= f.select :email_type, 
              [["— Select type —", ""]] + SyncedEmail::EMAIL_TYPES.map { |t| [t.titleize, t] },
              {},
              { class: "form-select" } %>
          <p class="form-help-text">Type of email</p>
        </div>
        <div>
          <%= f.label :status, "Status", class: "form-label" %>
          <%= f.select :status, 
              SyncedEmail::STATUSES.map { |s| [s.to_s.titleize, s] },
              {},
              { class: "form-select" } %>
          <p class="form-help-text">Processing status</p>
        </div>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_synced_email_path(@synced_email), class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Save Changes", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

