  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "LLM Prompts", admin_ai_llm_prompts_path, class: "hover:text-amber-600" %>
      <span>/</span>
      <%= link_to @prompt.name, admin_ai_llm_prompt_path(@prompt), class: "hover:text-amber-600" %>
      <span>/</span>
      <span>Edit</span>
    </div>
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Edit Prompt Template</h1>
  </div>

  <%= render "form", prompt: @prompt %>
</div>




