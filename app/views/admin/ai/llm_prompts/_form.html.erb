<%= form_with model: prompt, url: prompt.persisted? ? admin_ai_llm_prompt_path(prompt) : admin_ai_llm_prompts_path, local: true, class: "space-y-6" do |f| %>
  <% if prompt.errors.any? %>
    <div
      class="
        bg-red-50 dark:bg-red-900/20 border border-red-200
        dark:border-red-800 rounded-lg p-4
      "
    >
      <div class="flex">
        <svg
          class="w-5 h-5 text-red-400"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
            clip-rule="evenodd"
          />
        </svg>

        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-300">
            <%= pluralize(prompt.errors.count, "error") %> prevented this
            prompt from being saved:
          </h3>

          <ul
            class="
              mt-2 text-sm text-red-700 dark:text-red-400 list-disc
              list-inside
            "
          >
            <% prompt.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Form -->
    <div class="lg:col-span-2 space-y-6">
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700
        "
      >
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Prompt Details
          </h2>
        </div>

        <div class="p-6 space-y-6">
          <!-- Type (for new prompts) -->
          <% if prompt.new_record? %>
            <div>
              <%= f.label :type, "Prompt Type", class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" %>

              <%= f.select :type,
                [
                  ["Job Extraction", "Ai::JobExtractionPrompt"],
                  ["Email Extraction", "Ai::EmailExtractionPrompt"],
                  ["Resume Skill Extraction", "Ai::ResumeSkillExtractionPrompt"]
                ],
                { selected: prompt.type || params[:prompt_type]&.then { |t| "Ai::#{t.camelize}Prompt" } },
                class: "block w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white shadow-sm focus:border-amber-500 focus:ring-amber-500" %>

              <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
                Select the type of extraction this prompt is for
              </p>
            </div>
          <% else %>
            <%= f.hidden_field :type %>
            <div>
              <label
                class="
                  block text-sm font-medium text-slate-700
                  dark:text-slate-300 mb-1
                "
              >
                Prompt Type
              </label>

              <p class="text-sm text-slate-900 dark:text-white">
                <%= prompt.prompt_type_name %>
              </p>
            </div>
          <% end %>

          <!-- Name -->
          <div>
            <%= f.label :name, class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" %>
            <%= f.text_field :name, class: "block w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white shadow-sm focus:border-amber-500 focus:ring-amber-500", placeholder: "e.g., Job Extraction v2 - Enhanced" %>
          </div>

          <!-- Description -->
          <div>
            <%= f.label :description, class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" %>
            <%= f.text_area :description, rows: 2, class: "block w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white shadow-sm focus:border-amber-500 focus:ring-amber-500", placeholder: "Brief description of this prompt version..." %>
          </div>

          <!-- Prompt Template -->
          <div>
            <%= f.label :prompt_template, "Prompt Template", class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" %>
            <%= f.text_area :prompt_template, rows: 20, class: "block w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white shadow-sm focus:border-amber-500 focus:ring-amber-500 font-mono text-sm", placeholder: "Enter your prompt template here. Use {{variable_name}} for placeholders." %>

            <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
              Use
              <code class="bg-slate-100 dark:bg-slate-700 px-1 rounded">{{variable_name}}</code>
              syntax for dynamic values
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Settings -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700
        "
      >
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Settings
          </h2>
        </div>

        <div class="p-6 space-y-4">
          <!-- Version -->
          <div>
            <%= f.label :version, class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1" %>
            <%= f.number_field :version, min: 1, class: "block w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white shadow-sm focus:border-amber-500 focus:ring-amber-500" %>
          </div>

          <!-- Active -->
          <div class="flex items-center">
            <%= f.check_box :active, class: "rounded border-slate-300 dark:border-slate-600 text-amber-600 shadow-sm focus:border-amber-500 focus:ring-amber-500 dark:bg-slate-700" %>
            <%= f.label :active, "Active (use this prompt)", class: "ml-2 text-sm text-slate-700 dark:text-slate-300" %>
          </div>

          <p class="text-xs text-slate-500 dark:text-slate-400">
            Activating this prompt will deactivate all other prompts of the same
            type.
          </p>
        </div>
      </div>

      <!-- Variable Reference -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700
        "
      >
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Available Variables
          </h2>
        </div>

        <div class="p-6">
          <div class="space-y-3 text-sm">
            <div>
              <p class="font-medium text-slate-700 dark:text-slate-300">
                Job Extraction:
              </p>
              <code class="text-amber-600 dark:text-amber-400">{{url}}</code>
              ,
              <code class="text-amber-600 dark:text-amber-400">
                {{html_content}}
              </code>
            </div>

            <div>
              <p class="font-medium text-slate-700 dark:text-slate-300">
                Email Extraction:
              </p>
              <code class="text-amber-600 dark:text-amber-400">
                {{subject}}
              </code>
              ,
              <code class="text-amber-600 dark:text-amber-400">{{body}}</code>
            </div>

            <div>
              <p class="font-medium text-slate-700 dark:text-slate-300">
                Resume Extraction:
              </p>

              <code class="text-amber-600 dark:text-amber-400">
                {{resume_text}}
              </code>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700 p-6
        "
      >
        <div class="flex flex-col gap-3">
          <%= f.submit prompt.persisted? ? "Update Prompt" : "Create Prompt", class: "w-full px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
          <%= link_to "Cancel", prompt.persisted? ? admin_ai_llm_prompt_path(prompt) : admin_ai_llm_prompts_path, class: "w-full px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg transition-colors text-center" %>
        </div>
      </div>
    </div>
  </div>
<% end %>




