<% content_for :title, "#{@prompt.name} - LLM Prompts - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div
      class="
        flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400
        mb-2
      "
    >
      <%= link_to "LLM Prompts", admin_ai_llm_prompts_path, class: "hover:text-amber-600" %>
      <span>/</span>
      <span><%= @prompt.name %></span>
    </div>

    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white">
          <%= @prompt.name %>
        </h1>

        <% if @prompt.active? %>
          <span
            class="
              px-2 py-1 text-xs font-semibold rounded-full bg-green-100
              text-green-800 dark:bg-green-900/20 dark:text-green-400
            "
          >
            Active
          </span>
        <% else %>
          <span
            class="
              px-2 py-1 text-xs font-semibold rounded-full bg-slate-100
              text-slate-800 dark:bg-slate-700 dark:text-slate-300
            "
          >
            Inactive
          </span>
        <% end %>
      </div>

      <div class="flex items-center gap-2">
        <% unless @prompt.active? %>
          <%= button_to "Activate", activate_admin_ai_llm_prompt_path(@prompt), method: :post, class: "px-4 py-2 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition-colors" %>
        <% end %>

        <%= button_to "Duplicate", duplicate_admin_ai_llm_prompt_path(@prompt), method: :post, class: "px-4 py-2 bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg transition-colors" %>
        <%= link_to "Edit", edit_admin_ai_llm_prompt_path(@prompt), class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors" %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Prompt Template -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700
        "
      >
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Prompt Template
          </h2>
        </div>

        <div class="p-6">
          <pre
            class="
              bg-slate-50 dark:bg-slate-900 rounded-lg p-4 overflow-x-auto
              text-sm text-slate-800 dark:text-slate-200 whitespace-pre-wrap
              font-mono
            "
          ><%= @prompt.prompt_template %></pre>
        </div>
      </div>

      <!-- Variables Used -->
      <% if @template_variables.any? %>
        <div
          class="
            bg-white dark:bg-slate-800 rounded-xl shadow-sm border
            border-slate-200 dark:border-slate-700
          "
        >
          <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
              Template Variables
            </h2>
          </div>

          <div class="p-6">
            <div class="flex flex-wrap gap-2">
              <% @template_variables.each do |var| %>
                <span
                  class="
                    px-3 py-1 bg-amber-100 dark:bg-amber-900/30
                    text-amber-800 dark:text-amber-300 rounded-full text-sm
                    font-mono
                  "
                >
                  {{<%= var %>}}
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Details -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700
        "
      >
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Details
          </h2>
        </div>

        <div class="p-6">
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">
                Type
              </dt>

              <dd class="mt-1 text-sm text-slate-900 dark:text-white">
                <%= @prompt.prompt_type_name %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">
                Version
              </dt>

              <dd class="mt-1 text-sm text-slate-900 dark:text-white">
                v<%= @prompt.version %>
              </dd>
            </div>

            <% if @prompt.description.present? %>
              <div>
                <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">
                  Description
                </dt>

                <dd class="mt-1 text-sm text-slate-900 dark:text-white">
                  <%= @prompt.description %>
                </dd>
              </div>
            <% end %>

            <div>
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">
                Created
              </dt>

              <dd class="mt-1 text-sm text-slate-900 dark:text-white">
                <%= @prompt.created_at.strftime("%b %d, %Y at %H:%M") %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">
                Updated
              </dt>

              <dd class="mt-1 text-sm text-slate-900 dark:text-white">
                <%= @prompt.updated_at.strftime("%b %d, %Y at %H:%M") %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Actions -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700
        "
      >
        <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Actions
          </h2>
        </div>

        <div class="p-6 space-y-3">
          <%= link_to admin_ai_llm_api_logs_path, class: "flex items-center gap-2 text-sm text-slate-600 dark:text-slate-400 hover:text-amber-600" do %>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            View API Logs
          <% end %>

          <hr class="border-slate-200 dark:border-slate-700">

          <%= button_to admin_ai_llm_prompt_path(@prompt), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this prompt template?" }, class: "flex items-center gap-2 text-sm text-red-600 hover:text-red-800" do %>
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
              />
            </svg>
            Delete Prompt
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




