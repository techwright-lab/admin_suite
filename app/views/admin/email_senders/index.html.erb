<% content_for :title, "Email Senders - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Email Senders</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Manage email senders discovered from Gmail sync and associate them with companies
    </p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-7 gap-4 mb-6">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Total</p>
      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:total] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Unassigned</p>
      <p class="mt-1 text-2xl font-bold text-amber-600 dark:text-amber-400"><%= @stats[:unassigned] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Assigned</p>
      <p class="mt-1 text-2xl font-bold text-green-600 dark:text-green-400"><%= @stats[:assigned] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Auto-detected</p>
      <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400"><%= @stats[:auto_detected] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Verified</p>
      <p class="mt-1 text-2xl font-bold text-emerald-600 dark:text-emerald-400"><%= @stats[:verified] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">ATS Systems</p>
      <p class="mt-1 text-2xl font-bold text-purple-600 dark:text-purple-400"><%= @stats[:ats_systems] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domains</p>
      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @stats[:unique_domains] %></p>
    </div>
  </div>

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filters -->
    <div class="lg:w-64 flex-shrink-0 space-y-4">
      <!-- Search & Filters -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Filters</h3>
        
        <%= form_with url: admin_email_senders_path, method: :get, local: true, class: "space-y-4" do %>
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Search</label>
            <input type="text" name="search" value="<%= @filters[:search] %>" placeholder="Email, name, domain..."
                   class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Status</label>
            <select name="status" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">All</option>
              <option value="unassigned" <%= "selected" if @filters[:status] == "unassigned" %>>Unassigned</option>
              <option value="assigned" <%= "selected" if @filters[:status] == "assigned" %>>Assigned</option>
              <option value="auto_detected" <%= "selected" if @filters[:status] == "auto_detected" %>>Auto-detected</option>
              <option value="verified" <%= "selected" if @filters[:status] == "verified" %>>Verified</option>
            </select>
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Sender Type</label>
            <select name="sender_type" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">All</option>
              <% EmailSender::SENDER_TYPES.each do |type| %>
                <option value="<%= type %>" <%= "selected" if @filters[:sender_type] == type %>><%= type.titleize %></option>
              <% end %>
            </select>
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Domain</label>
            <select name="domain" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">All domains</option>
              <% @domains.first(50).each do |domain| %>
                <option value="<%= domain %>" <%= "selected" if @filters[:domain] == domain %>><%= domain %></option>
              <% end %>
            </select>
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Sort By</label>
            <select name="sort" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">Recent</option>
              <option value="email_count" <%= "selected" if @filters[:sort] == "email_count" %>>Most Active</option>
              <option value="last_seen" <%= "selected" if @filters[:sort] == "last_seen" %>>Last Seen</option>
              <option value="alphabetical" <%= "selected" if @filters[:sort] == "alphabetical" %>>Alphabetical</option>
            </select>
          </div>

          <div class="flex gap-2">
            <button type="submit" class="flex-1 px-3 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors">
              Apply
            </button>
            <%= link_to "Clear", admin_email_senders_path, class: "flex-1 px-3 py-2 bg-slate-100 dark:bg-slate-700 text-center text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors" %>
          </div>
        <% end %>
      </div>

      <!-- Bulk Assign Card -->
      <% if @filters[:domain].present? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-amber-200 dark:border-amber-700 p-4">
          <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-2">Bulk Assign Domain</h3>
          <p class="text-xs text-slate-500 dark:text-slate-400 mb-3">
            Assign all senders from <strong class="text-slate-700 dark:text-slate-300"><%= @filters[:domain] %></strong> to a company
          </p>
          
          <%= form_with url: bulk_assign_admin_email_senders_path, method: :post, local: true, class: "space-y-3" do %>
            <input type="hidden" name="domain" value="<%= @filters[:domain] %>">
            <div>
              <select name="company_id" required class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
                <option value="">Select company...</option>
                <% @companies.each do |company| %>
                  <option value="<%= company.id %>"><%= company.name %></option>
                <% end %>
              </select>
            </div>
            <button type="submit" class="w-full px-3 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors"
                    data-turbo-confirm="Are you sure you want to assign all senders from <%= @filters[:domain] %> to this company?">
              Assign All from Domain
            </button>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Senders Table -->
    <div class="flex-1 min-w-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
            <thead class="bg-slate-50 dark:bg-slate-900">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Sender</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domain</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Company</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Type</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Emails</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
              <% @email_senders.each do |sender| %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                  <td class="px-4 py-3">
                    <div class="max-w-xs">
                      <p class="text-sm font-medium text-slate-900 dark:text-white truncate">
                        <%= sender.email %>
                        <% if sender.verified? %>
                          <span class="ml-1 inline-flex items-center" title="Verified">
                            <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                          </span>
                        <% end %>
                      </p>
                      <% if sender.name.present? %>
                        <p class="text-xs text-slate-500 dark:text-slate-400 truncate"><%= sender.name %></p>
                      <% end %>
                    </div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <%= link_to sender.domain, admin_email_senders_path(domain: sender.domain), 
                        class: "text-sm text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% if sender.company.present? %>
                      <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400">
                        <%= sender.company.name %>
                      </span>
                    <% elsif sender.auto_detected_company.present? %>
                      <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400" title="Auto-detected">
                        <%= sender.auto_detected_company.name %> (auto)
                      </span>
                    <% else %>
                      <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400">
                        Unassigned
                      </span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% type_colors = {
                      "recruiter" => "bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400",
                      "hiring_manager" => "bg-indigo-100 text-indigo-800 dark:bg-indigo-900/20 dark:text-indigo-400",
                      "hr" => "bg-pink-100 text-pink-800 dark:bg-pink-900/20 dark:text-pink-400",
                      "ats_system" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                      "unknown" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400"
                    } %>
                    <span class="px-2 py-0.5 text-xs font-semibold rounded-full <%= type_colors[sender.sender_type] || type_colors['unknown'] %>">
                      <%= sender.sender_type&.titleize || "Unknown" %>
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-600 dark:text-slate-400">
                    <%= sender.email_count %>
                    <% if sender.last_seen_at.present? %>
                      <span class="text-xs text-slate-400 dark:text-slate-500 block">
                        <%= time_ago_in_words(sender.last_seen_at) %> ago
                      </span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <div class="flex items-center gap-2">
                      <%= link_to "View", admin_email_sender_path(sender), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                      <%= link_to "Edit", edit_admin_email_sender_path(sender), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium" %>
                    </div>
                  </td>
                </tr>
              <% end %>
              <% if @email_senders.empty? %>
                <tr>
                  <td colspan="6" class="px-4 py-8 text-center text-sm text-slate-500 dark:text-slate-400">
                    No email senders found
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @total_pages > 1 %>
          <div class="px-4 py-3 border-t border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-between">
              <div class="text-sm text-slate-500 dark:text-slate-400">
                Showing <%= ((@page - 1) * Admin::EmailSendersController::PER_PAGE) + 1 %> to <%= [(@page * Admin::EmailSendersController::PER_PAGE), @total_count].min %> of <%= @total_count %>
              </div>
              <div class="flex gap-2">
                <% if @page > 1 %>
                  <%= link_to "Previous", url_for(params.permit!.merge(page: @page - 1)), class: "px-3 py-1 text-sm bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600" %>
                <% end %>
                <% if @page < @total_pages %>
                  <%= link_to "Next", url_for(params.permit!.merge(page: @page + 1)), class: "px-3 py-1 text-sm bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

