<% content_for :title, "Edit #{@email_sender.email} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-2xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Email Senders", admin_email_senders_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to @email_sender.email, admin_email_sender_path(@email_sender), class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Edit</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Edit Email Sender</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Update sender information and company association
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @email_sender, url: admin_email_sender_path(@email_sender), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @email_sender.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@email_sender.errors.count, "error") %> prevented this sender from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @email_sender.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Read-only fields -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Email</label>
          <p class="mt-1 text-sm text-slate-900 dark:text-white bg-slate-50 dark:bg-slate-700/50 rounded-lg px-3 py-2">
            <%= @email_sender.email %>
          </p>
        </div>
        <div>
          <label class="block text-sm font-medium text-slate-700 dark:text-slate-300">Domain</label>
          <p class="mt-1 text-sm text-slate-900 dark:text-white bg-slate-50 dark:bg-slate-700/50 rounded-lg px-3 py-2">
            <%= @email_sender.domain %>
          </p>
        </div>
      </div>

      <!-- Editable fields -->
      <div>
        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Display Name</label>
        <%= f.text_field :name, class: "w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm", placeholder: "e.g., John Smith" %>
        <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">The display name shown for this sender</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Company</label>
        <%= f.collection_select :company_id, @companies, :id, :name, 
            { include_blank: "— No company —" },
            { class: "w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm" } %>
        <% if @email_sender.auto_detected_company.present? %>
          <p class="mt-1 text-xs text-slate-500 dark:text-slate-400">
            Auto-detected: <span class="text-blue-600 dark:text-blue-400"><%= @email_sender.auto_detected_company.name %></span>
          </p>
        <% end %>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-1">Sender Type</label>
        <%= f.select :sender_type, EmailSender::SENDER_TYPES.map { |t| [t.titleize, t] },
            { include_blank: "— Select type —" },
            { class: "w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm" } %>
      </div>

      <div class="flex items-center">
        <%= f.check_box :verified, class: "h-4 w-4 text-amber-600 focus:ring-amber-500 border-slate-300 rounded dark:border-slate-600 dark:bg-slate-700" %>
        <label class="ml-2 block text-sm text-slate-700 dark:text-slate-300">
          Mark as verified
        </label>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_email_sender_path(@email_sender), class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Save Changes", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

