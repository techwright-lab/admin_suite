<% content_for :title, "#{@email_sender.email} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Email Senders", admin_email_senders_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white"><%= @email_sender.email %></span>
    </div>
    
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white flex items-center gap-2">
          <%= @email_sender.email %>
          <% if @email_sender.verified? %>
            <span class="inline-flex items-center" title="Verified">
              <svg class="w-6 h-6 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </span>
          <% end %>
        </h1>
        <% if @email_sender.name.present? %>
          <p class="mt-1 text-lg text-slate-600 dark:text-slate-400"><%= @email_sender.name %></p>
        <% end %>
      </div>
      <div class="flex gap-2">
        <%= link_to edit_admin_email_sender_path(@email_sender), class: "inline-flex items-center px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
          Edit
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Info -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Details Card -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Details</h2>
        
        <dl class="grid grid-cols-2 gap-4">
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Email</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white"><%= @email_sender.email %></dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domain</dt>
            <dd class="mt-1">
              <%= link_to @email_sender.domain, admin_email_senders_path(domain: @email_sender.domain),
                  class: "text-sm text-amber-600 hover:text-amber-800 dark:text-amber-400" %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Name</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white"><%= @email_sender.name || "—" %></dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Sender Type</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white"><%= @email_sender.sender_type&.titleize || "Unknown" %></dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Email Count</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white"><%= @email_sender.email_count %></dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Last Seen</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <% if @email_sender.last_seen_at.present? %>
                <%= @email_sender.last_seen_at.strftime("%B %d, %Y at %H:%M") %>
              <% else %>
                —
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Assigned Company</dt>
            <dd class="mt-1">
              <% if @email_sender.company.present? %>
                <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400">
                  <%= @email_sender.company.name %>
                </span>
              <% else %>
                <span class="text-sm text-slate-500 dark:text-slate-400">Not assigned</span>
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Auto-detected Company</dt>
            <dd class="mt-1">
              <% if @email_sender.auto_detected_company.present? %>
                <span class="px-2 py-0.5 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                  <%= @email_sender.auto_detected_company.name %>
                </span>
              <% else %>
                <span class="text-sm text-slate-500 dark:text-slate-400">None</span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Recent Emails -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Recent Emails (<%= @email_sender.synced_emails.count %>)</h2>
        </div>
        
        <% if @recent_emails.any? %>
          <div class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @recent_emails.each do |email| %>
              <div class="p-4 hover:bg-slate-50 dark:hover:bg-slate-700/50">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-slate-900 dark:text-white truncate">
                      <%= email.subject %>
                    </p>
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1 truncate">
                      <%= email.snippet %>
                    </p>
                    <div class="flex items-center gap-2 mt-2">
                      <% type_colors = {
                        "invite" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                        "rejection" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400",
                        "offer" => "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/20 dark:text-emerald-400",
                        "confirmation" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400",
                        "follow_up" => "bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400"
                      } %>
                      <span class="px-2 py-0.5 text-xs font-semibold rounded-full <%= type_colors[email.email_type] || 'bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400' %>">
                        <%= email.email_type.titleize %>
                      </span>
                      <% if email.interview_application.present? %>
                        <span class="text-xs text-slate-500 dark:text-slate-400">
                          → <%= email.interview_application.job_role&.title %> at <%= email.interview_application.company&.name %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <div class="text-xs text-slate-500 dark:text-slate-400 ml-4 flex-shrink-0">
                    <%= email.email_date&.strftime("%b %d") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center text-sm text-slate-500 dark:text-slate-400">
            No emails found from this sender
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Quick Actions</h3>
        <div class="space-y-2">
          <%= link_to admin_email_senders_path(domain: @email_sender.domain), 
              class: "flex items-center px-3 py-2 text-sm text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700 rounded-lg transition-colors" do %>
            <svg class="w-5 h-5 mr-2 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
            View all from <%= @email_sender.domain %>
          <% end %>
        </div>
      </div>

      <!-- Same Domain Senders -->
      <% if @same_domain_senders.any? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Other senders from <%= @email_sender.domain %></h3>
          <div class="space-y-3">
            <% @same_domain_senders.each do |sender| %>
              <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                  <%= link_to admin_email_sender_path(sender), class: "text-sm text-slate-900 dark:text-white hover:text-amber-600 dark:hover:text-amber-400 truncate block" do %>
                    <%= sender.email %>
                  <% end %>
                  <% if sender.name.present? %>
                    <p class="text-xs text-slate-500 dark:text-slate-400 truncate"><%= sender.name %></p>
                  <% end %>
                </div>
                <span class="text-xs text-slate-500 dark:text-slate-400 ml-2"><%= sender.email_count %> emails</span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- Timestamps -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Timestamps</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Created</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @email_sender.created_at.strftime("%B %d, %Y at %H:%M") %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Updated</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @email_sender.updated_at.strftime("%B %d, %Y at %H:%M") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>

