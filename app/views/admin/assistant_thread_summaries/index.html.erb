<% content_for :title, "Thread Summaries - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Thread Summaries",
      description: "View conversation summaries generated by the assistant for context management." %>

  <!-- Stats Grid -->
  <%= render "admin/shared/stats_grid",
    stats: @stats,
    colors: {
      total: "text-slate-900 dark:text-white",
      with_llm_log: "text-green-600 dark:text-green-400",
      avg_version: "text-blue-600 dark:text-blue-400",
      recent_24h: "text-amber-600 dark:text-amber-400"
    },
    grid_class: "grid grid-cols-2 sm:grid-cols-4 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filters Sidebar -->
    <%= render "admin/shared/filter_sidebar",
      url: admin_assistant_thread_summaries_path,
      filters: [
        { type: :number, name: :thread_id, label: "Thread ID", placeholder: "123", value: params[:thread_id] },
        { type: :number, name: :user_id, label: "User ID", placeholder: "456", value: params[:user_id] },
        { type: :number, name: :version, label: "Version", placeholder: "1", value: params[:version] }
      ] %>

    <!-- Main Content -->
    <div class="flex-1 min-w-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
            <thead class="bg-slate-50 dark:bg-slate-900">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">ID</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Thread</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">User</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Version</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Summary</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Created</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-700">
              <% @summaries.each do |summary| %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <td class="px-4 py-3">
                    <div class="text-sm font-medium text-slate-900 dark:text-white">#<%= summary.id %></div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <%= link_to "##{summary.thread_id}", admin_assistant_thread_path(summary.thread_id), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                  </td>
                  <td class="px-4 py-3">
                    <div class="text-sm text-slate-900 dark:text-white"><%= summary.thread&.user&.email_address&.truncate(25) || "â€”" %></div>
                    <div class="text-xs text-slate-500 dark:text-slate-400">ID: <%= summary.thread&.user_id %></div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400">
                      v<%= summary.summary_version %>
                    </span>
                  </td>
                  <td class="px-4 py-3">
                    <div class="text-sm text-slate-700 dark:text-slate-300 max-w-xs truncate" title="<%= summary.summary_text %>">
                      <%= summary.summary_text.truncate(60) %>
                    </div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <div><%= summary.created_at.strftime("%b %d, %H:%M") %></div>
                    <div class="text-xs"><%= time_ago_in_words(summary.created_at) %> ago</div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <%= link_to "View", admin_assistant_thread_summary_path(summary), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                  </td>
                </tr>
              <% end %>
              <% if @summaries.empty? %>
                <tr>
                  <td colspan="7" class="px-4 py-8 text-center text-sm text-slate-500 dark:text-slate-400">
                    No thread summaries found
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= render "admin/shared/pagination", pagy: @pagy %>
      </div>
    </div>
  </div>
</div>
