<% content_for :title, "New LLM Provider Config - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-4xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "LLM Provider Configs", admin_llm_provider_configs_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">New Config</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">New LLM Provider Config</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Create a new LLM provider configuration
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @provider_config, url: admin_llm_provider_configs_path, local: true, class: "space-y-6" do |f| %>
      <% if @provider_config.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@provider_config.errors.count, "error") %> prevented this config from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @provider_config.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Display Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", placeholder: "e.g., OpenAI GPT-4", required: true %>
        <p class="form-help-text">Display name for this provider (required)</p>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :provider_type, "Provider Type", class: "form-label" %>
          <%= f.select :provider_type, 
              LlmProviderConfig::PROVIDER_TYPES.map { |t| [t.to_s.titleize, t.to_s] },
              {},
              { class: "form-select", required: true } %>
          <p class="form-help-text">LLM provider type (required)</p>
        </div>
        <div>
          <%= f.label :llm_model, "Model", class: "form-label" %>
          <%= f.text_field :llm_model, class: "form-input", placeholder: "e.g., gpt-4o", required: true %>
          <p class="form-help-text">Model identifier (required)</p>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :priority, "Priority", class: "form-label" %>
          <%= f.number_field :priority, class: "form-input", min: 0, required: true %>
          <p class="form-help-text">Lower number = higher priority (0 is highest)</p>
        </div>
        <div class="flex items-center pt-8">
          <%= f.check_box :enabled, class: "h-4 w-4 text-amber-600 focus:ring-amber-500 border-slate-300 rounded dark:border-slate-600 dark:bg-slate-700" %>
          <label class="ml-2 block text-sm text-slate-700 dark:text-slate-300">
            Enable this provider
          </label>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :max_tokens, "Max Tokens", class: "form-label" %>
          <%= f.number_field :max_tokens, class: "form-input", min: 1, max: 100000 %>
          <p class="form-help-text">Maximum tokens for response</p>
        </div>
        <div>
          <%= f.label :temperature, "Temperature", class: "form-label" %>
          <%= f.number_field :temperature, step: 0.1, class: "form-input", min: 0, max: 2 %>
          <p class="form-help-text">Temperature (0.0 = deterministic, 2.0 = creative)</p>
        </div>
      </div>

      <div>
        <%= f.label :api_endpoint, "API Endpoint", class: "form-label" %>
        <%= f.text_field :api_endpoint, class: "form-input", placeholder: "https://api.example.com/v1" %>
        <p class="form-help-text">Custom API endpoint (for Ollama or custom deployments)</p>
      </div>

      <div>
        <%= render "admin/shared/json_editor", 
            form: f, 
            field_name: :settings,
            value: @provider_config.settings || {},
            rows: 10,
            help_text: "Additional provider-specific settings as JSON (optional)" %>
      </div>

      <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
        <p class="text-sm text-amber-800 dark:text-amber-400">
          <strong>Note:</strong> API keys are stored in Rails credentials, not in this configuration. 
          Ensure the appropriate API key is configured in <code class="px-1 py-0.5 bg-amber-100 dark:bg-amber-900/30 rounded text-xs">config/credentials.yml.enc</code>
        </p>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_llm_provider_configs_path, class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Create Config", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

