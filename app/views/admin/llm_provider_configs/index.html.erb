<% content_for :title, "LLM Provider Configs - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "LLM Provider Configs",
      description: "Manage LLM provider configurations",
      actions: link_to("New Provider", new_admin_llm_provider_config_path, class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors") %>

  <%= render "admin/shared/stats_grid",
      stats: @stats,
      colors: {
        total: "text-slate-900 dark:text-white",
        enabled: "text-green-600 dark:text-green-400",
        disabled: "text-slate-600 dark:text-slate-400",
        ready: "text-blue-600 dark:text-blue-400"
      },
      columns: @stats.size,
      grid_class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_llm_provider_configs_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Name or model...",
            value: @filters[:search]
          },
          {
            type: :select,
            name: :enabled,
            label: "Status",
            options: [
              ["All", ""],
              ["Enabled", "true"],
              ["Disabled", "false"]
            ],
            value: @filters[:enabled]
          },
          {
            type: :select,
            name: :provider_type,
            label: "Provider Type",
            options: [["All", ""]] + LlmProviderConfig::PROVIDER_TYPES.map { |t| [t.to_s.titleize, t.to_s] },
            value: @filters[:provider_type]
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Priority", "priority"],
              ["Name (A-Z)", "name"],
              ["Provider Type", "provider_type"]
            ],
            value: @filters[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @provider_configs,
          columns: [
            {
              header: "Provider",
              content: ->(config) do
                content_tag(:div) do
                  content_tag(:p, config.name, class: "text-sm font-medium text-slate-900 dark:text-white") +
                  content_tag(:p, "#{config.provider_type.titleize} â€¢ #{config.llm_model}", class: "text-xs text-slate-500 dark:text-slate-400")
                end
              end
            },
            {
              header: "Status",
              content: ->(config) do
                content_tag(:div, class: "space-y-1") do
                  render("admin/shared/status_badge", status: config.enabled? ? "enabled" : "disabled", custom_colors: {
                    "enabled" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                    "disabled" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300"
                  }) +
                  (config.ready? ? content_tag(:span, "Ready", class: "text-xs text-blue-600 dark:text-blue-400") : content_tag(:span, "Not Ready", class: "text-xs text-red-600 dark:text-red-400"))
                end
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Priority",
              content: ->(config) { config.priority },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "API Key",
              content: ->(config) do
                if config.api_key_configured?
                  content_tag(:span, "Configured", class: "text-xs text-green-600 dark:text-green-400")
                else
                  content_tag(:span, "Missing", class: "text-xs text-red-600 dark:text-red-400")
                end
              end,
              class: "whitespace-nowrap text-sm"
            },
            {
              header: "Actions",
              content: ->(config) do
                content_tag(:div, class: "flex items-center gap-2") do
                  link_to("View", admin_llm_provider_config_path(config), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium") +
                  link_to("Edit", edit_admin_llm_provider_config_path(config), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium")
                end
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No LLM provider configs found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
