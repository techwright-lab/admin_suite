<% content_for :title, "New Job Role - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-2xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Job Roles", admin_job_roles_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">New Job Role</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">New Job Role</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Create a new job role
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @job_role, url: admin_job_roles_path, local: true, class: "space-y-6" do |f| %>
      <% if @job_role.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@job_role.errors.count, "error") %> prevented this job role from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @job_role.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :title, "Job Role Title", class: "form-label" %>
        <%= f.text_field :title, class: "form-input", placeholder: "e.g., Senior Software Engineer", required: true %>
        <p class="form-help-text">The job role title (required)</p>
      </div>

      <div>
        <%= f.label :category, "Category", class: "form-label" %>
        <%= f.text_field :category, class: "form-input", placeholder: "e.g., Engineering, Product, Design" %>
        <p class="form-help-text">Optional category for grouping job roles</p>
      </div>

      <div>
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, rows: 6, class: "form-textarea", placeholder: "Job role description..." %>
        <p class="form-help-text">Brief description of the job role</p>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_job_roles_path, class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Create Job Role", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

