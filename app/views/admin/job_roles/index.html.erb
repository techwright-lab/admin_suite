<% content_for :title, "Job Roles - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Job Roles",
      description: "Manage job roles and positions",
      actions: link_to("New Job Role", new_admin_job_role_path, class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors") %>

  <%= render "admin/shared/stats_grid",
      stats: @stats,
      colors: {
        total: "text-slate-900 dark:text-white",
        with_category: "text-blue-600 dark:text-blue-400",
        with_description: "text-green-600 dark:text-green-400",
        with_job_listings: "text-amber-600 dark:text-amber-400"
      },
      columns: @stats.size,
      grid_class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_job_roles_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Title or category...",
            value: @filters[:search]
          },
          {
            type: :autocomplete,
            name: :category_id,
            label: "Category",
            placeholder: "Search or create category...",
            autocomplete_url: autocomplete_categories_path(kind: "job_role"),
            create_url: categories_path,
            value: @filters[:category_id],
            display_value: @selected_category&.name,
            kind: "job_role"
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Title (A-Z)", "title"],
              ["Category", "category"],
              ["Recently Added", "recent"]
            ],
            value: @filters[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @job_roles,
          columns: [
            {
              header: "Job Role",
              content: ->(role) do
                content_tag(:div) do
                  content_tag(:div, class: "flex items-center gap-2") do
                    content_tag(:p, role.title, class: "text-sm font-medium text-slate-900 dark:text-white") +
                    (role.disabled? ? content_tag(:span, "Disabled", class: "px-2 py-0.5 text-xs font-semibold rounded-full bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-200") : "".html_safe)
                  end +
                  (role.category_name.present? ? content_tag(:p, role.category_name, class: "text-xs text-slate-500 dark:text-slate-400") : "".html_safe)
                end
              end
            },
            {
              header: "Job Listings",
              content: ->(role) { role.job_listings.count },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Applications",
              content: ->(role) { role.interview_applications.count },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Actions",
              content: ->(role) do
                content_tag(:div, class: "flex items-center gap-2") do
                  link_to("View", admin_job_role_path(role), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium") +
                  link_to("Edit", edit_admin_job_role_path(role), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium") +
                  (role.disabled? ?
                    button_to("Enable", enable_admin_job_role_path(role), method: :post, class: "text-green-600 hover:text-green-800 dark:text-green-400 font-medium") :
                    button_to("Disable", disable_admin_job_role_path(role), method: :post, class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium", data: { turbo_confirm: "Disable this job role? It will be hidden from autocomplete and can be re-enabled." })
                  ) +
                  link_to("Delete", admin_job_role_path(role), method: :delete, data: { turbo_confirm: "Delete this job role? This may remove associated content if it has job listings." }, class: "text-red-600 hover:text-red-800 dark:text-red-400 font-medium")
                end
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No job roles found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
