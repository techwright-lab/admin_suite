<% content_for :title, "#{@interview_application.company.name} - #{@interview_application.job_role.title} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "#{@interview_application.company.name} • #{@interview_application.job_role.title}",
      description: "Application by #{@interview_application.user.display_name}",
      breadcrumbs: [
        { label: "Interview Applications", path: admin_interview_applications_path },
        { label: "#{@interview_application.company.name}" }
      ] %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Status Cards -->
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
          <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Status</p>
          <%= render "admin/shared/status_badge", status: @interview_application.status, custom_colors: {
            "active" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
            "archived" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300",
            "rejected" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400",
            "accepted" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400"
          } %>
        </div>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
          <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Pipeline Stage</p>
          <%= render "admin/shared/status_badge", status: @interview_application.pipeline_stage, custom_colors: {
            "applied" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400",
            "screening" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
            "interviewing" => "bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400",
            "offer" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
            "closed" => "bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300"
          } %>
        </div>
      </div>

      <!-- Notes -->
      <% if @interview_application.notes.present? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
            Notes
          </h2>
          <div class="prose dark:prose-invert max-w-none">
            <%= simple_format(@interview_application.notes) %>
          </div>
        </div>
      <% end %>

      <!-- AI Summary -->
      <% if @interview_application.ai_summary.present? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
            AI Summary
          </h2>
          <div class="prose dark:prose-invert max-w-none">
            <%= simple_format(@interview_application.ai_summary) %>
          </div>
        </div>
      <% end %>

      <!-- Interview Rounds -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="p-6 border-b border-slate-200 dark:border-slate-700">
          <div class="flex items-center justify-between">
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
              Interview Rounds
            </h2>
            <span class="text-sm text-slate-500 dark:text-slate-400">
              <%= @interview_rounds.count %> total
            </span>
          </div>
        </div>

        <% if @interview_rounds.any? %>
          <div class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @interview_rounds.each do |round| %>
              <div class="p-4 hover:bg-slate-50 dark:hover:bg-slate-700/50">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-slate-900 dark:text-white">
                      <%= round.stage_display_name %>
                    </p>
                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                      <% if round.scheduled_at.present? %>
                        Scheduled: <%= round.scheduled_at.strftime("%B %d, %Y at %H:%M") %>
                      <% end %>
                      <% if round.completed_at.present? %>
                        • Completed: <%= round.completed_at.strftime("%B %d, %Y") %>
                      <% end %>
                    </p>
                    <% if round.interviewer_name.present? %>
                      <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                        Interviewer: <%= round.interviewer_name %> <% if round.interviewer_role.present? %>(<%= round.interviewer_role %>)<% end %>
                      </p>
                    <% end %>
                    <div class="mt-2">
                      <%= render "admin/shared/status_badge", status: round.result, custom_colors: {
                        "pending" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                        "passed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                        "failed" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400",
                        "waitlisted" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400"
                      } %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center text-sm text-slate-500 dark:text-slate-400">
            No interview rounds
          </div>
        <% end %>
      </div>

      <!-- Company Feedback -->
      <% if @company_feedback.present? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
            Company Feedback
          </h2>
          <% if @company_feedback.feedback_text.present? %>
            <div class="prose dark:prose-invert max-w-none mb-4">
              <%= simple_format(@company_feedback.feedback_text) %>
            </div>
          <% end %>
          <% if @company_feedback.rejection_reason.present? %>
            <div class="mt-4">
              <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Rejection Reason</p>
              <p class="text-sm text-slate-600 dark:text-slate-400"><%= @company_feedback.rejection_reason %></p>
            </div>
          <% end %>
          <% if @company_feedback.next_steps.present? %>
            <div class="mt-4">
              <p class="text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Next Steps</p>
              <p class="text-sm text-slate-600 dark:text-slate-400"><%= @company_feedback.next_steps %></p>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- Synced Emails -->
      <% if @synced_emails.any? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
          <div class="p-6 border-b border-slate-200 dark:border-slate-700">
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
              Related Emails
            </h2>
          </div>
          <div class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @synced_emails.each do |email| %>
              <div class="p-4">
                <p class="text-sm font-medium text-slate-900 dark:text-white">
                  <%= email.subject %>
                </p>
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                  From: <%= email.from_name.presence || email.from_email %> • <%= email.email_date&.strftime("%B %d, %Y") %>
                </p>
                <%= render "admin/shared/status_badge", status: email.status, custom_colors: {
                  "pending" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                  "processed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                  "ignored" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400",
                  "failed" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400"
                } %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <%= render "admin/shared/info_card",
          title: "Application Details",
          data: {
            "User" => link_to(@interview_application.user.display_name, admin_user_path(@interview_application.user), class: "text-amber-600 dark:text-amber-400 hover:underline"),
            "Company" => link_to(@interview_application.company.name, admin_company_path(@interview_application.company), class: "text-amber-600 dark:text-amber-400 hover:underline"),
            "Job Role" => link_to(@interview_application.job_role.title, admin_job_role_path(@interview_application.job_role), class: "text-amber-600 dark:text-amber-400 hover:underline"),
            "Applied At" => @interview_application.applied_at&.strftime("%B %d, %Y") || "—"
          } %>

      <% if @interview_application.job_listing.present? %>
        <%= render "admin/shared/info_card",
            title: "Job Listing",
            data: {
              "Listing" => link_to(@interview_application.job_listing.title, admin_job_listing_path(@interview_application.job_listing), class: "text-amber-600 dark:text-amber-400 hover:underline")
            } %>
      <% end %>

      <% if @skill_tags.any? %>
        <%= render "admin/shared/info_card",
            title: "Skill Tags",
            data: @skill_tags.map { |tag| [tag.name, link_to("View", admin_skill_tag_path(tag), class: "text-amber-600 dark:text-amber-400 hover:underline text-xs")] }.to_h %>
      <% end %>

      <%= render "admin/shared/info_card",
          title: "Statistics",
          data: {
            "Interview Rounds" => @interview_rounds.count,
            "Skill Tags" => @skill_tags.count,
            "Has Feedback" => @company_feedback.present? ? "Yes" : "No"
          } %>

      <%= render "admin/shared/info_card",
          title: "Timestamps",
          data: {
            "Created" => @interview_application.created_at.strftime("%B %d, %Y at %H:%M"),
            "Updated" => @interview_application.updated_at.strftime("%B %d, %Y at %H:%M")
          } %>
    </div>
  </div>
</div>

