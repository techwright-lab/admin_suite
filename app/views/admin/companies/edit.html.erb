<% content_for :title, "Edit #{@company.name} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-2xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Companies", admin_companies_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to @company.name, admin_company_path(@company), class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Edit</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Edit Company</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Update company information
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @company, url: admin_company_path(@company), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @company.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@company.errors.count, "error") %> prevented this company from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @company.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Company Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", placeholder: "e.g., Acme Corporation", required: true %>
        <p class="form-help-text">The company name (required)</p>
      </div>

      <div>
        <%= f.label :website, "Website", class: "form-label" %>
        <%= f.text_field :website, class: "form-input", placeholder: "https://example.com" %>
        <p class="form-help-text">Company website URL</p>
      </div>

      <div>
        <%= f.label :logo_url, "Logo URL", class: "form-label" %>
        <%= f.text_field :logo_url, class: "form-input", placeholder: "https://example.com/logo.png" %>
        <p class="form-help-text">URL to company logo image</p>
      </div>

      <div>
        <%= f.label :about, "About", class: "form-label" %>
        <%= f.text_area :about, rows: 6, class: "form-textarea", placeholder: "Company description..." %>
        <p class="form-help-text">Brief description of the company</p>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_company_path(@company), class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Save Changes", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

