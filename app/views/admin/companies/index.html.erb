<% content_for :title, "Companies - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Companies",
      description: "Manage companies and their information",
      actions: link_to("New Company", new_admin_company_path, class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors") %>

  <%= render "admin/shared/stats_grid",
      stats: @stats,
      colors: {
        total: "text-slate-900 dark:text-white",
        with_website: "text-blue-600 dark:text-blue-400",
        with_logo: "text-green-600 dark:text-green-400",
        with_job_listings: "text-amber-600 dark:text-amber-400"
      },
      columns: @stats.size,
      grid_class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_companies_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Name or website...",
            value: @filters[:search]
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Name (A-Z)", "name"],
              ["Recently Added", "recent"]
            ],
            value: @filters[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @companies,
          columns: [
            {
              header: "Company",
              content: ->(company) do
                content_tag(:div, class: "flex items-center") do
                  if company.logo_url.present?
                    image_tag(company.logo_url, alt: company.name, class: "w-10 h-10 rounded-lg object-cover mr-3")
                  else
                    content_tag(:div, class: "w-10 h-10 bg-amber-100 dark:bg-amber-900/30 rounded-lg flex items-center justify-center mr-3") do
                      content_tag(:span, company.name[0].upcase, class: "text-sm font-medium text-amber-700 dark:text-amber-400")
                    end
                  end +
                  content_tag(:div) do
                    content_tag(:div, class: "flex items-center gap-2") do
                      content_tag(:p, company.name, class: "text-sm font-medium text-slate-900 dark:text-white") +
                      (company.disabled? ? content_tag(:span, "Disabled", class: "px-2 py-0.5 text-xs font-semibold rounded-full bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-200") : "".html_safe)
                    end +
                    (company.website.present? ? content_tag(:p, company.website, class: "text-xs text-slate-500 dark:text-slate-400 truncate max-w-[200px]", title: company.website) : "".html_safe)
                  end
                end
              end
            },
            {
              header: "Job Listings",
              content: ->(company) { company.job_listings.count },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Applications",
              content: ->(company) { company.interview_applications.count },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Actions",
              content: ->(company) do
                content_tag(:div, class: "flex items-center gap-2") do
                  link_to("View", admin_company_path(company), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium") +
                  link_to("Edit", edit_admin_company_path(company), class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium") +
                  (company.disabled? ?
                    button_to("Enable", enable_admin_company_path(company), method: :post, class: "text-green-600 hover:text-green-800 dark:text-green-400 font-medium") :
                    button_to("Disable", disable_admin_company_path(company), method: :post, class: "text-slate-600 hover:text-slate-800 dark:text-slate-400 font-medium", data: { turbo_confirm: "Disable this company? It will be hidden from autocomplete and can be re-enabled." })
                  ) +
                  link_to("Delete", admin_company_path(company), method: :delete, data: { turbo_confirm: "Delete this company? This may remove associated content if it has job listings." }, class: "text-red-600 hover:text-red-800 dark:text-red-400 font-medium")
                end
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No companies found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
