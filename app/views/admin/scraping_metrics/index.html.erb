<% content_for :title, "Scraping Metrics - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">
      Scraping Metrics Dashboard
    </h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Monitor job listing extraction performance and AI costs
    </p>
  </div>

  <!-- Overview Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Total Attempts (7 days) -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Last 7 Days</p>
          <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
            <%= @metrics[:overview][:last_7_days] %>
          </p>
        </div>
        <div class="p-3 bg-blue-100 dark:bg-blue-900/20 rounded-lg">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Success Rate -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Success Rate</p>
          <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
            <%= @metrics[:overview][:success_rate_7d] %>%
          </p>
        </div>
        <div class="p-3 bg-green-100 dark:bg-green-900/20 rounded-lg">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- DLQ Count -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Needs Review</p>
          <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
            <%= @metrics[:overview][:dlq_count] %>
          </p>
        </div>
        <div class="p-3 bg-amber-100 dark:bg-amber-900/20 rounded-lg">
          <svg class="w-6 h-6 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
        </div>
      </div>
    </div>

    <!-- Avg Duration -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Avg Duration</p>
          <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
            <%= @metrics[:overview][:avg_duration] %>s
          </p>
        </div>
        <div class="p-3 bg-purple-100 dark:bg-purple-900/20 rounded-lg">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <% if @ai_metrics.present? && @ai_metrics[:overview].present? %>
    <!-- AI Extraction Section -->
    <div class="mb-8">
      <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4 flex items-center">
        <svg class="w-5 h-5 mr-2 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        AI Extraction Metrics
      </h2>
      
      <!-- AI Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
        <!-- AI Calls Today -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-slate-500 dark:text-slate-400">AI Calls Today</p>
              <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
                <%= @ai_metrics[:overview][:calls_today] %>
              </p>
            </div>
            <div class="p-3 bg-indigo-100 dark:bg-indigo-900/20 rounded-lg">
              <svg class="w-6 h-6 text-indigo-600 dark:text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- AI Success Rate -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-slate-500 dark:text-slate-400">AI Success Rate</p>
              <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
                <%= @ai_metrics[:overview][:success_rate_7d] %>%
              </p>
            </div>
            <div class="p-3 bg-emerald-100 dark:bg-emerald-900/20 rounded-lg">
              <svg class="w-6 h-6 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Total Cost -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Cost (7 Days)</p>
              <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
                $<%= sprintf("%.2f", @ai_metrics[:overview][:total_cost_7d]) %>
              </p>
            </div>
            <div class="p-3 bg-rose-100 dark:bg-rose-900/20 rounded-lg">
              <svg class="w-6 h-6 text-rose-600 dark:text-rose-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>

        <!-- Avg Latency -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-slate-500 dark:text-slate-400">Avg Latency</p>
              <p class="mt-2 text-3xl font-semibold text-slate-900 dark:text-white">
                <%= (@ai_metrics[:overview][:avg_latency_7d] / 1000.0).round(1) %>s
              </p>
            </div>
            <div class="p-3 bg-cyan-100 dark:bg-cyan-900/20 rounded-lg">
              <svg class="w-6 h-6 text-cyan-600 dark:text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
          </div>
        </div>
      </div>

      <!-- AI Charts Row -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- AI Calls Over Time -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h3 class="text-base font-semibold text-slate-900 dark:text-white mb-4">
            AI Calls Over Time (14 Days)
          </h3>
          <% if @chart_data[:ai_calls_over_time].present? %>
            <%= line_chart @chart_data[:ai_calls_over_time],
                colors: ["#6366f1"],
                library: { 
                  backgroundColor: "transparent",
                  legend: { display: false }
                } %>
          <% else %>
            <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-8">No data available</p>
          <% end %>
        </div>

        <!-- Cost Over Time -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h3 class="text-base font-semibold text-slate-900 dark:text-white mb-4">
            Cost Over Time (14 Days)
          </h3>
          <% if @chart_data[:cost_over_time].present? %>
            <%= area_chart @chart_data[:cost_over_time],
                prefix: "$",
                colors: ["#f43f5e"],
                library: { 
                  backgroundColor: "transparent",
                  legend: { display: false }
                } %>
          <% else %>
            <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-8">No data available</p>
          <% end %>
        </div>
      </div>

      <!-- Distribution Charts -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Latency Distribution -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h3 class="text-base font-semibold text-slate-900 dark:text-white mb-4">
            Latency Distribution (7 Days)
          </h3>
          <% if @chart_data[:latency_distribution].present? %>
            <%= pie_chart @chart_data[:latency_distribution],
                colors: ["#22c55e", "#84cc16", "#eab308", "#f97316", "#ef4444"],
                library: { 
                  backgroundColor: "transparent"
                } %>
          <% else %>
            <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-8">No data available</p>
          <% end %>
        </div>

        <!-- Confidence Distribution -->
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
          <h3 class="text-base font-semibold text-slate-900 dark:text-white mb-4">
            Confidence Distribution (7 Days)
          </h3>
          <% if @chart_data[:confidence_distribution].present? %>
            <%= pie_chart @chart_data[:confidence_distribution],
                colors: ["#ef4444", "#f97316", "#eab308", "#84cc16", "#22c55e"],
                library: { 
                  backgroundColor: "transparent"
                } %>
          <% else %>
            <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-8">No data available</p>
          <% end %>
        </div>
      </div>

      <!-- Provider Performance Table -->
      <% if @ai_metrics[:by_provider].present? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden mb-6">
          <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
            <h3 class="text-base font-semibold text-slate-900 dark:text-white">
              Provider Performance (7 Days)
            </h3>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
              <thead class="bg-slate-50 dark:bg-slate-900">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Provider</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Calls</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Success Rate</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Avg Latency</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Avg Confidence</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Total Cost</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Tokens</th>
                </tr>
              </thead>
              <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-700">
                <% @ai_metrics[:by_provider].each do |provider| %>
                  <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900 dark:text-white">
                      <%= provider[:provider].titleize %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                      <%= provider[:total_calls] %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <span class="<%= provider[:success_rate] >= 90 ? 'text-green-600 dark:text-green-400' : provider[:success_rate] >= 70 ? 'text-amber-600 dark:text-amber-400' : 'text-red-600 dark:text-red-400' %>">
                        <%= provider[:success_rate] %>%
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                      <%= (provider[:avg_latency_ms] / 1000.0).round(2) %>s
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                      <%= provider[:avg_confidence] %>%
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                      $<%= sprintf("%.4f", provider[:total_cost]) %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                      <%= number_with_delimiter(provider[:total_tokens]) %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Scraping Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Domain Performance -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
      <h2 class="text-base font-semibold text-slate-900 dark:text-white mb-4">
        Success Rate by Domain (Last 7 Days)
      </h2>
      <% if @metrics[:by_domain].present? %>
        <%= column_chart @metrics[:by_domain].map { |m| [m[:domain], m[:success_rate]] },
            suffix: "%",
            colors: ["#10b981"],
            library: { 
              backgroundColor: "transparent",
              legend: { display: false }
            } %>
      <% else %>
        <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-8">No data available</p>
      <% end %>
    </div>

    <!-- Provider Performance -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
      <h2 class="text-base font-semibold text-slate-900 dark:text-white mb-4">
        Provider Confidence Scores (Last 30 Days)
      </h2>
      <% if @metrics[:provider_performance].present? %>
        <%= column_chart @metrics[:provider_performance].map { |p| [p[:provider]&.titleize || "Unknown", p[:avg_confidence]] },
            suffix: "%",
            colors: ["#3b82f6"],
            library: { 
              backgroundColor: "transparent",
              legend: { display: false }
            } %>
      <% else %>
        <p class="text-sm text-slate-500 dark:text-slate-400 text-center py-8">No data available</p>
      <% end %>
    </div>
  </div>

  <!-- Recent Failures Table -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
    <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-base font-semibold text-slate-900 dark:text-white">
        Recent Failures & DLQ Items
      </h2>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
        <thead class="bg-slate-50 dark:bg-slate-900">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Domain</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Job Listing</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Error</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-700">
          <% @metrics[:recent_failures].each do |attempt| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= attempt.status == 'dead_letter' ? 'bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400' : 'bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400' %>">
                  <%= attempt.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900 dark:text-slate-300">
                <%= attempt.domain %>
              </td>
              <td class="px-6 py-4 text-sm text-slate-900 dark:text-slate-300">
                <% if attempt.job_listing %>
                  <%= link_to truncate(attempt.job_listing.title || attempt.url, length: 40), avo_path + "/resources/job_listings/#{attempt.job_listing.id}", class: "text-amber-600 hover:text-amber-800 dark:text-amber-400" %>
                <% else %>
                  <span class="text-slate-500">N/A</span>
                <% end %>
              </td>
              <td class="px-6 py-4 text-sm text-slate-500 dark:text-slate-400">
                <%= truncate(attempt.error_message, length: 50) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                <%= time_ago_in_words(attempt.created_at) %> ago
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "View", avo_path + "/resources/scraping_attempts/#{attempt.id}", class: "text-amber-600 hover:text-amber-800 dark:text-amber-400" %>
              </td>
            </tr>
          <% end %>
          <% if @metrics[:recent_failures].empty? %>
            <tr>
              <td colspan="6" class="px-6 py-8 text-center text-sm text-slate-500 dark:text-slate-400">
                No recent failures
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

