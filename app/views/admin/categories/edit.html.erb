<% content_for :title, "Edit #{@category.name} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-2xl">
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Categories", admin_categories_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <%= link_to @category.name, admin_category_path(@category), class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Edit</span>
    </div>

    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">Edit Category</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Update category information
    </p>
  </div>

  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @category, url: admin_category_path(@category), method: :patch, local: true, class: "space-y-6" do |f| %>
      <% if @category.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@category.errors.count, "error") %> prevented this category from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @category.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-input", required: true %>
      </div>

      <div>
        <%= f.label :kind, "Kind", class: "form-label" %>
        <%= f.select :kind, Category.kinds.keys.map { |k| [k.to_s.humanize, k] }, {}, class: "form-select" %>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_category_path(@category), class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Save Changes", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
