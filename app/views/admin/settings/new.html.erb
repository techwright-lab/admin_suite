<% content_for :title, "New Setting - Admin" %>

<div class="px-4 sm:px-6 lg:px-8 max-w-2xl">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Settings", admin_settings_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">New Setting</span>
    </div>
    
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">New Setting</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Create a new application setting
    </p>
  </div>

  <!-- Form -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
    <%= form_with model: @setting, url: admin_settings_path, local: true, class: "space-y-6" do |f| %>
      <% if @setting.errors.any? %>
        <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(@setting.errors.count, "error") %> prevented this setting from being saved:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-400 list-disc list-inside">
            <% @setting.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :name, "Setting Name", class: "form-label" %>
        <%= f.select :name, 
            @available_settings.map { |s| [s.humanize, s] },
            { include_blank: "— Select setting —" },
            { class: "form-select", required: true } %>
        <p class="form-help-text">Select from available settings (required)</p>
        <% if @existing_setting_names.any? %>
          <p class="mt-2 text-xs text-amber-600 dark:text-amber-400">
            Existing settings: <%= @existing_setting_names.join(", ") %>
          </p>
        <% end %>
      </div>

      <div>
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, rows: 3, class: "form-textarea", placeholder: "Setting description..." %>
        <p class="form-help-text">Optional description of what this setting controls</p>
      </div>

      <div>
        <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-3">Initial Value</label>
        <div class="space-y-2">
          <label class="flex items-center">
            <%= f.radio_button :value, true, class: "h-4 w-4 text-amber-600 focus:ring-amber-500 border-slate-300 dark:border-slate-600", checked: true %>
            <span class="ml-2 block text-sm text-slate-700 dark:text-slate-300">
              Enabled
            </span>
          </label>
          <label class="flex items-center">
            <%= f.radio_button :value, false, class: "h-4 w-4 text-amber-600 focus:ring-amber-500 border-slate-300 dark:border-slate-600" %>
            <span class="ml-2 block text-sm text-slate-700 dark:text-slate-300">
              Disabled
            </span>
          </label>
        </div>
        <p class="form-help-text">Initial value for this setting</p>
      </div>

      <div class="flex items-center justify-end gap-3 pt-4 border-t border-slate-200 dark:border-slate-700">
        <%= link_to "Cancel", admin_settings_path, class: "px-4 py-2 text-sm font-medium text-slate-700 dark:text-slate-300 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg transition-colors" %>
        <%= f.submit "Create Setting", class: "px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>

