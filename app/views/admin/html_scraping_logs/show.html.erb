<% content_for :title, "HTML Scraping Log ##{@log.id} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-3 mb-2">
      <%= link_to admin_html_scraping_logs_path, class: "text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-300" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold text-slate-900 dark:text-white">HTML Scraping Log</h1>
      <span class="px-3 py-1 text-sm font-semibold rounded-full <%= @log.status_badge_color %>">
        <%= @log.status.titleize %>
      </span>
    </div>
    <p class="text-sm text-slate-500 dark:text-slate-400">
      <%= @log.domain %> â€¢ <%= @log.created_at.strftime("%B %d, %Y at %H:%M:%S UTC") %>
    </p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 mb-6">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Extraction Rate</p>
      <p class="mt-1 text-lg font-bold <%= (@log.extraction_rate || 0) >= 0.7 ? 'text-green-600 dark:text-green-400' : (@log.extraction_rate || 0) >= 0.4 ? 'text-amber-600 dark:text-amber-400' : 'text-red-600 dark:text-red-400' %>">
        <%= @log.extraction_rate_display %>
      </p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Fields Extracted</p>
      <p class="mt-1 text-lg font-bold text-slate-900 dark:text-white"><%= @log.fields_extracted %>/<%= @log.fields_attempted %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Duration</p>
      <p class="mt-1 text-lg font-bold text-slate-900 dark:text-white"><%= @log.formatted_duration %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">HTML Size</p>
      <p class="mt-1 text-lg font-bold text-slate-900 dark:text-white"><%= number_to_human_size(@log.html_size || 0) %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domain</p>
      <p class="mt-1 text-sm font-bold text-slate-900 dark:text-white truncate"><%= @log.domain %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Attempt</p>
      <p class="mt-1 text-sm font-bold">
        <% if @attempt %>
          <%= link_to "##{@attempt.id}", admin_scraping_attempt_path(@attempt), class: "text-amber-600 dark:text-amber-400 hover:underline" %>
        <% else %>
          <span class="text-slate-500">N/A</span>
        <% end %>
      </p>
    </div>
  </div>

  <!-- URL -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4 mb-6">
    <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-2">URL</p>
    <a href="<%= @log.url %>" target="_blank" class="text-sm text-amber-600 dark:text-amber-400 hover:underline break-all">
      <%= @log.url %>
    </a>
  </div>

  <!-- Error (if any) -->
  <% if @log.error_message.present? %>
    <div class="bg-red-50 dark:bg-red-900/20 rounded-xl border border-red-200 dark:border-red-800 p-4 mb-6">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div>
          <h3 class="text-sm font-semibold text-red-800 dark:text-red-400"><%= @log.error_type || "Error" %></h3>
          <p class="mt-1 text-sm text-red-700 dark:text-red-300"><%= @log.error_message %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Field Results -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-6">
    <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
      <h2 class="text-base font-semibold text-slate-900 dark:text-white">Field Extraction Results</h2>
    </div>
    <div class="divide-y divide-slate-200 dark:divide-slate-700">
      <% if @log.field_results.present? %>
        <% @log.field_results.each do |field, result| %>
          <div class="p-4" data-controller="collapsible">
            <div class="flex items-start justify-between">
              <div class="flex items-center gap-3">
                <!-- Status Icon -->
                <div class="flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center <%= result['success'] ? 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400' : 'bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400' %>">
                  <% if result["success"] %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  <% else %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  <% end %>
                </div>
                
                <div>
                  <h3 class="text-sm font-semibold text-slate-900 dark:text-white"><%= field.to_s.titleize %></h3>
                  <% if result["success"] && result["value"].present? %>
                    <p class="mt-1 text-sm text-slate-600 dark:text-slate-400 truncate max-w-md">
                      <%= truncate(result["value"].to_s, length: 80) %>
                    </p>
                  <% elsif !result["success"] %>
                    <p class="mt-1 text-xs text-red-600 dark:text-red-400">No value extracted</p>
                  <% end %>
                </div>
              </div>
              
              <button type="button" data-action="click->collapsible#toggle" class="text-xs text-amber-600 dark:text-amber-400 hover:underline">
                Details
              </button>
            </div>
            
            <!-- Expanded Details -->
            <div data-collapsible-target="content" class="hidden mt-4 ml-11">
              <div class="bg-slate-50 dark:bg-slate-900 rounded-lg p-4 space-y-3">
                <% if result["selector"].present? %>
                  <div>
                    <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Matched Selector</p>
                    <code class="text-xs text-green-600 dark:text-green-400 bg-green-50 dark:bg-green-900/30 px-2 py-1 rounded"><%= result["selector"] %></code>
                  </div>
                <% end %>
                
                <% if result["selectors_tried"].present? && result["selectors_tried"].any? %>
                  <div>
                    <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Selectors Tried (<%= result["selectors_tried"].count %>)</p>
                    <div class="flex flex-wrap gap-1">
                      <% result["selectors_tried"].each do |selector| %>
                        <code class="text-xs text-slate-600 dark:text-slate-400 bg-slate-200 dark:bg-slate-700 px-2 py-0.5 rounded"><%= selector %></code>
                      <% end %>
                    </div>
                  </div>
                <% end %>
                
                <% if result["value"].present? %>
                  <div>
                    <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Extracted Value (<%= result["value"].to_s.length %> chars)</p>
                    <pre class="text-xs text-slate-700 dark:text-slate-300 bg-white dark:bg-slate-800 p-2 rounded border border-slate-200 dark:border-slate-700 overflow-x-auto whitespace-pre-wrap max-h-48 overflow-y-auto"><%= result["value"] %></pre>
                  </div>
                <% end %>
                
                <% if result["raw_html"].present? %>
                  <div>
                    <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Raw HTML Matched</p>
                    <pre class="text-xs text-slate-600 dark:text-slate-400 bg-white dark:bg-slate-800 p-2 rounded border border-slate-200 dark:border-slate-700 overflow-x-auto whitespace-pre-wrap max-h-32 overflow-y-auto font-mono"><%= truncate(result["raw_html"].to_s, length: 1000) %></pre>
                  </div>
                <% end %>
                
                <% if result["error"].present? %>
                  <div>
                    <p class="text-xs font-medium text-red-500 dark:text-red-400 uppercase mb-1">Error</p>
                    <p class="text-xs text-red-600 dark:text-red-400"><%= result["error"] %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="p-8 text-center text-sm text-slate-500 dark:text-slate-400">
          No field results recorded
        </div>
      <% end %>
    </div>
  </div>

  <!-- Cached HTML Data -->
  <% scraped_data = @attempt&.scraped_job_listing_data || ScrapedJobListingData.find_valid_for_url(@log.url, job_listing: @job_listing) %>
  <% if scraped_data %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-6">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">Cached HTML Data</h2>
        <span class="text-xs <%= scraped_data.cache_valid? ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400' %>">
          <%= scraped_data.cache_valid? ? "Valid" : "Expired" %> until <%= scraped_data.valid_until.strftime("%b %d, %Y") %>
        </span>
      </div>
      <div class="p-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
          <div>
            <p class="text-xs text-slate-500 dark:text-slate-400">Raw HTML</p>
            <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= number_to_human_size(scraped_data.html_content&.bytesize || 0) %></p>
          </div>
          <div>
            <p class="text-xs text-slate-500 dark:text-slate-400">Cleaned HTML</p>
            <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= number_to_human_size(scraped_data.cleaned_html&.bytesize || 0) %></p>
          </div>
          <div>
            <p class="text-xs text-slate-500 dark:text-slate-400">HTTP Status</p>
            <p class="text-sm font-semibold text-slate-900 dark:text-white"><%= scraped_data.http_status || "N/A" %></p>
          </div>
          <div>
            <p class="text-xs text-slate-500 dark:text-slate-400">Content Hash</p>
            <p class="text-xs font-mono text-slate-600 dark:text-slate-400 truncate" title="<%= scraped_data.content_hash %>"><%= scraped_data.content_hash&.first(16) %>...</p>
          </div>
        </div>
        
        <!-- Cleaned HTML Preview (collapsible) -->
        <div data-controller="collapsible" class="border border-slate-200 dark:border-slate-700 rounded-lg">
          <button type="button" data-action="click->collapsible#toggle" class="w-full px-4 py-2 flex items-center justify-between text-left bg-slate-50 dark:bg-slate-900 rounded-t-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
            <span class="text-sm font-medium text-slate-700 dark:text-slate-300">View Cleaned HTML (used for AI extraction)</span>
            <svg data-collapsible-target="icon" class="w-4 h-4 text-slate-500 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div data-collapsible-target="content" class="hidden">
            <pre class="p-4 text-xs text-slate-700 dark:text-slate-300 font-mono whitespace-pre-wrap overflow-x-auto max-h-96 overflow-y-auto"><%= scraped_data.cleaned_html&.truncate(30000) || "No cleaned HTML available" %></pre>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- AI Extraction Logs for this attempt -->
  <% ai_logs = @attempt&.llm_api_logs&.recent&.limit(5) || [] %>
  <% if ai_logs.any? %>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 mb-6">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700 flex items-center justify-between">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">AI Extraction Logs</h2>
        <span class="text-xs text-slate-500 dark:text-slate-400"><%= ai_logs.count %> log(s)</span>
      </div>
      <div class="divide-y divide-slate-200 dark:divide-slate-700">
        <% ai_logs.each do |log| %>
          <div class="p-4 hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <% ai_status_colors = { "success" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400", "error" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400" } %>
                <span class="px-2 py-0.5 text-xs font-semibold rounded-full <%= ai_status_colors[log.status] || 'bg-slate-100 text-slate-800' %>">
                  <%= log.status.titleize %>
                </span>
                <span class="text-sm text-slate-900 dark:text-white"><%= log.provider.titleize %> / <%= log.model %></span>
                <span class="text-xs text-slate-500 dark:text-slate-400"><%= log.formatted_latency %></span>
                <% if log.confidence_score %>
                  <span class="text-xs <%= log.confidence_score >= 0.7 ? 'text-green-600 dark:text-green-400' : 'text-amber-600 dark:text-amber-400' %>">
                    <%= (log.confidence_score * 100).round(1) %>% confidence
                  </span>
                <% end %>
              </div>
              <%= link_to "View Details", admin_ai_llm_api_log_path(log), class: "text-xs text-amber-600 dark:text-amber-400 hover:underline" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Related Links -->
  <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
    <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-3">Related Records</h3>
    <div class="flex flex-wrap gap-3">
      <% if @attempt %>
        <%= link_to admin_scraping_attempt_path(@attempt), class: "inline-flex items-center gap-2 px-3 py-2 text-sm bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
          </svg>
          Scraping Attempt #<%= @attempt.id %>
        <% end %>
      <% end %>
      <% if @job_listing %>
        <%= link_to avo_path + "/resources/job_listings/#{@job_listing.id}", target: "_blank", class: "inline-flex items-center gap-2 px-3 py-2 text-sm bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 text-slate-700 dark:text-slate-300 rounded-lg transition-colors" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Job Listing
        <% end %>
      <% end %>
    </div>
  </div>
</div>
