<% content_for :title, "HTML Scraping Metrics - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-slate-900 dark:text-white">HTML Scraping Metrics</h1>
    <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
      Field-level extraction performance across domains
    </p>
  </div>

  <!-- Overview Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Total Attempts (7d)</p>
      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @overview_stats[:total_attempts] %></p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Avg Extraction Rate</p>
      <p class="mt-1 text-2xl font-bold <%= @overview_stats[:avg_extraction_rate] >= 70 ? 'text-green-600 dark:text-green-400' : @overview_stats[:avg_extraction_rate] >= 40 ? 'text-amber-600 dark:text-amber-400' : 'text-red-600 dark:text-red-400' %>">
        <%= @overview_stats[:avg_extraction_rate] %>%
      </p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Success Rate</p>
      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @overview_stats[:success_rate] %>%</p>
    </div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
      <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Avg Duration</p>
      <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white"><%= @overview_stats[:avg_duration_ms] %>ms</p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Field Extraction Rates -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">Field Extraction Rates (7d)</h2>
      </div>
      <div class="p-4">
        <div class="space-y-3">
          <% @field_stats.each do |field, stats| %>
            <div class="flex items-center gap-3">
              <span class="w-28 text-sm text-slate-600 dark:text-slate-400 truncate"><%= field.titleize %></span>
              <div class="flex-1 h-4 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                <div class="h-full <%= stats[:rate] >= 70 ? 'bg-green-500' : stats[:rate] >= 40 ? 'bg-amber-500' : 'bg-red-500' %>" style="width: <%= stats[:rate] %>%;"></div>
              </div>
              <span class="w-12 text-sm font-medium text-slate-900 dark:text-white text-right"><%= stats[:rate] %>%</span>
              <span class="w-16 text-xs text-slate-500 dark:text-slate-400 text-right"><%= stats[:success] %>/<%= stats[:total] %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Domain Performance -->
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="px-4 py-3 border-b border-slate-200 dark:border-slate-700">
        <h2 class="text-base font-semibold text-slate-900 dark:text-white">Top Domains (7d)</h2>
      </div>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
          <thead class="bg-slate-50 dark:bg-slate-900">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domain</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Count</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Extraction</th>
              <th class="px-4 py-2 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Duration</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @domain_stats.each do |domain| %>
              <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                <td class="px-4 py-2 text-sm text-slate-900 dark:text-white truncate max-w-[200px]"><%= domain[:domain] %></td>
                <td class="px-4 py-2 text-sm text-slate-600 dark:text-slate-400"><%= domain[:total] %></td>
                <td class="px-4 py-2">
                  <div class="flex items-center gap-2">
                    <div class="w-16 h-2 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                      <div class="h-full <%= domain[:avg_rate] >= 70 ? 'bg-green-500' : domain[:avg_rate] >= 40 ? 'bg-amber-500' : 'bg-red-500' %>" style="width: <%= domain[:avg_rate] %>%;"></div>
                    </div>
                    <span class="text-xs text-slate-500 dark:text-slate-400"><%= domain[:avg_rate] %>%</span>
                  </div>
                </td>
                <td class="px-4 py-2 text-sm text-slate-600 dark:text-slate-400"><%= domain[:avg_duration] %>ms</td>
              </tr>
            <% end %>
            <% if @domain_stats.empty? %>
              <tr>
                <td colspan="4" class="px-4 py-4 text-center text-sm text-slate-500 dark:text-slate-400">No data yet</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Filters and Logs List -->
  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filters -->
    <div class="lg:w-56 flex-shrink-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Filters</h3>
        
        <%= form_with url: admin_html_scraping_logs_path, method: :get, local: true, class: "space-y-4" do |f| %>
          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Domain</label>
            <input type="text" name="domain" value="<%= @filters[:domain] %>" placeholder="e.g., greenhouse.io"
                   class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">Status</label>
            <select name="status" class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
              <option value="">All</option>
              <option value="success" <%= "selected" if @filters[:status] == "success" %>>Success</option>
              <option value="partial" <%= "selected" if @filters[:status] == "partial" %>>Partial</option>
              <option value="failed" <%= "selected" if @filters[:status] == "failed" %>>Failed</option>
            </select>
          </div>

          <div>
            <label class="block text-xs font-medium text-slate-500 dark:text-slate-400 mb-1">From</label>
            <input type="date" name="date_from" value="<%= @filters[:date_from] %>" 
                   class="w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white text-sm">
          </div>

          <div class="flex gap-2">
            <button type="submit" class="flex-1 px-3 py-2 bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium rounded-lg transition-colors">
              Apply
            </button>
            <%= link_to "Clear", admin_html_scraping_logs_path, class: "flex-1 px-3 py-2 bg-slate-100 dark:bg-slate-700 text-center text-slate-700 dark:text-slate-300 text-sm font-medium rounded-lg hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Logs Table -->
    <div class="flex-1 min-w-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
            <thead class="bg-slate-50 dark:bg-slate-900">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Time</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Domain</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Status</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Extraction</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Fields</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Duration</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-200 dark:divide-slate-700">
              <% @logs.each do |log| %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50">
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <div><%= log.created_at.strftime("%b %d, %H:%M") %></div>
                    <div class="text-xs text-slate-400"><%= time_ago_in_words(log.created_at) %> ago</div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-900 dark:text-white truncate max-w-[150px]">
                    <%= log.domain %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= log.status_badge_color %>">
                      <%= log.status.titleize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <div class="flex items-center gap-2">
                      <div class="w-16 h-2 bg-slate-200 dark:bg-slate-700 rounded-full overflow-hidden">
                        <% rate_pct = ((log.extraction_rate || 0) * 100).round(0) %>
                        <div class="h-full <%= rate_pct >= 70 ? 'bg-green-500' : rate_pct >= 40 ? 'bg-amber-500' : 'bg-red-500' %>" style="width: <%= rate_pct %>%;"></div>
                      </div>
                      <span class="text-xs text-slate-500 dark:text-slate-400"><%= log.extraction_rate_display %></span>
                    </div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-600 dark:text-slate-400">
                    <%= log.fields_extracted %>/<%= log.fields_attempted %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-600 dark:text-slate-400">
                    <%= log.formatted_duration %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <%= link_to "View", admin_html_scraping_log_path(log), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                  </td>
                </tr>
              <% end %>
              <% if @logs.empty? %>
                <tr>
                  <td colspan="7" class="px-4 py-8 text-center text-sm text-slate-500 dark:text-slate-400">
                    No HTML scraping logs found
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <% if @total_pages > 1 %>
          <div class="px-4 py-3 border-t border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-between">
              <div class="text-sm text-slate-500 dark:text-slate-400">
                Showing <%= ((@page - 1) * PER_PAGE) + 1 %> to <%= [(@page * PER_PAGE), @total_count].min %> of <%= @total_count %>
              </div>
              <div class="flex gap-2">
                <% if @page > 1 %>
                  <%= link_to "Previous", url_for(params.permit!.merge(page: @page - 1)), class: "px-3 py-1 text-sm bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600" %>
                <% end %>
                <% if @page < @total_pages %>
                  <%= link_to "Next", url_for(params.permit!.merge(page: @page + 1)), class: "px-3 py-1 text-sm bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-50 dark:hover:bg-slate-600" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

