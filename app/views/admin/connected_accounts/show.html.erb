<% content_for :title, "#{@connected_account.user.display_name} - Connected Account - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Connected Account",
      description: "#{@connected_account.provider.titleize} account for #{@connected_account.user.display_name}",
      breadcrumbs: [
        { label: "Connected Accounts", path: admin_connected_accounts_path },
        { label: @connected_account.user.display_name }
      ] %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Account Status -->
      <div class="grid grid-cols-2 gap-4">
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
          <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Sync Status</p>
          <% if @connected_account.sync_enabled? %>
            <p class="text-sm font-semibold text-green-600 dark:text-green-400">Enabled</p>
          <% else %>
            <p class="text-sm font-semibold text-slate-400 dark:text-slate-500">Disabled</p>
          <% end %>
        </div>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-4">
          <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase mb-1">Token Status</p>
          <% if @connected_account.token_expired? %>
            <p class="text-sm font-semibold text-red-600 dark:text-red-400">Expired</p>
          <% elsif @connected_account.token_expiring_soon? %>
            <p class="text-sm font-semibold text-amber-600 dark:text-amber-400">Expiring Soon</p>
          <% else %>
            <p class="text-sm font-semibold text-green-600 dark:text-green-400">Valid</p>
          <% end %>
        </div>
      </div>

      <!-- Token Information -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
          Token Information
        </h2>
        <dl class="space-y-4">
          <div>
            <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">Provider</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @connected_account.provider.titleize %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">Email</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @connected_account.email || @connected_account.user.email_address %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">Token Expires</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <% if @connected_account.expires_at.present? %>
                <%= @connected_account.expires_at.strftime("%B %d, %Y at %H:%M") %>
                <% if @connected_account.token_expiring_soon? %>
                  <span class="ml-2 text-xs text-amber-600 dark:text-amber-400">(Expiring soon)</span>
                <% end %>
              <% else %>
                Never
              <% end %>
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">Can Refresh</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @connected_account.refreshable? ? "Yes" : "No" %>
            </dd>
          </div>
          <% if @connected_account.scopes.present? %>
            <div>
              <dt class="text-sm font-medium text-slate-500 dark:text-slate-400">Scopes</dt>
              <dd class="mt-1 text-sm text-slate-900 dark:text-white">
                <%= @connected_account.scopes %>
              </dd>
            </div>
          <% end %>
        </dl>
      </div>

      <!-- Sync Statistics -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
          Sync Statistics
        </h2>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 rounded-lg bg-slate-50 dark:bg-slate-700/50">
            <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Total Emails</p>
            <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white">
              <%= @sync_stats[:total_emails] %>
            </p>
          </div>
          <div class="p-4 rounded-lg bg-slate-50 dark:bg-slate-700/50">
            <p class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Last Synced</p>
            <p class="mt-1 text-sm font-semibold text-slate-900 dark:text-white">
              <% if @sync_stats[:last_synced].present? %>
                <%= @sync_stats[:last_synced].strftime("%B %d, %Y at %H:%M") %>
              <% else %>
                Never
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <!-- Recent Synced Emails -->
      <% if @synced_emails.any? %>
        <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
          <div class="p-6 border-b border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-between">
              <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
                Recent Synced Emails
              </h2>
              <span class="text-sm text-slate-500 dark:text-slate-400">
                <%= @sync_stats[:total_emails] %> total
              </span>
            </div>
          </div>
          <div class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @synced_emails.each do |email| %>
              <div class="p-4 hover:bg-slate-50 dark:hover:bg-slate-700/50">
                <p class="text-sm font-medium text-slate-900 dark:text-white">
                  <%= email.subject %>
                </p>
                <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                  <%= email.email_date&.strftime("%B %d, %Y") || "â€”" %>
                </p>
                <%= render "admin/shared/status_badge", status: email.status, custom_colors: {
                  "pending" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                  "processed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                  "ignored" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400",
                  "failed" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400"
                } %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <%= render "admin/shared/info_card",
          title: "Account Details",
          data: {
            "User" => link_to(@connected_account.user.display_name, admin_user_path(@connected_account.user), class: "text-amber-600 dark:text-amber-400 hover:underline"),
            "Provider" => @connected_account.provider.titleize,
            "UID" => @connected_account.uid
          } %>

      <%= render "admin/shared/info_card",
          title: "Timestamps",
          data: {
            "Created" => @connected_account.created_at.strftime("%B %d, %Y at %H:%M"),
            "Updated" => @connected_account.updated_at.strftime("%B %d, %Y at %H:%M"),
            "Last Synced" => @connected_account.last_synced_at&.strftime("%B %d, %Y at %H:%M") || "Never"
          } %>
    </div>
  </div>
</div>

