<% content_for :title, "Connected Accounts - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Connected Accounts",
      description: "View OAuth connected accounts and sync status" %>

  <%= render "admin/shared/stats_grid",
      stats: @stats,
      colors: {
        total: "text-slate-900 dark:text-white",
        google: "text-blue-600 dark:text-blue-400",
        sync_enabled: "text-green-600 dark:text-green-400",
        expired_tokens: "text-red-600 dark:text-red-400",
        valid_tokens: "text-green-600 dark:text-green-400"
      },
      columns: @stats.size,
      grid_class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_connected_accounts_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "User email, name...",
            value: @filters[:search]
          },
          {
            type: :select,
            name: :provider,
            label: "Provider",
            options: [
              ["All", ""],
              ["Google", "google_oauth2"]
            ],
            value: @filters[:provider]
          },
          {
            type: :select,
            name: :sync_enabled,
            label: "Sync Status",
            options: [
              ["All", ""],
              ["Enabled", "true"],
              ["Disabled", "false"]
            ],
            value: @filters[:sync_enabled]
          },
          {
            type: :select,
            name: :token_status,
            label: "Token Status",
            options: [
              ["All", ""],
              ["Valid", "valid"],
              ["Expired", "expired"],
              ["Expiring Soon", "expiring_soon"]
            ],
            value: @filters[:token_status]
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Recently Added", "recent"],
              ["Last Synced", "last_synced"],
              ["User Name", "user"]
            ],
            value: @filters[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @connected_accounts,
          columns: [
            {
              header: "Account",
              content: ->(account) do
                content_tag(:div) do
                  content_tag(:p, account.user.display_name, class: "text-sm font-medium text-slate-900 dark:text-white") +
                  content_tag(:p, account.email || account.user.email_address, class: "text-xs text-slate-500 dark:text-slate-400")
                end
              end
            },
            {
              header: "Provider",
              content: ->(account) do
                content_tag(:span, account.provider.titleize, class: "text-sm text-slate-600 dark:text-slate-400")
              end,
              class: "whitespace-nowrap text-sm"
            },
            {
              header: "Sync",
              content: ->(account) do
                if account.sync_enabled?
                  content_tag(:span, "Enabled", class: "text-xs text-green-600 dark:text-green-400")
                else
                  content_tag(:span, "Disabled", class: "text-xs text-slate-400 dark:text-slate-500")
                end
              end,
              class: "whitespace-nowrap text-sm"
            },
            {
              header: "Token Status",
              content: ->(account) do
                if account.token_expired?
                  content_tag(:span, "Expired", class: "text-xs text-red-600 dark:text-red-400")
                elsif account.token_expiring_soon?
                  content_tag(:span, "Expiring Soon", class: "text-xs text-amber-600 dark:text-amber-400")
                else
                  content_tag(:span, "Valid", class: "text-xs text-green-600 dark:text-green-400")
                end
              end,
              class: "whitespace-nowrap text-sm"
            },
            {
              header: "Last Synced",
              content: ->(account) { account.last_synced_at&.strftime("%b %d, %Y") || "Never" },
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Actions",
              content: ->(account) do
                link_to("View", admin_connected_account_path(account), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium")
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No connected accounts found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
