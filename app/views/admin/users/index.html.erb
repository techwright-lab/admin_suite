<% content_for :title, "Users - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "Users",
      description: "Manage users and view their Gmail sync status" %>

  <%= render "admin/shared/stats_grid",
      stats: @stats,
      colors: {
        total: "text-slate-900 dark:text-white",
        with_gmail: "text-green-600 dark:text-green-400",
        sync_enabled: "text-blue-600 dark:text-blue-400",
        admins: "text-amber-600 dark:text-amber-400",
        total_synced_emails: "text-purple-600 dark:text-purple-400"
      },
      columns: @stats.size,
      grid_class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <%= render "admin/shared/filter_sidebar",
        url: admin_users_path,
        filters: [
          {
            type: :text,
            name: :search,
            label: "Search",
            placeholder: "Email or name...",
            value: @filters[:search]
          },
          {
            type: :select,
            name: :gmail_status,
            label: "Gmail Status",
            options: [
              ["All", ""],
              ["Connected", "connected"],
              ["Not Connected", "not_connected"],
              ["Sync Enabled", "sync_enabled"]
            ],
            value: @filters[:gmail_status]
          },
          {
            type: :select,
            name: :role,
            label: "Role",
            options: [
              ["All", ""],
              ["Admin", "admin"],
              ["User", "user"]
            ],
            value: @filters[:role]
          },
          {
            type: :select,
            name: :sort,
            label: "Sort By",
            options: [
              ["Recent", "recent"],
              ["Name", "name"],
              ["Most Emails", "email_count"]
            ],
            value: @filters[:sort]
          }
        ] %>

    <div class="flex-1 min-w-0">
      <%= render "admin/shared/data_table",
          collection: @users,
          columns: [
            {
              header: "User",
              content: ->(user) do
                google_account = user.connected_accounts.find { |ca| ca.provider == "google_oauth2" }
                content_tag(:div, class: "flex items-center") do
                  content_tag(:div, class: "flex-shrink-0 w-10 h-10 bg-amber-100 dark:bg-amber-900/30 rounded-full flex items-center justify-center") do
                    content_tag(:span, user.display_name[0].upcase, class: "text-sm font-medium text-amber-700 dark:text-amber-400")
                  end +
                  content_tag(:div, class: "ml-3") do
                    content_tag(:p, user.display_name, class: "text-sm font-medium text-slate-900 dark:text-white") +
                    content_tag(:p, user.email_address, class: "text-xs text-slate-500 dark:text-slate-400")
                  end
                end
              end
            },
            {
              header: "Gmail",
              content: ->(user) do
                google_account = user.connected_accounts.find { |ca| ca.provider == "google_oauth2" }
                if google_account.present?
                  content_tag(:div) do
                    content_tag(:div, class: "flex items-center gap-2") do
                      if google_account.sync_enabled?
                        content_tag(:span, "", class: "w-2 h-2 rounded-full bg-green-500", title: "Sync enabled") +
                        content_tag(:span, "Active", class: "text-xs text-green-600 dark:text-green-400")
                      else
                        content_tag(:span, "", class: "w-2 h-2 rounded-full bg-amber-500", title: "Sync disabled") +
                        content_tag(:span, "Paused", class: "text-xs text-amber-600 dark:text-amber-400")
                      end
                    end +
                    content_tag(:p, google_account.email, class: "text-xs text-slate-500 dark:text-slate-400 truncate max-w-[150px]", title: google_account.email)
                  end
                else
                  content_tag(:span, "Not connected", class: "text-xs text-slate-500 dark:text-slate-400")
                end
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Emails",
              content: ->(user) do
                needs_review = user.synced_emails.needs_review.count
                content_tag(:span, user.synced_emails.count, class: "text-sm text-slate-900 dark:text-white font-medium") +
                (needs_review > 0 ? content_tag(:span, "#{needs_review} review", class: "ml-1 px-1.5 py-0.5 text-xs font-medium rounded-full bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400") : "".html_safe)
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Last Sync",
              content: ->(user) do
                google_account = user.connected_accounts.find { |ca| ca.provider == "google_oauth2" }
                if google_account&.last_synced_at.present?
                  "#{time_ago_in_words(google_account.last_synced_at)} ago"
                else
                  "â€”"
                end
              end,
              class: "whitespace-nowrap text-sm text-slate-600 dark:text-slate-400"
            },
            {
              header: "Role",
              content: ->(user) do
                render "admin/shared/status_badge", status: user.admin? ? "admin" : "user", custom_colors: {
                  "admin" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                  "user" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400"
                }
              end,
              class: "whitespace-nowrap"
            },
            {
              header: "Actions",
              content: ->(user) do
                link_to "View", admin_user_path(user), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium"
              end,
              class: "whitespace-nowrap text-sm"
            }
          ],
          empty_message: "No users found" %>

      <%= render "admin/shared/pagination", pagy: @pagy %>
    </div>
  </div>
</div>
