<% content_for :title, "#{@user.display_name} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: @user.display_name,
      description: @user.email_address,
      breadcrumbs: [
        { label: "Users", path: admin_users_path },
        { label: @user.display_name }
      ] %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Gmail Sync Stats -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700 p-6
        "
      >
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">
          Gmail Sync Status
        </h2>

        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="bg-slate-50 dark:bg-slate-700/50 rounded-lg p-4">
            <p
              class="
                text-xs font-medium text-slate-500 dark:text-slate-400
                uppercase
              "
            >
              Total Emails
            </p>

            <p class="mt-1 text-2xl font-bold text-slate-900 dark:text-white">
              <%= @sync_stats[:total_emails] %>
            </p>
          </div>

          <div class="bg-slate-50 dark:bg-slate-700/50 rounded-lg p-4">
            <p
              class="
                text-xs font-medium text-slate-500 dark:text-slate-400
                uppercase
              "
            >
              Processed
            </p>

            <p class="mt-1 text-2xl font-bold text-green-600 dark:text-green-400">
              <%= @sync_stats[:processed] %>
            </p>
          </div>

          <div class="bg-slate-50 dark:bg-slate-700/50 rounded-lg p-4">
            <p
              class="
                text-xs font-medium text-slate-500 dark:text-slate-400
                uppercase
              "
            >
              Needs Review
            </p>

            <p class="mt-1 text-2xl font-bold text-red-600 dark:text-red-400">
              <%= @sync_stats[:needs_review] %>
            </p>
          </div>

          <div class="bg-slate-50 dark:bg-slate-700/50 rounded-lg p-4">
            <p
              class="
                text-xs font-medium text-slate-500 dark:text-slate-400
                uppercase
              "
            >
              Matched
            </p>

            <p class="mt-1 text-2xl font-bold text-blue-600 dark:text-blue-400">
              <%= @sync_stats[:matched_applications] %>
            </p>
          </div>
        </div>

        <div class="mt-4 pt-4 border-t border-slate-200 dark:border-slate-700">
          <dl class="grid grid-cols-3 gap-4 text-sm">
            <div>
              <dt class="text-slate-500 dark:text-slate-400">Sync Status</dt>

              <dd class="mt-1 font-medium">
                <% if @sync_stats[:sync_enabled] %>
                  <span class="text-green-600 dark:text-green-400 flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-green-500"></span>
                    Enabled
                  </span>
                <% else %>
                  <span class="text-slate-600 dark:text-slate-400 flex items-center gap-1">
                    <span class="w-2 h-2 rounded-full bg-slate-400"></span>
                    Disabled
                  </span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-slate-500 dark:text-slate-400">Last Sync</dt>

              <dd class="mt-1 font-medium text-slate-900 dark:text-white">
                <% if @sync_stats[:last_sync].present? %>
                  <%= @sync_stats[:last_sync].strftime("%b %d, %Y %H:%M") %>
                <% else %>
                  Never
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-slate-500 dark:text-slate-400">Token Status</dt>

              <dd class="mt-1 font-medium">
                <% case @sync_stats[:token_status] %>
                <% when "Valid" %>
                  <span class="text-green-600 dark:text-green-400">
                    <%= @sync_stats[:token_status] %>
                  </span>
                <% when "Expired", "Expiring soon" %>
                  <span class="text-red-600 dark:text-red-400">
                    <%= @sync_stats[:token_status] %>
                  </span>
                <% else %>
                  <span class="text-slate-600 dark:text-slate-400">
                    <%= @sync_stats[:token_status] %>
                  </span>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Connected Accounts -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700 overflow-hidden
        "
      >
        <div class="p-6 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Connected Accounts
          </h2>
        </div>

        <% if @connected_accounts.any? %>
          <div class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @connected_accounts.each do |account| %>
              <div class="p-4">
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <div
                      class="
                        w-10 h-10 rounded-lg bg-slate-100 dark:bg-slate-700
                        flex items-center justify-center
                      "
                    >
                      <% if account.google? %>
                        <svg class="w-6 h-6" viewBox="0 0 24 24">
                          <path
                            fill="#4285F4"
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
                          />

                          <path
                            fill="#34A853"
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
                          />

                          <path
                            fill="#FBBC05"
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
                          />

                          <path
                            fill="#EA4335"
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
                          />
                        </svg>
                      <% else %>
                        <svg
                          class="w-6 h-6 text-slate-400"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
                          />
                        </svg>
                      <% end %>
                    </div>

                    <div class="ml-3">
                      <p class="text-sm font-medium text-slate-900 dark:text-white">
                        <%= account.provider.titleize.gsub("Oauth2", "OAuth2") %>
                      </p>

                      <p class="text-xs text-slate-500 dark:text-slate-400">
                        <%= account.email %>
                      </p>
                    </div>
                  </div>

                  <div class="text-right">
                    <% if account.sync_enabled? %>
                      <%= render "admin/shared/status_badge", status: "active", custom_colors: { "active" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400" } %>
                    <% else %>
                      <%= render "admin/shared/status_badge", status: "inactive" %>
                    <% end %>

                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                      <%= account.synced_emails.count %> emails synced
                    </p>
                  </div>
                </div>

                <div class="mt-3 grid grid-cols-3 gap-4 text-xs">
                  <div>
                    <span class="text-slate-500 dark:text-slate-400">UID:</span>

                    <span class="ml-1 text-slate-700 dark:text-slate-300 font-mono">
                      <%= account.uid.truncate(20) %>
                    </span>
                  </div>

                  <div>
                    <span class="text-slate-500 dark:text-slate-400">
                      Expires:
                    </span>

                    <span class="ml-1 text-slate-700 dark:text-slate-300">
                      <%= account.expires_at&.strftime("%b %d, %H:%M") || "Never" %>
                    </span>
                  </div>

                  <div>
                    <span class="text-slate-500 dark:text-slate-400">
                      Last Sync:
                    </span>

                    <span class="ml-1 text-slate-700 dark:text-slate-300">
                      <%= account.last_synced_at&.strftime("%b %d, %H:%M") || "Never" %>
                    </span>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center text-sm text-slate-500 dark:text-slate-400">
            No connected accounts
          </div>
        <% end %>
      </div>

      <!-- Recent Synced Emails -->
      <div
        class="
          bg-white dark:bg-slate-800 rounded-xl shadow-sm border
          border-slate-200 dark:border-slate-700 overflow-hidden
        "
      >
        <div class="p-6 border-b border-slate-200 dark:border-slate-700">
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">
            Recent Synced Emails
          </h2>
        </div>

        <% if @recent_synced_emails.any? %>
          <div class="divide-y divide-slate-200 dark:divide-slate-700">
            <% @recent_synced_emails.each do |email| %>
              <div class="p-4 hover:bg-slate-50 dark:hover:bg-slate-700/50">
                <div class="flex items-start justify-between">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-slate-900 dark:text-white truncate">
                      <%= email.subject %>
                    </p>

                    <p class="text-xs text-slate-500 dark:text-slate-400 mt-1">
                      From: <%= email.from_name.presence || email.from_email %>
                    </p>

                    <div class="flex items-center gap-2 mt-2">
                      <%= render "admin/shared/status_badge", status: email.status, custom_colors: {
                        "pending" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
                        "processed" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
                        "needs_review" => "bg-red-100 text-red-800 dark:bg-red-900/20 dark:text-red-400",
                        "ignored" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400"
                      } %>

                      <% if email.interview_application.present? %>
                        <span class="text-xs text-slate-500 dark:text-slate-400">
                          → <%= email.interview_application.job_role&.title %>
                        </span>
                      <% end %>
                    </div>
                  </div>

                  <div
                    class="
                      text-xs text-slate-500 dark:text-slate-400 ml-4
                      flex-shrink-0
                    "
                  >
                    <%= email.email_date&.strftime("%b %d") %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-8 text-center text-sm text-slate-500 dark:text-slate-400">
            No synced emails
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <%= render "admin/shared/info_card",
          title: "User Details",
          data: {
            "Name" => @user.name || "—",
            "Email" => @user.email_address,
            "Current Role" => @user.current_role_name || "—",
            "Current Company" => @user.current_company_name || "—",
            "Applications" => @user.total_applications_count
          } %>

      <%= render "admin/shared/info_card",
          title: "Timestamps",
          data: {
            "Created" => @user.created_at.strftime("%B %d, %Y at %H:%M"),
            "Updated" => @user.updated_at.strftime("%B %d, %Y at %H:%M")
          } %>
    </div>
  </div>
</div>
