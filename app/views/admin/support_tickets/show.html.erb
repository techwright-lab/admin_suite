<% content_for :title, "Support Ticket ##{@support_ticket.id} - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-6">
    <div class="flex items-center gap-2 text-sm text-slate-500 dark:text-slate-400 mb-2">
      <%= link_to "Support Tickets", admin_support_tickets_path, class: "hover:text-amber-600 dark:hover:text-amber-400" %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
      <span class="text-slate-900 dark:text-white">Ticket #<%= @support_ticket.id %></span>
    </div>
    
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-slate-900 dark:text-white flex items-center gap-3">
          <%= @support_ticket.subject %>
          <% status_colors = {
            "open" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400",
            "in_progress" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400",
            "resolved" => "bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400",
            "closed" => "bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400"
          } %>
          <span class="px-3 py-1 text-sm font-semibold rounded-full <%= status_colors[@support_ticket.status] || status_colors['open'] %>">
            <%= @support_ticket.status.humanize %>
          </span>
        </h1>
        <p class="mt-1 text-sm text-slate-500 dark:text-slate-400">
          Submitted <%= time_ago_in_words(@support_ticket.created_at) %> ago
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Message -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Message</h2>
        <div class="prose dark:prose-invert max-w-none">
          <p class="text-slate-700 dark:text-slate-300 whitespace-pre-wrap"><%= @support_ticket.message %></p>
        </div>
      </div>

      <!-- Status Update Form -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h2 class="text-lg font-semibold text-slate-900 dark:text-white mb-4">Update Status</h2>
        
        <%= form_with model: @support_ticket, url: admin_support_ticket_path(@support_ticket), local: true, class: "space-y-4" do |f| %>
          <div>
            <%= f.label :status, class: "block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2" %>
            <%= f.select :status, 
                options_for_select([
                  ["Open", "open"],
                  ["In Progress", "in_progress"],
                  ["Resolved", "resolved"],
                  ["Closed", "closed"]
                ], @support_ticket.status),
                {},
                { class: "w-full rounded-lg border-slate-300 dark:border-slate-600 dark:bg-slate-700 dark:text-white" } %>
          </div>

          <div>
            <%= f.button type: :submit, class: "w-full px-4 py-2 text-sm font-medium text-white bg-amber-600 rounded-lg hover:bg-amber-700" do %>
              Update Status
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Contact Information -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Contact Information</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Name</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white"><%= @support_ticket.name %></dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Email</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <a href="mailto:<%= @support_ticket.email %>" class="text-amber-600 dark:text-amber-400 hover:underline">
                <%= @support_ticket.email %>
              </a>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">User Type</dt>
            <dd class="mt-1">
              <% if @support_ticket.from_user? %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
                  Registered User
                </span>
                <% if @support_ticket.user.present? %>
                  <div class="mt-2">
                    <%= link_to admin_user_path(@support_ticket.user), class: "text-sm text-amber-600 dark:text-amber-400 hover:underline" do %>
                      View User Profile â†’
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-slate-100 text-slate-600 dark:bg-slate-700 dark:text-slate-400">
                  Guest User
                </span>
              <% end %>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Timestamps -->
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 p-6">
        <h3 class="text-sm font-semibold text-slate-900 dark:text-white mb-4">Timestamps</h3>
        <dl class="space-y-3">
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Created</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @support_ticket.created_at.strftime("%B %d, %Y at %H:%M") %>
            </dd>
          </div>
          <div>
            <dt class="text-xs font-medium text-slate-500 dark:text-slate-400 uppercase">Updated</dt>
            <dd class="mt-1 text-sm text-slate-900 dark:text-white">
              <%= @support_ticket.updated_at.strftime("%B %d, %Y at %H:%M") %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>
</div>

