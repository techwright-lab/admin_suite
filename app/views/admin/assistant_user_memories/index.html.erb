<% content_for :title, "User Memories - Admin" %>

<div class="px-4 sm:px-6 lg:px-8">
  <%= render "admin/shared/page_header",
      title: "User Memories",
      description: "View and manage stored user memories from assistant interactions." %>

  <!-- Stats Grid -->
  <%= render "admin/shared/stats_grid",
    stats: @stats,
    colors: {
      total: "text-slate-900 dark:text-white",
      active: "text-green-600 dark:text-green-400",
      expired: "text-slate-600 dark:text-slate-400",
      user_source: "text-blue-600 dark:text-blue-400",
      assistant_source: "text-amber-600 dark:text-amber-400"
    },
    grid_class: "grid grid-cols-2 sm:grid-cols-5 gap-4 mb-6" %>

  <div class="flex flex-col lg:flex-row gap-6">
    <!-- Filters Sidebar -->
    <%= render "admin/shared/filter_sidebar",
      url: admin_assistant_user_memories_path,
      filters: [
        { type: :search, name: :search, label: "Search", placeholder: "Memory key...", value: params[:search] },
        { type: :number, name: :user_id, label: "User ID", placeholder: "123", value: params[:user_id] },
        { type: :select, name: :source, label: "Source", options: [["All Sources", ""], ["User", "user"], ["Assistant", "assistant"]], value: params[:source] },
        { type: :select, name: :active, label: "Status", options: [["All", ""], ["Active", "true"], ["Expired", "false"]], value: params[:active] }
      ] %>

    <!-- Main Content -->
    <div class="flex-1 min-w-0">
      <div class="bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-slate-200 dark:border-slate-700 overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-slate-200 dark:divide-slate-700">
            <thead class="bg-slate-50 dark:bg-slate-900">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Key</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">User</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Source</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Confidence</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Created</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 dark:text-slate-400 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-slate-800 divide-y divide-slate-200 dark:divide-slate-700">
              <% @memories.each do |memory| %>
                <tr class="hover:bg-slate-50 dark:hover:bg-slate-700/50 transition-colors">
                  <td class="px-4 py-3">
                    <div class="text-sm font-medium text-slate-900 dark:text-white font-mono"><%= memory.key.truncate(30) %></div>
                    <div class="text-xs text-slate-500 dark:text-slate-400">#<%= memory.id %></div>
                  </td>
                  <td class="px-4 py-3">
                    <div class="text-sm text-slate-900 dark:text-white"><%= memory.user&.email_address || "â€”" %></div>
                    <div class="text-xs text-slate-500 dark:text-slate-400">ID: <%= memory.user_id %></div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% source_colors = {
                      "user" => "bg-blue-100 text-blue-800 dark:bg-blue-900/20 dark:text-blue-400",
                      "assistant" => "bg-amber-100 text-amber-800 dark:bg-amber-900/20 dark:text-amber-400"
                    } %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= source_colors[memory.source] || 'bg-slate-100 text-slate-800' %>">
                      <%= memory.source&.titleize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <%= (memory.confidence * 100).round(1) %>%
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap">
                    <% is_active = memory.expires_at.nil? || memory.expires_at > Time.current %>
                    <% if is_active %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400">
                        Active
                      </span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-slate-100 text-slate-800 dark:bg-slate-700 dark:text-slate-300">
                        Expired
                      </span>
                    <% end %>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm text-slate-500 dark:text-slate-400">
                    <div><%= memory.created_at.strftime("%b %d, %H:%M") %></div>
                    <div class="text-xs"><%= time_ago_in_words(memory.created_at) %> ago</div>
                  </td>
                  <td class="px-4 py-3 whitespace-nowrap text-sm">
                    <%= link_to "View", admin_assistant_user_memory_path(memory), class: "text-amber-600 hover:text-amber-800 dark:text-amber-400 font-medium" %>
                  </td>
                </tr>
              <% end %>
              <% if @memories.empty? %>
                <tr>
                  <td colspan="7" class="px-4 py-8 text-center text-sm text-slate-500 dark:text-slate-400">
                    No user memories found
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <%= render "admin/shared/pagination", pagy: @pagy %>
      </div>
    </div>
  </div>
</div>
