<% content_for :title, "Sign Up - Gleania" %>

<div class="space-y-6">
  <!-- Header -->
  <div>
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
      Create your account
    </h2>

    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
      Get started with Gleania today
    </p>
  </div>

  <!-- Form -->
  <%= form_with model: @user, url: registrations_path, class: "space-y-5", data: { turbo: false } do |form| %>
    <!-- Name -->
    <div>
      <%= form.label :name, "Name (optional)", class: "form-label" %>

      <%= form.text_field :name, 
          autofocus: true, 
          autocomplete: "name", 
          placeholder: "Your name", 
          class: "form-input" %>
    </div>

    <!-- Email -->
    <div>
      <%= form.label :email_address, "Email address *", class: "form-label" %>

      <%= form.email_field :email_address, 
          required: true, 
          autocomplete: "username", 
          placeholder: "you@example.com", 
          class: "form-input" %>
    </div>

    <!-- Password -->
    <div>
      <%= form.label :password, "Password *", class: "form-label" %>

      <%= form.password_field :password, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Create a password", 
          minlength: 8,
          maxlength: 72, 
          class: "form-input" %>

      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
        Must be at least 8 characters
      </p>
    </div>

    <!-- Password Confirmation -->
    <div>
      <%= form.label :password_confirmation, "Confirm password *", class: "form-label" %>

      <%= form.password_field :password_confirmation, 
          required: true, 
          autocomplete: "new-password", 
          placeholder: "Confirm your password", 
          maxlength: 72, 
          class: "form-input" %>
    </div>

    <!-- Terms & Privacy Policy -->
    <div class="space-y-3 pt-2">
      <div class="flex items-start gap-3">
        <%= form.check_box :terms_accepted, 
            class: "mt-1 h-4 w-4 rounded border-gray-300 dark:border-gray-600 text-primary-600 focus:ring-primary-500 dark:bg-gray-700",
            required: true %>
        <label for="user_terms_accepted" class="text-sm text-gray-600 dark:text-gray-400">
          I agree to the 
          <%= link_to "Terms of Service", terms_path, target: "_blank", class: "text-primary-600 dark:text-primary-400 hover:underline" %> 
          and 
          <%= link_to "Privacy Policy", privacy_path, target: "_blank", class: "text-primary-600 dark:text-primary-400 hover:underline" %>
          <span class="text-red-500">*</span>
        </label>
      </div>

      <!-- Marketing Opt-in -->
      <div class="flex items-start gap-3">
        <%= form.check_box :marketing_opt_in, 
            class: "mt-1 h-4 w-4 rounded border-gray-300 dark:border-gray-600 text-primary-600 focus:ring-primary-500 dark:bg-gray-700" %>
        <label for="user_marketing_opt_in" class="text-sm text-gray-600 dark:text-gray-400">
          I'd like to receive occasional updates about new features, tips, and promotions from Gleania
          <span class="text-gray-400 dark:text-gray-500">(optional)</span>
        </label>
      </div>
    </div>

    <!-- Error messages -->
    <% if @user.errors.any? %>
      <div
        class="
          p-4 bg-red-50 dark:bg-red-900/20 border border-red-200
          dark:border-red-800 rounded-lg
        "
      >
        <div class="flex">
          <div class="flex-shrink-0">
            <svg
              class="h-5 w-5 text-red-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                clip-rule="evenodd"
              />
            </svg>
          </div>

          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
              There <%= @user.errors.count == 1 ? 'was' : 'were' %>
              <%= pluralize(@user.errors.count, 'error') %> with your
              registration:
            </h3>

            <div class="mt-2 text-sm text-red-700 dark:text-red-300">
              <ul class="list-disc list-inside space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Turnstile widget -->
    <% if turnstile_configured? %>
      <div class="flex justify-center">
        <div
          class="cf-turnstile"
          data-sitekey="<%= turnstile_site_key %>"
          data-theme="<%= cookies[:theme] == 'dark' ? 'dark' : 'light' %>"
        ></div>
      </div>
    <% end %>

    <!-- Submit button -->
    <div>
      <%= form.submit "Create account", 
          class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors" %>
    </div>
  <% end %>

  <!-- Divider -->
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
    </div>

    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-gray-50 dark:bg-gray-900 text-gray-500 dark:text-gray-400">
        Or sign up with
      </span>
    </div>
  </div>

  <!-- Google OAuth sign-up -->
  <div>
    <p class="text-xs text-center text-gray-500 dark:text-gray-400 mb-3">
      By signing up with Google, you agree to our 
      <%= link_to "Terms", terms_path, target: "_blank", class: "text-primary-600 dark:text-primary-400 hover:underline" %> 
      and 
      <%= link_to "Privacy Policy", privacy_path, target: "_blank", class: "text-primary-600 dark:text-primary-400 hover:underline" %>.
    </p>
    <%= button_to "/auth/google_oauth2", method: :post, data: { turbo: false }, class: "
      w-full inline-flex justify-center items-center py-3 px-4 border
      border-gray-300 dark:border-gray-600 rounded-lg shadow-sm bg-white
      dark:bg-gray-800 text-sm font-medium text-gray-700
      dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700
      transition-colors
    " do %>
      <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
        <path
          fill="#4285F4"
          d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
        />

        <path
          fill="#34A853"
          d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
        />

        <path
          fill="#FBBC05"
          d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
        />

        <path
          fill="#EA4335"
          d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
        />
      </svg>
      Sign up with Google
    <% end %>
  </div>

  <!-- Sign in link -->
  <p class="text-center text-sm text-gray-600 dark:text-gray-400">
    Already have an account?
    <%= link_to "Sign in", new_session_path, class: "
      font-medium text-primary-600 hover:text-primary-500
      dark:text-primary-400
    " %>
  </p>
</div>
