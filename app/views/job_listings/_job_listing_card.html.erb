<%# Job Listing Card Component %>

<%= link_to job_listing_path(listing), 
    class: "block bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700 p-6 hover:shadow-md transition-shadow" do %>
  
  <div class="flex items-start justify-between">
    <!-- Left: Company & Role Info -->
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-3 mb-2">
        <!-- Company Logo -->
        <div class="flex-shrink-0 w-12 h-12 bg-gray-100 dark:bg-gray-700 rounded-lg flex items-center justify-center">
          <% if listing.company.logo_url.present? %>
            <%= image_tag listing.company.logo_url, 
                alt: listing.company.name,
                class: "w-12 h-12 rounded-lg object-cover" %>
          <% else %>
            <span class="text-lg font-bold text-gray-600 dark:text-gray-400">
              <%= listing.company.name[0].upcase %>
            </span>
          <% end %>
        </div>

        <div class="flex-1 min-w-0">
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white truncate">
            <%= listing.display_title %>
          </h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">
            <%= listing.company.name %>
          </p>
        </div>
      </div>

      <!-- Details -->
      <div class="flex flex-wrap items-center gap-3 mt-3 text-sm text-gray-600 dark:text-gray-400">
        <% if listing.location.present? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <%= listing.location_display %>
          </div>
        <% end %>

        <% if listing.salary_range.present? %>
          <div class="flex items-center">
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <%= listing.salary_range %>
          </div>
        <% end %>

        <% if listing.scraped? %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/20 dark:text-purple-400">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Scraped
          </span>
        <% end %>
      </div>

      <!-- Description Preview -->
      <% if listing.description.present? %>
        <p class="mt-3 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
          <%= listing.description %>
        </p>
      <% end %>
    </div>

    <!-- Right: Status & Actions -->
    <div class="flex-shrink-0 ml-6 text-right">
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
        <%= case listing.status.to_sym
            when :active then 'bg-green-100 text-green-800 dark:bg-green-900/20 dark:text-green-400'
            when :closed then 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
            when :draft then 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/20 dark:text-yellow-400'
            end %>">
        <%= listing.status.to_s.titleize %>
      </span>

      <% if listing.interview_applications.any? %>
        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
          <%= pluralize(listing.interview_applications.count, "application") %>
        </p>
      <% end %>

      <div class="mt-3 flex items-center justify-end gap-2">
        <%= link_to edit_job_listing_path(listing),
            class: "text-gray-400 hover:text-gray-600 dark:hover:text-gray-300",
            title: "Edit",
            data: { turbo: false } do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

