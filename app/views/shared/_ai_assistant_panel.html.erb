<%# AI Assistant Side Panel - integrated into the layout, not a modal %>
<aside
  data-ai-assistant-target="panel"
  class="flex-shrink-0 w-0 overflow-hidden transition-all duration-300 ease-out border-l border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900"
  data-action="keydown.esc->ai-assistant#close"
  tabindex="-1"
>
  <div class="w-[420px] lg:w-[480px] h-full flex flex-col">
    <!-- Header -->
    <div class="flex-shrink-0 flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-primary-600 to-primary-700 text-white">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold">Gleania</div>
          <div class="text-[10px] opacity-80">Your interview assistant</div>
        </div>
      </div>

      <div class="flex items-center gap-1">
        <!-- Thread Switcher -->
        <div class="relative" data-controller="dropdown">
          <button
            data-action="click->dropdown#toggle"
            class="p-2 hover:bg-white/10 rounded-lg transition-colors flex items-center gap-1"
            title="Switch conversation"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>

          <!-- Thread Dropdown -->
          <div
            data-dropdown-target="menu"
            class="hidden absolute right-0 mt-1 w-64 bg-white dark:bg-gray-800 rounded-lg shadow-xl border border-gray-200 dark:border-gray-700 overflow-hidden z-50"
          >
            <div class="px-3 py-2 border-b border-gray-200 dark:border-gray-700">
              <p class="text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wide">Recent Conversations</p>
            </div>
            <div class="max-h-64 overflow-y-auto">
              <turbo-frame id="assistant_thread_list" src="<%= assistant_widget_threads_path %>" loading="lazy">
                <div class="px-3 py-4 text-center">
                  <span class="text-xs text-gray-400">Loading...</span>
                </div>
              </turbo-frame>
            </div>
            <div class="border-t border-gray-200 dark:border-gray-700">
              <%= button_to assistant_widget_new_thread_path, 
                  method: :post,
                  data: { turbo_frame: "assistant_widget" },
                  class: "flex items-center gap-2 px-3 py-2.5 text-sm text-primary-600 dark:text-primary-400 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors w-full" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                <span>New conversation</span>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Open in Full Page -->
        <%= link_to assistant_root_path, class: "p-2 hover:bg-white/10 rounded-lg transition-colors", title: "Open full chat" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        <% end %>

        <!-- Close Button -->
        <button data-action="click->ai-assistant#close" class="p-2 hover:bg-white/10 rounded-lg transition-colors" title="Close (Esc)">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Content (Turbo Frame) -->
    <turbo-frame id="assistant_widget" src="<%= assistant_widget_path %>" class="flex-1 min-h-0 overflow-hidden">
      <!-- Loading State -->
      <div class="h-full flex flex-col items-center justify-center text-gray-500 dark:text-gray-400">
        <div class="flex gap-1 mb-3">
          <span class="w-2 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0ms;"></span>
          <span class="w-2 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce" style="animation-delay: 150ms;"></span>
          <span class="w-2 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce" style="animation-delay: 300ms;"></span>
        </div>
        <span class="text-sm">Loading assistant...</span>
      </div>
    </turbo-frame>
  </div>
</aside>

