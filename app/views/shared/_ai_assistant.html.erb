<!-- AI Assistant Floating Button & Drawer -->
<div data-controller="ai-assistant" class="fixed bottom-6 right-6 z-50">
  <!-- Floating Button -->
  <button
    data-action="click->ai-assistant#toggle"
    data-ai-assistant-target="button"
    class="w-14 h-14 gradient-brand rounded-full shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-200 flex items-center justify-center"
    title="Ask Gleania (Cmd+J)"
  >
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
    </svg>
  </button>

  <!-- Backdrop (mobile) -->
  <div
    data-ai-assistant-target="backdrop"
    data-action="click->ai-assistant#close"
    class="hidden fixed inset-0 bg-black/50 md:hidden"
  ></div>

  <!-- Drawer -->
  <div
    data-ai-assistant-target="drawer"
    data-action="keydown.escape->ai-assistant#close"
    class="fixed bottom-0 right-0 w-full md:w-[420px] h-[85vh] md:h-[600px] md:bottom-24 md:right-6 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-t-2xl md:rounded-2xl shadow-2xl overflow-hidden transform translate-y-full md:translate-y-0 md:translate-x-full md:opacity-0 transition-all duration-300 ease-out"
    tabindex="-1"
  >
    <!-- Header -->
    <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 dark:border-gray-700 gradient-brand text-white">
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
          </svg>
        </div>
        <div>
          <div class="text-sm font-semibold">Gleania</div>
          <div class="text-[10px] opacity-80">Your interview assistant</div>
        </div>
      </div>
      <div class="flex items-center gap-1">
        <%= link_to assistant_root_path, class: "p-2 hover:bg-white/10 rounded-lg transition-colors", title: "Open full chat" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        <% end %>
        <button data-action="click->ai-assistant#close" class="p-2 hover:bg-white/10 rounded-lg transition-colors" title="Close (Esc)">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Content -->
    <turbo-frame id="assistant_widget" src="<%= assistant_widget_path %>" class="block h-[calc(100%-57px)]">
      <!-- Loading State -->
      <div class="h-full flex flex-col items-center justify-center text-gray-500 dark:text-gray-400">
        <div class="flex gap-1 mb-3">
          <span class="w-2 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0ms;"></span>
          <span class="w-2 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce" style="animation-delay: 150ms;"></span>
          <span class="w-2 h-2 bg-gray-400 dark:bg-gray-500 rounded-full animate-bounce" style="animation-delay: 300ms;"></span>
        </div>
        <span class="text-sm">Loading assistant...</span>
      </div>
    </turbo-frame>
  </div>
</div>
