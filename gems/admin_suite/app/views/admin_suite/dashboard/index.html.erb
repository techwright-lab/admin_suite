<% content_for :title, "Admin Suite" %>

<div class="max-w-5xl">
  <h1 class="text-2xl font-bold text-slate-900 dark:text-white mb-4">Admin Suite</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% navigation_items.sort_by { |(_k, v)| (v[:order] || 100).to_i }.each do |portal_key, portal| %>
      <div class="bg-white dark:bg-slate-800 rounded-xl border border-slate-200 dark:border-slate-700 p-4">
        <div class="flex items-center justify-between mb-3">
          <div class="font-semibold text-slate-900 dark:text-white"><%= portal[:label] || portal_key.to_s.humanize %></div>
          <div class="text-xs text-slate-500 dark:text-slate-400"><%= portal[:sections].values.sum { |s| s[:items].size } %> resources</div>
        </div>

        <% portal[:sections].sort_by { |(_s, s)| s[:label].to_s }.each do |_section_key, section| %>
          <div class="mt-3 text-xs uppercase tracking-wider text-slate-400 dark:text-slate-500">
            <%= section[:label] %>
          </div>
          <div class="mt-1 space-y-1">
            <% section[:items].sort_by { |it| it[:label].to_s }.each do |item| %>
              <%= link_to item[:label], item[:path], class: "block text-sm text-indigo-600 dark:text-indigo-400 hover:underline" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
